{% extends 'public/base.html.twig' %}

{% block title %}{{ document.title }} - EPROFOS{% endblock %}

{% block meta_description %}{{ document.content|striptags|slice(0, 160)|default(document.title ~ ' - Document légal EPROFOS') }}{% endblock %}

{% block body %}
    {# Modern Hero Section #}
    <section class="hero-section py-5">
        <div class="container">
            <div class="row align-items-center min-vh-50">
                <div class="col-lg-10 mx-auto text-center">
                    <span class="section-badge mb-3">DOCUMENT LÉGAL</span>
                    <h1 class="display-4 fw-bold mb-4">
                        {{ document.title }}
                    </h1>
                    {% if document.content %}
                    <p class="lead mb-4 opacity-90">
                        {{ document.content|striptags|slice(0, 200) }}{% if document.content|striptags|length > 200 %}...{% endif %}
                    </p>
                    {% endif %}
                    <div class="document-meta">
                        <span class="badge bg-white text-dark me-2">Version {{ document.version }}</span>
                        <span class="badge bg-white text-dark">Mis à jour le {{ document.updatedAt|date('d/m/Y') }}</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="container py-5">
        {# Document Actions #}
        <div class="row mb-5">
            <div class="col-lg-8 mx-auto">
                <div class="card border-0 shadow-sm" style="border-radius: 25px; background: linear-gradient(135deg, #fff8e1 0%, #ffecb3 100%);">
                    <div class="card-body p-4 text-center">
                        <div class="d-flex flex-wrap gap-3 justify-content-center align-items-center">
                            {% if document.hasFile %}
                            <a href="{{ document.fileUrl }}" 
                               target="_blank" 
                               class="btn btn-warning btn-lg" 
                               style="border-radius: 25px;">
                                <i class="fas fa-download me-2"></i>Télécharger le PDF
                            </a>
                            {% endif %}
                            
                            <a href="{{ path('app_legal_documents_download') }}" 
                               class="btn btn-outline-primary btn-lg" 
                               style="border-radius: 25px;">
                                <i class="fas fa-arrow-left me-2"></i>Tous les documents
                            </a>
                            
                            <button onclick="window.print()" 
                                    class="btn btn-outline-secondary btn-lg" 
                                    style="border-radius: 25px;">
                                <i class="fas fa-print me-2"></i>Imprimer
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Document Content #}
        <div class="row">
            <div class="col-lg-10 mx-auto">
                <div class="card border-0 shadow-sm" style="border-radius: 25px;">
                    <div class="card-body p-5">
                        {# Document Icon and Type #}
                        <div class="text-center mb-4">
                            {% if document.type == 'internal_regulation' %}
                                <div class="bg-danger text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 70px; height: 70px;">
                                    <i class="fas fa-gavel fa-2x"></i>
                                </div>
                                <h2 class="h4 text-danger">Règlement Intérieur</h2>
                            {% elseif document.type == 'student_handbook' %}
                                <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 70px; height: 70px;">
                                    <i class="fas fa-book fa-2x"></i>
                                </div>
                                <h2 class="h4 text-primary">Livret du Stagiaire</h2>
                            {% elseif document.type == 'training_terms' %}
                                <div class="bg-success text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 70px; height: 70px;">
                                    <i class="fas fa-file-contract fa-2x"></i>
                                </div>
                                <h2 class="h4 text-success">Conditions Générales de Formation</h2>
                            {% elseif document.type == 'accessibility_policy' %}
                                <div class="bg-info text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 70px; height: 70px;">
                                    <i class="fas fa-universal-access fa-2x"></i>
                                </div>
                                <h2 class="h4 text-info">Politique d'Accessibilité</h2>
                            {% elseif document.type == 'accessibility_procedures' %}
                                <div class="bg-purple text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 70px; height: 70px; background-color: #9c27b0;">
                                    <i class="fas fa-clipboard-list fa-2x"></i>
                                </div>
                                <h2 class="h4" style="color: #9c27b0;">Procédures d'Accessibilité</h2>
                            {% elseif document.type == 'accessibility_faq' %}
                                <div class="bg-warning text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 70px; height: 70px;">
                                    <i class="fas fa-question-circle fa-2x"></i>
                                </div>
                                <h2 class="h4 text-warning">FAQ Accessibilité</h2>
                            {% else %}
                                <div class="bg-secondary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 70px; height: 70px;">
                                    <i class="fas fa-file-pdf fa-2x"></i>
                                </div>
                                <h2 class="h4 text-secondary">Document</h2>
                            {% endif %}
                        </div>

                        {# Document Content #}
                        <div class="document-content">
                            {{ document.content|raw }}
                        </div>

                        {# Document Footer #}
                        <div class="document-footer mt-5 pt-4 border-top">
                            <div class="row">
                                <div class="col-md-6">
                                    <small class="text-muted">
                                        <strong>Version :</strong> {{ document.version }}<br>
                                        <strong>Dernière mise à jour :</strong> {{ document.updatedAt|date('d/m/Y à H:i') }}<br>
                                        {% if document.publishedAt %}
                                        <strong>Date de publication :</strong> {{ document.publishedAt|date('d/m/Y à H:i') }}
                                        {% endif %}
                                    </small>
                                </div>
                                <div class="col-md-6 text-md-end">
                                    <small class="text-muted">
                                        <strong>EPROFOS</strong><br>
                                        organisme de formation professionnelle<br>
                                        Numéro de déclaration d'activité : 11922345692
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Related Actions #}
        <div class="row mt-5">
            <div class="col-lg-8 mx-auto">
                <div class="card border-0 shadow-sm" style="border-radius: 25px; background: linear-gradient(135deg, #e8f5e8 0%, #c8e6c9 100%);">
                    <div class="card-body p-4 text-center">
                        <h4 class="fw-bold mb-3">
                            <i class="fas fa-question-circle me-2"></i>Des questions ?
                        </h4>
                        <p class="mb-3" style="line-height: 1.6;">
                            Si vous avez des questions concernant ce document ou nos formations,
                            n'hésitez pas à nous contacter.
                        </p>
                        <div class="d-flex flex-wrap gap-3 justify-content-center">
                            <a href="{{ path('app_contact_index') }}" 
                               class="btn btn-success" 
                               style="border-radius: 25px;">
                                <i class="fas fa-envelope me-2"></i>Contact général
                            </a>
                            
                            {% if document.type starts with 'accessibility' %}
                            <a href="{{ path('app_legal_accessibility') }}" 
                               class="btn btn-outline-info" 
                               style="border-radius: 25px;">
                                <i class="fas fa-universal-access me-2"></i>Accessibilité
                            </a>
                            {% endif %}
                            
                            <a href="{{ path('app_formations_index') }}" 
                               class="btn btn-outline-primary" 
                               style="border-radius: 25px;">
                                <i class="fas fa-graduation-cap me-2"></i>Nos formations
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .hero-section {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }
        
        .section-badge {
            background: rgba(255, 255, 255, 0.2);
            color: white;
            padding: 8px 16px;
            border-radius: 20px;
            font-size: 0.9rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
        }
        
        .document-meta .badge {
            padding: 8px 12px;
            font-size: 0.9rem;
        }
        
        .document-content {
            font-size: 1.05rem;
            line-height: 1.7;
        }
        
        .document-content h1,
        .document-content h2,
        .document-content h3,
        .document-content h4 {
            margin-top: 2rem;
            margin-bottom: 1rem;
            color: #333;
        }
        
        .document-content h1 {
            font-size: 1.8rem;
            border-bottom: 2px solid #dee2e6;
            padding-bottom: 0.5rem;
        }
        
        .document-content h2 {
            font-size: 1.5rem;
            color: #495057;
        }
        
        .document-content h3 {
            font-size: 1.3rem;
            color: #6c757d;
        }
        
        .document-content ul,
        .document-content ol {
            margin-bottom: 1.5rem;
            padding-left: 2rem;
        }
        
        .document-content li {
            margin-bottom: 0.5rem;
        }
        
        .document-content p {
            margin-bottom: 1rem;
            text-align: justify;
        }
        
        .document-content blockquote {
            border-left: 4px solid #007bff;
            background: #f8f9fa;
            padding: 1rem;
            margin: 1.5rem 0;
            border-radius: 0 8px 8px 0;
        }
        
        .document-content table {
            width: 100%;
            margin-bottom: 1.5rem;
            border-collapse: collapse;
        }
        
        .document-content table th,
        .document-content table td {
            padding: 0.75rem;
            border: 1px solid #dee2e6;
            text-align: left;
        }
        
        .document-content table th {
            background-color: #f8f9fa;
            font-weight: 600;
        }
        
        @media print {
            .hero-section,
            .card:first-child,
            .card:last-child {
                display: none !important;
            }
            
            .document-content {
                font-size: 12pt;
                line-height: 1.5;
            }
        }
    </style>
{% endblock %}
