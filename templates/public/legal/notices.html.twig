{% extends 'public/base.html.twig' %}

{% block title %}Mentions légales - EPROFOS{% endblock %}

{% block meta_description %}Mentions légales d'EPROFOS, École professionnelle de formation spécialisée. Informations légales, coordonnées et conditions d'utilisation.{% endblock %}

{% block body %}
    {# Modern Hero Section #}
    <section class="hero-section py-5">
        <div class="container">
            <div class="row align-items-center min-vh-50">
                <div class="col-lg-8 mx-auto text-center">
                    <span class="section-badge mb-3">INFORMATIONS LÉGALES</span>
                    <h1 class="display-4 fw-bold mb-4">
                        Mentions <span class="text-warning">légales</span>
                    </h1>
                    <p class="lead mb-4 opacity-90">
                        Informations légales et coordonnées d'EPROFOS, École professionnelle de formation spécialisée
                    </p>
                </div>
            </div>
        </div>
    </section>

    <div class="container py-5">
        {# Company Information Section #}
        <div class="row mb-5">
            <div class="col-lg-10 mx-auto">
                <div class="card border-0 shadow-sm" style="border-radius: 25px;">
                    <div class="card-body p-5">
                        <div class="text-center mb-5">
                            <div class="d-flex align-items-center justify-content-center mb-3">
                                <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 60px; height: 60px;">
                                    <i class="fas fa-building"></i>
                                </div>
                                <h2 class="h3 fw-bold mb-0">Informations sur l'entreprise</h2>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <div class="legal-info-item">
                                    <h5 class="fw-bold text-primary mb-2">
                                        <i class="fas fa-tag me-2"></i>Dénomination sociale
                                    </h5>
                                    <p class="mb-0">{{ legal_info.company_name }}</p>
                                </div>
                            </div>
                            
                            <div class="col-md-6 mb-4">
                                <div class="legal-info-item">
                                    <h5 class="fw-bold text-primary mb-2">
                                        <i class="fas fa-gavel me-2"></i>Forme juridique
                                    </h5>
                                    <p class="mb-0">{{ legal_info.legal_form }}</p>
                                </div>
                            </div>
                            
                            <div class="col-md-6 mb-4">
                                <div class="legal-info-item">
                                    <h5 class="fw-bold text-primary mb-2">
                                        <i class="fas fa-euro-sign me-2"></i>Capital social
                                    </h5>
                                    <p class="mb-0">{{ legal_info.capital }}</p>
                                </div>
                            </div>
                            
                            <div class="col-md-6 mb-4">
                                <div class="legal-info-item">
                                    <h5 class="fw-bold text-primary mb-2">
                                        <i class="fas fa-id-card me-2"></i>SIRET
                                    </h5>
                                    <p class="mb-0">{{ legal_info.siret }}</p>
                                </div>
                            </div>
                            
                            <div class="col-md-6 mb-4">
                                <div class="legal-info-item">
                                    <h5 class="fw-bold text-primary mb-2">
                                        <i class="fas fa-registered me-2"></i>RCS
                                    </h5>
                                    <p class="mb-0">{{ legal_info.rcs }}</p>
                                </div>
                            </div>
                            
                            <div class="col-md-6 mb-4">
                                <div class="legal-info-item">
                                    <h5 class="fw-bold text-primary mb-2">
                                        <i class="fas fa-receipt me-2"></i>Numéro TVA
                                    </h5>
                                    <p class="mb-0">{{ legal_info.vat_number }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Contact Information Section #}
        <div class="row mb-5">
            <div class="col-lg-10 mx-auto">
                <div class="card border-0 shadow-sm" style="border-radius: 25px; background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);">
                    <div class="card-body p-5">
                        <div class="text-center mb-5">
                            <div class="d-flex align-items-center justify-content-center mb-3">
                                <div class="bg-success text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 60px; height: 60px;">
                                    <i class="fas fa-map-marker-alt"></i>
                                </div>
                                <h2 class="h3 fw-bold mb-0">Coordonnées</h2>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <div class="contact-info-card p-4 bg-white rounded-3 shadow-sm h-100">
                                    <div class="d-flex align-items-start">
                                        <div class="bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3 flex-shrink-0" style="width: 50px; height: 50px;">
                                            <i class="fas fa-map-marker-alt text-primary"></i>
                                        </div>
                                        <div>
                                            <h5 class="fw-bold mb-2">Adresse</h5>
                                            <p class="mb-0 text-muted">
                                                {{ legal_info.address.street }}<br>
                                                {{ legal_info.address.postal_code }} {{ legal_info.address.city }}<br>
                                                {{ legal_info.address.country }}
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-6 mb-4">
                                <div class="contact-info-card p-4 bg-white rounded-3 shadow-sm h-100">
                                    <div class="d-flex align-items-start">
                                        <div class="bg-success bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3 flex-shrink-0" style="width: 50px; height: 50px;">
                                            <i class="fas fa-phone text-success"></i>
                                        </div>
                                        <div>
                                            <h5 class="fw-bold mb-2">Téléphone</h5>
                                            <p class="mb-0 text-muted">
                                                <a href="tel:{{ legal_info.phone }}" class="text-decoration-none">{{ legal_info.phone }}</a>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-6 mb-4">
                                <div class="contact-info-card p-4 bg-white rounded-3 shadow-sm h-100">
                                    <div class="d-flex align-items-start">
                                        <div class="bg-warning bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3 flex-shrink-0" style="width: 50px; height: 50px;">
                                            <i class="fas fa-envelope text-warning"></i>
                                        </div>
                                        <div>
                                            <h5 class="fw-bold mb-2">Email</h5>
                                            <p class="mb-0 text-muted">
                                                <a href="mailto:{{ legal_info.email }}" class="text-decoration-none">{{ legal_info.email }}</a>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-6 mb-4">
                                <div class="contact-info-card p-4 bg-white rounded-3 shadow-sm h-100">
                                    <div class="d-flex align-items-start">
                                        <div class="bg-info bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3 flex-shrink-0" style="width: 50px; height: 50px;">
                                            <i class="fas fa-user-tie text-info"></i>
                                        </div>
                                        <div>
                                            <h5 class="fw-bold mb-2">Directrice</h5>
                                            <p class="mb-0 text-muted">{{ legal_info.director }}</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Hosting Information Section #}
        <div class="row mb-5">
            <div class="col-lg-10 mx-auto">
                <div class="card border-0 shadow-sm" style="border-radius: 25px;">
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <div class="d-flex align-items-center justify-content-center mb-3">
                                <div class="bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 60px; height: 60px;">
                                    <i class="fas fa-server"></i>
                                </div>
                                <h2 class="h3 fw-bold mb-0">Hébergement</h2>
                            </div>
                        </div>
                        
                        <div class="text-center">
                            <div class="bg-light rounded-3 p-4 d-inline-block">
                                <h5 class="fw-bold mb-2">{{ legal_info.hosting.provider }}</h5>
                                <p class="mb-0 text-muted">{{ legal_info.hosting.address }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Legal Notice Section #}
        <div class="row mb-5">
            <div class="col-lg-10 mx-auto">
                <div class="card border-0 shadow-sm" style="border-radius: 25px; background: linear-gradient(135deg, #fff3cd 0%, #ffeaa7 100%);">
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <div class="d-flex align-items-center justify-content-center mb-3">
                                <div class="bg-warning text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 60px; height: 60px;">
                                    <i class="fas fa-exclamation-triangle"></i>
                                </div>
                                <h2 class="h3 fw-bold mb-0">Avertissement</h2>
                            </div>
                        </div>
                        
                        <div class="text-center">
                            <p class="mb-0" style="line-height: 1.7;">
                                Les informations contenues sur ce site sont données à titre indicatif et peuvent être modifiées sans préavis. 
                                EPROFOS ne saurait être tenue responsable de l'exactitude, de la complétude ou de l'actualité des informations diffusées sur ce site.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Call to Action Section #}
    <section class="py-5 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <div class="card border-0 shadow-sm" style="border-radius: 25px;">
                        <div class="card-body p-5 text-center">
                            <div class="mb-4">
                                <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                                    <i class="fas fa-question-circle fa-2x"></i>
                                </div>
                            </div>
                            <h3 class="fw-bold mb-3">Une question ?</h3>
                            <p class="text-muted mb-4" style="line-height: 1.7;">
                                N'hésitez pas à nous contacter pour toute information complémentaire.
                            </p>
                            <a href="{{ path('app_contact_index') }}" class="btn btn-primary btn-lg" style="border-radius: 25px;">
                                <i class="fas fa-envelope me-2"></i>Nous contacter
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Modern Hero Section */
        .hero-section {
            background: linear-gradient(135deg, #6f42c1 0%, #9c27b0 50%, #e91e63 100%);
            color: white;
            position: relative;
            overflow: hidden;
        }
        
        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.1);
            z-index: 1;
        }
        
        .hero-section .container {
            position: relative;
            z-index: 2;
        }
        
        .section-badge {
            display: inline-block;
            padding: 0.5rem 1.5rem;
            background: rgba(255, 255, 255, 0.2);
            border: 1px solid rgba(255, 255, 255, 0.3);
            border-radius: 25px;
            font-size: 0.875rem;
            font-weight: 600;
            letter-spacing: 0.5px;
            backdrop-filter: blur(10px);
        }
        
        /* Legal Info Items */
        .legal-info-item {
            padding: 1.5rem;
            background: rgba(108, 117, 125, 0.05);
            border-radius: 15px;
            transition: all 0.3s ease;
            height: 100%;
        }
        
        .legal-info-item:hover {
            background: rgba(108, 117, 125, 0.1);
            transform: translateY(-2px);
        }
        
        /* Contact Info Cards */
        .contact-info-card {
            transition: all 0.3s ease;
        }
        
        .contact-info-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1) !important;
        }
        
        /* Card Hover Effects */
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1) !important;
        }
        
        /* Modern Button Styles */
        .btn {
            font-weight: 600;
            transition: all 0.3s ease;
        }
        
        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }
        
        /* Responsive Design */
        @media (max-width: 991.98px) {
            .hero-section {
                text-align: center;
            }
            
            .legal-info-item {
                margin-bottom: 1rem;
            }
        }
    </style>
{% endblock %}