    <div class="container py-5">
        {# Modern Methodology Steps #}
        <div class="row mb-5" id="methodology-steps">
            <div class="col-12">
                <div class="text-center mb-5">
                    <div class="d-flex align-items-center justify-content-center mb-3">
                        <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 60px; height: 60px;">
                            <i class="fas fa-route"></i>
                        </div>
                        <h2 class="h3 fw-bold mb-0">Notre méthodologie en 4 étapes</h2>
                    </div>
                    <p class="text-muted">Un processus structuré pour des formations sur mesure et efficaces</p>
                </div>
                
                <div class="methodology-timeline">
                    {% set step_colors = ['primary', 'success', 'warning', 'info'] %}
                    {% set step_icons = ['fas fa-search', 'fas fa-drafting-compass', 'fas fa-rocket', 'fas fa-chart-line'] %}
                    {% set step_counter = 0 %}
                    
                    {% for key, step in methodology %}
                        {% set step_counter = step_counter + 1 %}
                        {% set color = step_colors[loop.index0] %}
                        {% set icon = step_icons[loop.index0] %}
                        
                        <div class="methodology-step mb-5">
                            <div class="row align-items-center {{ loop.index is odd ? '' : 'flex-row-reverse' }}">
                                <div class="col-lg-6 mb-4">
                                    <div class="card border-0 shadow-sm h-100" style="border-radius: 20px; {{ loop.index is even ? 'background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);' : '' }}">
                                        <div class="card-body p-4">
                                            <div class="d-flex align-items-center mb-3">
                                                <div class="step-number-badge bg-{{ color }} text-white me-3">
                                                    <span class="step-number">{{ step_counter }}</span>
                                                </div>
                                                <h3 class="fw-bold mb-0 text-{{ color }}">
                                                    <i class="{{ icon }} me-2"></i>{{ step.title }}
                                                </h3>
                                            </div>
                                            <p class="text-muted mb-4" style="line-height: 1.7;">{{ step.description }}</p>
                                            
                                            <div class="step-details">
                                                <h5 class="fw-bold mb-3">Étapes clés :</h5>
                                                <div class="row">
                                                    {% for detail in step.steps %}
                                                        <div class="col-12 mb-2">
                                                            <div class="d-flex align-items-start">
                                                                <div class="bg-{{ color }} text-white rounded-circle d-flex align-items-center justify-content-center me-3 flex-shrink-0" style="width: 25px; height: 25px;">
                                                                    <i class="fas fa-check" style="font-size: 0.7rem;"></i>
                                                                </div>
                                                                <span style="line-height: 1.6;">{{ detail }}</span>
                                                            </div>
                                                        </div>
                                                    {% endfor %}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="col-lg-6 mb-4">
                                    <div class="text-center">
                                        <div class="step-icon-container bg-{{ color }} bg-opacity-10 rounded-circle mx-auto mb-3">
                                            <i class="{{ icon }} fa-4x text-{{ color }}"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            {% if not loop.last %}
                                <div class="step-connector text-center my-5">
                                    <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                        <i class="fas fa-arrow-down fa-2x text-{{ step_colors[loop.index] }}"></i>
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>

