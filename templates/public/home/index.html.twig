    {# CTA Section #}
    <section class="py-5 bg-primary text-white">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <h3 class="fw-bold mb-2">Prêt à développer vos compétences ?</h3>
                    <p class="mb-0">
                        Contactez-nous dès aujourd'hui pour discuter de vos besoins en formation 
                        et obtenir un devis personnalisé.
                    </p>
                </div>
                <div class="col-lg-4 text-lg-end">
                    <a href="{{ path('app_contact_quote') }}" class="btn btn-warning btn-lg me-2">
                        <i class="fas fa-calculator me-2"></i>Devis gratuit
                    </a>
                    <a href="{{ path('app_contact_information') }}" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-phone me-2"></i>Nous contacter
                    </a>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Add smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    </script>
{% endblock %}