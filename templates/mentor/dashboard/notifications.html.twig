    <style>
        .notification-item {
            padding: 1rem;
            transition: background-color 0.2s ease;
        }
        .notification-item:hover {
            background-color: var(--tblr-gray-50);
        }
        .notification-item.unread {
            background-color: var(--tblr-blue-lt);
            border-left: 3px solid var(--tblr-blue);
        }
        .notification-item.priority-high {
            background-color: var(--tblr-red-lt);
            border-left: 3px solid var(--tblr-red);
        }
        .notification-item.read {
            opacity: 0.7;
        }
    </style>

    <script>
        function markAsRead(button) {
            const notificationItem = button.closest('.notification-item');
            const notificationId = notificationItem.dataset.notificationId;
            
            // Remove unread class and add read class
            notificationItem.classList.remove('unread', 'priority-high');
            notificationItem.classList.add('read');
            
            // Hide the mark as read button
            button.style.display = 'none';
            
            // TODO: Send AJAX request to mark as read in backend
            console.log('Marking notification as read:', notificationId);
        }

        function markAllAsRead() {
            const unreadItems = document.querySelectorAll('.notification-item.unread');
            
            unreadItems.forEach(item => {
                item.classList.remove('unread', 'priority-high');
                item.classList.add('read');
                
                const markButton = item.querySelector('.btn-ghost-secondary, .btn-ghost-red');
                if (markButton) {
                    markButton.style.display = 'none';
                }
            });
            
            // TODO: Send AJAX request to mark all as read
            console.log('Marking all notifications as read');
            
            // Show success message
            if (unreadItems.length > 0) {
                alert('Toutes les notifications ont été marquées comme lues.');
            }
        }

        function deleteAllRead() {
            const readItems = document.querySelectorAll('.notification-item.read');
            
            if (readItems.length === 0) {
                alert('Aucune notification lue à supprimer.');
                return;
            }
            
            if (confirm('Êtes-vous sûr de vouloir supprimer toutes les notifications lues ?')) {
                readItems.forEach(item => {
                    item.remove();
                });
                
                // TODO: Send AJAX request to delete read notifications
                console.log('Deleting all read notifications');
                
                alert('Les notifications lues ont été supprimées.');
            }
        }
    </script>
