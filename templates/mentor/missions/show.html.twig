{% extends 'mentor/base.html.twig' %}

{% block body %}
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{ path('mentor_missions_index') }}">Missions</a></li>
                            <li class="breadcrumb-item active">{{ mission.title }}</li>
                        </ol>
                    </nav>
                    <h2 class="page-title">{{ mission.title }}</h2>
                    <div class="page-subtitle">
                        Créée le {{ mission.createdAt|date('d/m/Y à H:i') }}
                    </div>
                </div>
                <div class="col-auto ms-auto d-print-none">
                    <div class="btn-list">
                        {% if mission.activeAssignmentsCount == 0 %}
                            <a href="{{ path('mentor_missions_edit', {id: mission.id}) }}" class="btn btn-primary">
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                    <path d="M7 7h-1a2 2 0 0 0 -2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2 -2v-1"/>
                                    <path d="M20.385 6.585a2.1 2.1 0 0 0 -2.97 -2.97l-8.415 8.385v3h3l8.385 -8.415z"/>
                                    <path d="M16 5l3 3"/>
                                </svg>
                                Modifier
                            </a>
                        {% endif %}
                        <a href="{{ path('mentor_assignments_create', {mission: mission.id}) }}" class="btn btn-success">
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                <path d="M12 5l0 14"/>
                                <path d="M5 12l14 0"/>
                            </svg>
                            Assigner à un alternant
                        </a>
                        <form method="post" action="{{ path('mentor_missions_toggle_status', {id: mission.id}) }}" style="display: inline;">
                            <button type="submit" class="btn {{ mission.isActive ? 'btn-outline-warning' : 'btn-outline-success' }}" onclick="return confirm('Êtes-vous sûr de vouloir {{ mission.isActive ? 'désactiver' : 'activer' }} cette mission ?')">
                                {{ mission.isActive ? 'Désactiver' : 'Activer' }}
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container-xl">
        <div class="row row-deck row-cards">
            <!-- Mission Details -->
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Détails de la mission</h3>
                        <div class="card-actions">
                            {% if mission.isActive %}
                                <span class="badge bg-success text-white">Active</span>
                            {% else %}
                                <span class="badge bg-secondary text-white">Inactive</span>
                            {% endif %}
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label text-white">Description</label>
                            <div class="text-muted">{{ mission.description|nl2br }}</div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label text-white">Type de mission</label>
                                <div><span class="badge bg-blue text-white">{{ mission.termLabel }}</span></div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label text-white">Complexité</label>
                                <div>
                                    {% set complexity_colors = {'debutant': 'green', 'intermediaire': 'yellow', 'avance': 'red'} %}
                                    <span class="badge bg-{{ complexity_colors[mission.complexity] ?? 'secondary' }} text-white">
                                        {{ mission.complexityLabel }}
                                    </span>
                                </div>
                            </div>
                        </div>

                        {% if mission.duration %}
                            <div class="mb-3">
                                <label class="form-label text-white">Durée estimée</label>
                                <div class="text-muted">{{ mission.duration }} heures</div>
                            </div>
                        {% endif %}

                        {% if mission.objectives %}
                            <div class="mb-3">
                                <label class="form-label text-white">Objectifs</label>
                                <ul class="list-unstyled">
                                    {% for objective in mission.objectives %}
                                        <li class="d-flex mb-2">
                                            <span class="me-2">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon text-success" width="16" height="16" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                                    <path d="M9 12l2 2l4 -4"/>
                                                    <path d="M21 12c0 .5 -.1 1 -.3 1.5"/>
                                                </svg>
                                            </span>
                                            <span>{{ objective }}</span>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        {% endif %}

                        {% if mission.requiredSkills %}
                            <div class="mb-3">
                                <label class="form-label text-white">Compétences requises</label>
                                <div class="mt-2">
                                    {% for skill in mission.requiredSkills %}
                                        <span class="badge bg-azure me-1 mb-1 text-white">{{ skill }}</span>
                                    {% endfor %}
                                </div>
                            </div>
                        {% endif %}

                        {% if mission.evaluationCriteria %}
                            <div class="mb-3">
                                <label class="form-label text-white">Critères d'évaluation</label>
                                <ul class="list-unstyled">
                                    {% for criterion in mission.evaluationCriteria %}
                                        <li class="d-flex mb-2">
                                            <span class="me-2">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon text-warning" width="16" height="16" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                                    <path d="M12 2l3.09 6.26l6.91 1.01l-5 4.87l1.18 6.88l-6.18 -3.25l-6.18 3.25l1.18 -6.88l-5 -4.87l6.91 -1.01z"/>
                                                </svg>
                                            </span>
                                            <span>{{ criterion }}</span>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        {% endif %}

                        {% if mission.prerequisites and mission.prerequisites|length > 0 %}
                            <div class="mb-3">
                                <label class="form-label text-white">Prérequis pédagogiques</label>
                                <ul class="list-unstyled">
                                    {% for prerequisite in mission.prerequisites %}
                                        <li class="d-flex mb-2">
                                            <span class="me-2">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon text-info" width="16" height="16" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                                    <path d="M9 12l2 2l4 -4"/>
                                                    <path d="M21 12c0 .5 -.1 1 -.3 1.5"/>
                                                </svg>
                                            </span>
                                            <span>{{ prerequisite }}</span>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        {% endif %}

                        {% if mission.skillsToAcquire %}
                            <div class="mb-3">
                                <label class="form-label text-white">Compétences à acquérir</label>
                                <div class="mt-2">
                                    {% for skill in mission.skillsToAcquire %}
                                        <span class="badge bg-success me-1 mb-1 text-white">{{ skill }}</span>
                                    {% endfor %}
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>

            <!-- Mission Statistics -->
            <div class="col-md-4">
                <div class="card mb-3">
                    <div class="card-header">
                        <h3 class="card-title">Statistiques</h3>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <div class="row">
                                <div class="col-auto">
                                    <span class="bg-primary text-white avatar">{{ mission.assignments|length }}</span>
                                </div>
                                <div class="col">
                                    <div class="font-weight-medium">
                                        Assignations totales
                                    </div>
                                    <div class="text-muted">
                                        {{ mission.activeAssignmentsCount }} actives
                                    </div>
                                </div>
                            </div>
                        </div>

                        {% if mission.assignments|length > 0 %}
                            <div class="mb-3">
                                <div class="row">
                                    <div class="col-auto">
                                        <span class="bg-success text-white avatar">{{ mission.completedAssignmentsCount }}</span>
                                    </div>
                                    <div class="col">
                                        <div class="font-weight-medium">
                                            Réussies
                                        </div>
                                        <div class="text-muted">
                                            {{ mission.completedAssignmentsCount }} terminées
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <div class="row">
                                    <div class="col-auto">
                                        <span class="bg-warning text-white avatar">{{ mission.progressScore|round }}</span>
                                    </div>
                                    <div class="col">
                                        <div class="font-weight-medium">
                                            Progression moyenne
                                        </div>
                                        <div class="text-muted">
                                            {{ mission.progressScore|round }}%
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="card mt-3">
                    <div class="card-header">
                        <h3 class="card-title">Actions rapides</h3>
                    </div>
                    <div class="card-body">
                        <div class="list-group list-group-flush">
                            <a href="{{ path('mentor_assignments_create', {mission: mission.id}) }}" class="list-group-item list-group-item-action">
                                <div class="row align-items-center">
                                    <div class="col-auto">
                                        <span class="bg-success text-white avatar avatar-sm">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                                <path d="M12 5l0 14"/>
                                                <path d="M5 12l14 0"/>
                                            </svg>
                                        </span>
                                    </div>
                                    <div class="col text-truncate">
                                        <div class="text-reset d-block">Nouvelle assignation</div>
                                        <div class="d-block text-muted text-truncate mt-n1">
                                            Assigner cette mission à un alternant
                                        </div>
                                    </div>
                                </div>
                            </a>
                            
                            <a href="{{ path('mentor_assignments_index', {mission: mission.id}) }}" class="list-group-item list-group-item-action">
                                <div class="row align-items-center">
                                    <div class="col-auto">
                                        <span class="bg-primary text-white avatar avatar-sm">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                                <path d="M9 11l3 3l8 -8"/>
                                                <path d="M20 12v6a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2v-12a2 2 0 0 1 2 -2h9"/>
                                            </svg>
                                        </span>
                                    </div>
                                    <div class="col text-truncate">
                                        <div class="text-reset d-block">Voir assignations</div>
                                        <div class="d-block text-muted text-truncate mt-n1">
                                            Gérer les assignations existantes
                                        </div>
                                    </div>
                                </div>
                            </a>

                            {% if mission.assignments|length > 0 %}
                                <a href="{{ path('mentor_assignments_index', {mission: mission.id}) }}" class="list-group-item list-group-item-action">
                                    <div class="row align-items-center">
                                        <div class="col-auto">
                                            <span class="bg-info text-white avatar avatar-sm">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                                    <path d="M3 3v18h18"/>
                                                    <path d="M18 17l-6 -6l-2 2l-4 -4"/>
                                                </svg>
                                            </span>
                                        </div>
                                        <div class="col text-truncate">
                                            <div class="text-reset d-block">Historique des assignations</div>
                                            <div class="d-block text-muted text-truncate mt-n1">
                                                Voir l'historique et les rapports
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Assignments List -->
        {% if mission.assignments|length > 0 %}
            <div class="row mt-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Assignations récentes</h3>
                            <div class="card-actions">
                                <a href="{{ path('mentor_assignments_index', {mission: mission.id}) }}" class="btn btn-primary btn-sm">
                                    Voir toutes
                                </a>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table class="table card-table table-vcenter">
                                <thead>
                                    <tr>
                                        <th>Alternant</th>
                                        <th>Date d'assignation</th>
                                        <th>Progression</th>
                                        <th>Statut</th>
                                        <th>Date limite</th>
                                        <th class="w-1">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for assignment in mission.assignments|slice(0, 5) %}
                                        <tr>
                                            <td>
                                                <div class="d-flex py-1 align-items-center">
                                                    <span class="avatar me-2">{{ assignment.student.firstName|first|upper }}{{ assignment.student.lastName|first|upper }}</span>
                                                    <div class="flex-fill">
                                                        <div class="font-weight-medium">{{ assignment.student.fullName }}</div>
                                                        <div class="text-muted">{{ assignment.student.email }}</div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-muted">
                                                {{ assignment.createdAt|date('d/m/Y') }}
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <span class="me-2">{{ assignment.completionRate|round }}%</span>
                                                    <div class="progress" style="width: 100px;">
                                                        <div class="progress-bar" role="progressbar" style="width: {{ assignment.completionRate }}%"></div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                {% if assignment.isCompleted %}
                                                    <span class="badge bg-success text-white">Terminée</span>
                                                {% elseif assignment.isOverdue %}
                                                    <span class="badge bg-danger text-white">En retard</span>
                                                {% else %}
                                                    <span class="badge bg-warning text-white">En cours</span>
                                                {% endif %}
                                            </td>
                                            <td class="text-muted">
                                                {% if assignment.endDate %}
                                                    {{ assignment.endDate|date('d/m/Y') }}
                                                {% else %}
                                                    <span class="text-muted">Non définie</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <a href="{{ path('mentor_assignments_show', {id: assignment.id}) }}" class="btn btn-sm btn-outline-primary">
                                                    Voir
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
