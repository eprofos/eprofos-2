{% extends 'mentor/base.html.twig' %}

{% block body %}
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <h2 class="page-title">{{ page_title }}</h2>
                    <div class="page-subtitle">
                        Gérer les assignations de missions
                    </div>
                </div>
                <div class="col-auto ms-auto d-print-none">
                    <div class="btn-list">
                        <a href="{{ path('mentor_assignments_create') }}" class="btn btn-primary">
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                <path d="M12 5l0 14"/>
                                <path d="M5 12l14 0"/>
                            </svg>
                            Nouvelle assignation
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container-xl">
        <!-- Statistics Cards -->
        <div class="row row-deck row-cards mb-4">
            <div class="col-sm-6 col-lg-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="subheader">Total assignations</div>
                        </div>
                        <div class="h1 mb-3">{{ stats.total_assignments ?? 0 }}</div>
                        <div class="d-flex mb-2">
                            <div class="flex-fill">
                                <div class="progress progress-sm">
                                    <div class="progress-bar bg-primary" style="width: 100%"></div>
                                </div>
                            </div>
                        </div>
                        <div class="text-muted">Créées par vous</div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-lg-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="subheader">En cours</div>
                        </div>
                        <div class="h1 mb-3">{{ stats.active_assignments ?? 0 }}</div>
                        <div class="d-flex mb-2">
                            <div class="flex-fill">
                                <div class="progress progress-sm">
                                    <div class="progress-bar bg-warning" style="width: 75%"></div>
                                </div>
                            </div>
                        </div>
                        <div class="text-muted">Assignations actives</div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-lg-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="subheader">Terminées</div>
                        </div>
                        <div class="h1 mb-3">{{ stats.completed_assignments ?? 0 }}</div>
                        <div class="d-flex mb-2">
                            <div class="flex-fill">
                                <div class="progress progress-sm">
                                    <div class="progress-bar bg-success" style="width: 85%"></div>
                                </div>
                            </div>
                        </div>
                        <div class="text-muted">Missions réussies</div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-lg-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="subheader">Progression moyenne</div>
                        </div>
                        <div class="h1 mb-3">{{ stats.average_progress ?? 0 }}%</div>
                        <div class="d-flex mb-2">
                            <div class="flex-fill">
                                <div class="progress progress-sm">
                                    <div class="progress-bar bg-info" style="width: {{ stats.average_progress ?? 0 }}%"></div>
                                </div>
                            </div>
                        </div>
                        <div class="text-muted">Toutes assignations</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Filters -->
        <div class="row mb-3">
            <div class="col">
                <div class="card">
                    <div class="card-body">
                        <form method="GET" class="row g-3">
                            <div class="col-md-3">
                                <label class="form-label">Statut</label>
                                <select name="status" class="form-select">
                                    <option value="all" {{ filters.status == 'all' ? 'selected' : '' }}>Toutes</option>
                                    <option value="active" {{ filters.status == 'active' ? 'selected' : '' }}>En cours</option>
                                    <option value="completed" {{ filters.status == 'completed' ? 'selected' : '' }}>Terminées</option>
                                    <option value="overdue" {{ filters.status == 'overdue' ? 'selected' : '' }}>En retard</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Mission</label>
                                <select name="mission" class="form-select">
                                    <option value="all" {{ filters.mission == 'all' ? 'selected' : '' }}>Toutes</option>
                                    {% for mission in available_missions %}
                                        <option value="{{ mission.id }}" {{ filters.mission == mission.id ? 'selected' : '' }}>{{ mission.title }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Alternant</label>
                                <select name="student" class="form-select">
                                    <option value="all" {{ filters.student == 'all' ? 'selected' : '' }}>Tous</option>
                                    {% for student in students %}
                                        <option value="{{ student.id }}" {{ filters.student == student.id ? 'selected' : '' }}>{{ student.fullName }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="col-md-3 d-flex align-items-end">
                                <button type="submit" class="btn btn-primary me-2">Filtrer</button>
                                <a href="{{ path('mentor_assignments_index') }}" class="btn btn-outline-secondary">Reset</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Assignments List -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="table-responsive">
                        <table class="table table-vcenter card-table">
                            <thead>
                                <tr>
                                    <th>Alternant</th>
                                    <th>Mission</th>
                                    <th>Date d'assignation</th>
                                    <th>Date limite</th>
                                    <th>Progression</th>
                                    <th>Statut</th>
                                    <th class="w-1">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for assignment in assignments %}
                                    <tr>
                                        <td>
                                            <div class="d-flex py-1 align-items-center">
                                                <span class="avatar me-2">{{ assignment.student.firstName|first|upper }}{{ assignment.student.lastName|first|upper }}</span>
                                                <div class="flex-fill">
                                                    <div class="font-weight-medium">{{ assignment.student.fullName }}</div>
                                                    <div class="text-muted">{{ assignment.student.email }}</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex py-1 align-items-center">
                                                <div class="flex-fill">
                                                    <div class="font-weight-medium">{{ assignment.mission.title }}</div>
                                                    <div class="text-muted">
                                                        <span class="badge bg-blue">{{ assignment.mission.termLabel }}</span>
                                                        {% set complexity_colors = {'debutant': 'green', 'intermediaire': 'yellow', 'avance': 'red'} %}
                                                        <span class="badge bg-{{ complexity_colors[assignment.mission.complexity] ?? 'secondary' }}">
                                                            {{ assignment.mission.complexityLabel }}
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-muted">
                                                                                    <td>
                                            {{ assignment.startDate|date('d/m/Y') }}
                                        </td>
                                        <td>
                                            {% if assignment.endDate %}
                                                {{ assignment.endDate|date('d/m/Y') }}
                                                {% if assignment.isOverdue %}
                                                    <span class="badge bg-danger ms-1">Retard</span>
                                                {% endif %}
                                            {% else %}
                                                <span class="text-muted">Non définie</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <span class="me-2">{{ assignment.completionRate|round }}%</span>
                                                <div class="progress" style="width: 100px;"> 
                                                        {% if assignment.completionRate >= 100 %}bg-success
                                                        {% elseif assignment.completionRate >= 75 %}bg-info
                                                        {% elseif assignment.completionRate >= 50 %}bg-warning
                                                        {% else %}bg-danger{% endif %}" 
                                                        role="progressbar" 
                                                        style="width: {{ assignment.completionRate }}%">
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            {% if assignment.isCompleted %}
                                                <span class="badge bg-success">Terminée</span>
                                            {% elseif assignment.isOverdue %}
                                                <span class="badge bg-danger">En retard</span>
                                            {% else %}
                                                <span class="badge bg-warning">En cours</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <div class="btn-list flex-nowrap">
                                                <a href="{{ path('mentor_assignments_show', {id: assignment.id}) }}" class="btn btn-sm btn-outline-primary">
                                                    Voir
                                                </a>
                                                <div class="dropdown">
                                                    <button class="btn btn-sm dropdown-toggle align-text-top" data-bs-toggle="dropdown">
                                                        Actions
                                                    </button>
                                                    <div class="dropdown-menu dropdown-menu-end">
                                                        <a class="dropdown-item" href="{{ path('mentor_assignments_show', {id: assignment.id}) }}">
                                                            <svg xmlns="http://www.w3.org/2000/svg" class="icon dropdown-item-icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M10 12a2 2 0 1 0 4 0a2 2 0 0 0 -4 0"/><path d="M21 12c-2.4 4 -5.4 6 -9 6c-3.6 0 -6.6 -2 -9 -6c2.4 -4 5.4 -6 9 -6c3.6 0 6.6 2 9 6"/></svg>
                                                            Voir détails
                                                        </a>
                                                        {% if not assignment.isCompleted %}
                                                            <a class="dropdown-item" href="{{ path('mentor_assignments_edit', {id: assignment.id}) }}">
                                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon dropdown-item-icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M7 7h-1a2 2 0 0 0 -2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2 -2v-1"/><path d="M20.385 6.585a2.1 2.1 0 0 0 -2.97 -2.97l-8.415 8.385v3h3l8.385 -8.415z"/><path d="M16 5l3 3"/></svg>
                                                                Modifier
                                                            </a>
                                                            <form method="post" action="{{ path('mentor_assignments_progress', {id: assignment.id}) }}" style="display: inline;">
                                                                <input type="hidden" name="_token" value="{{ csrf_token('progress' ~ assignment.id) }}">
                                                                <button type="submit" class="dropdown-item border-0 bg-transparent">
                                                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon dropdown-item-icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M9 11l3 3l8 -8"/><path d="M20 12v6a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2v-12a2 2 0 0 1 2 -2h9"/></svg>
                                                                    Mettre à jour progression
                                                                </button>
                                                            </form>
                                                        {% endif %}
                                                        {% if assignment.completionRate >= 100 and not assignment.isCompleted %}
                                                            <form method="post" action="{{ path('mentor_assignments_complete', {id: assignment.id}) }}" style="display: inline;">
                                                                <button type="submit" class="dropdown-item text-success" onclick="return confirm('Êtes-vous sûr de vouloir marquer cette assignation comme terminée ?')">
                                                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon dropdown-item-icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M7 12l5 5l10 -10"/></svg>
                                                                    Marquer comme terminée
                                                                </button>
                                                            </form>
                                                        {% endif %}
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="7" class="text-center text-muted">
                                            <div class="empty">
                                                <div class="empty-icon">
                                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                                        <path d="M9 12l2 2l4 -4"/>
                                                        <path d="M21 12c0 .5 -.1 1 -.3 1.5"/>
                                                    </svg>
                                                </div>
                                                <p class="empty-title">Aucune assignation trouvée</p>
                                                <p class="empty-subtitle text-muted">
                                                    Créez votre première assignation pour commencer à suivre les missions de vos alternants.
                                                </p>
                                                <div class="empty-action">
                                                    <a href="{{ path('mentor_assignments_create') }}" class="btn btn-primary">
                                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                                            <path d="M12 5l0 14"/>
                                                            <path d="M5 12l14 0"/>
                                                        </svg>
                                                        Créer une assignation
                                                    </a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    
                    {% if total_pages > 1 %}
                        <div class="card-footer d-flex align-items-center">
                            <p class="m-0 text-muted">
                                Affichage de {{ ((current_page - 1) * 10) + 1 }} à {{ min(current_page * 10, total_count) }} sur {{ total_count }} assignations
                            </p>
                            <ul class="pagination m-0 ms-auto">
                                {% if current_page > 1 %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ path('mentor_assignments_index', app.request.query.all|merge({page: current_page - 1})) }}">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M15 6l-6 6l6 6"/></svg>
                                            prev
                                        </a>
                                    </li>
                                {% endif %}
                                
                                {% for page in range(max(1, current_page - 2), min(total_pages, current_page + 2)) %}
                                    <li class="page-item {{ page == current_page ? 'active' : '' }}">
                                        <a class="page-link" href="{{ path('mentor_assignments_index', app.request.query.all|merge({page: page})) }}">{{ page }}</a>
                                    </li>
                                {% endfor %}
                                
                                {% if current_page < total_pages %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ path('mentor_assignments_index', app.request.query.all|merge({page: current_page + 1})) }}">
                                            next
                                            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M9 6l6 6l-6 6"/></svg>
                                        </a>
                                    </li>
                                {% endif %}
                            </ul>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
