<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}EPROFOS - École professionnelle de formation spécialisée{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand" href="{{ path('admin_needs_analysis_index') }}">
                    <strong>EPROFOS</strong>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('certificate_verify_form') }}">
                                <i class="fas fa-certificate me-1"></i>
                                Vérifier un certificat
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('admin_needs_analysis_index') }}">
                                <i class="fas fa-clipboard-list me-1"></i>
                                Analyses des besoins
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('admin_certificate_index') }}">
                                <i class="fas fa-shield-alt me-1"></i>
                                Admin Certificats
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <main>
            {% for flash_error in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    {{ flash_error }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            {% for flash_success in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{ flash_success }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            {% for flash_warning in app.flashes('warning') %}
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    {{ flash_warning }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            {% for flash_info in app.flashes('info') %}
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    {{ flash_info }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            {% block body %}{% endblock %}
        </main>

        <footer class="bg-light mt-5 py-4">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <h5>EPROFOS</h5>
                        <p class="text-muted">École professionnelle de formation spécialisée</p>
                    </div>
                    <div class="col-md-6 text-md-end">
                        <p class="text-muted">
                            <small>&copy; {{ 'now'|date('Y') }} EPROFOS. Tous droits réservés.</small>
                        </p>
                    </div>
                </div>
            </div>
        </footer>
    </body>
</html>