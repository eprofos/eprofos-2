{% extends 'admin/base.html.twig' %}

{% set page_title = session.id ? 'Modifier la session' : 'Nouvelle session' %}
{% set breadcrumb = [
    { label: 'Admin', url: path('admin_dashboard') },
    { label: 'Sessions', url: path('admin_session_index') },
    { label: session.id ? 'Modifier' : 'Nouvelle session' }
] %}

{% block body %}
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">{{ session.id ? 'Modifier la session' : 'Nouvelle session' }}</h3>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.name) }}
                                {{ form_widget(form.name) }}
                                {{ form_errors(form.name) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.formation) }}
                                {{ form_widget(form.formation) }}
                                {{ form_errors(form.formation) }}
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        {{ form_label(form.description) }}
                        {{ form_widget(form.description) }}
                        {{ form_errors(form.description) }}
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.startDate) }}
                                {{ form_widget(form.startDate) }}
                                {{ form_errors(form.startDate) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.endDate) }}
                                {{ form_widget(form.endDate) }}
                                {{ form_errors(form.endDate) }}
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.location) }}
                                {{ form_widget(form.location) }}
                                {{ form_errors(form.location) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.registrationDeadline) }}
                                {{ form_widget(form.registrationDeadline) }}
                                {{ form_errors(form.registrationDeadline) }}
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        {{ form_label(form.address) }}
                        {{ form_widget(form.address) }}
                        {{ form_errors(form.address) }}
                    </div>
                    
                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                {{ form_label(form.maxCapacity) }}
                                {{ form_widget(form.maxCapacity) }}
                                {{ form_errors(form.maxCapacity) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                {{ form_label(form.minCapacity) }}
                                {{ form_widget(form.minCapacity) }}
                                {{ form_errors(form.minCapacity) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                {{ form_label(form.price) }}
                                {{ form_widget(form.price) }}
                                {{ form_errors(form.price) }}
                                {{ form_help(form.price) }}
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.status) }}
                                {{ form_widget(form.status) }}
                                {{ form_errors(form.status) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.instructor) }}
                                {{ form_widget(form.instructor) }}
                                {{ form_errors(form.instructor) }}
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        {{ form_label(form.notes) }}
                        {{ form_widget(form.notes) }}
                        {{ form_errors(form.notes) }}
                    </div>
                    
                    <!-- ============== ALTERNANCE SECTION ============== -->
                    <hr class="my-4">
                    <h5 class="alternance-section-header">
                        <i class="fas fa-briefcase"></i>
                        Paramètres Alternance
                    </h5>
                    
                    <div class="mb-3">
                        <div class="form-check">
                            {{ form_widget(form.isAlternanceSession) }}
                            {{ form_label(form.isAlternanceSession) }}
                        </div>
                        {{ form_errors(form.isAlternanceSession) }}
                        {% if form.isAlternanceSession.vars.help %}
                            <div class="form-text">{{ form.isAlternanceSession.vars.help }}</div>
                        {% endif %}
                    </div>
                    
                    <!-- Alternance fields - controlled by Stimulus -->
                    <div class="alternance-fields" data-alternance-form-target="fieldsContainer">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.alternanceType) }}
                                    {{ form_widget(form.alternanceType) }}
                                    {{ form_errors(form.alternanceType) }}
                                    {% if form.alternanceType.vars.help %}
                                        <div class="form-text">{{ form.alternanceType.vars.help }}</div>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.minimumAlternanceDuration) }}
                                    {{ form_widget(form.minimumAlternanceDuration) }}
                                    {{ form_errors(form.minimumAlternanceDuration) }}
                                    {% if form.minimumAlternanceDuration.vars.help %}
                                        <div class="form-text">{{ form.minimumAlternanceDuration.vars.help }}</div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.centerPercentage) }}
                                    <div class="input-group">
                                        {{ form_widget(form.centerPercentage) }}
                                        <span class="input-group-text">%</span>
                                    </div>
                                    {{ form_errors(form.centerPercentage) }}
                                    {% if form.centerPercentage.vars.help %}
                                        <div class="form-text">{{ form.centerPercentage.vars.help }}</div>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.companyPercentage) }}
                                    <div class="input-group">
                                        {{ form_widget(form.companyPercentage) }}
                                        <span class="input-group-text">%</span>
                                    </div>
                                    {{ form_errors(form.companyPercentage) }}
                                    {% if form.companyPercentage.vars.help %}
                                        <div class="form-text">{{ form.companyPercentage.vars.help }}</div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            {{ form_label(form.alternanceRhythm) }}
                            {{ form_widget(form.alternanceRhythm) }}
                            {{ form_errors(form.alternanceRhythm) }}
                            {% if form.alternanceRhythm.vars.help %}
                                <div class="form-text">{{ form.alternanceRhythm.vars.help }}</div>
                            {% endif %}
                        </div>
                        
                        <div class="mb-3">
                            {{ form_label(form.alternancePrerequisites) }}
                            {{ form_widget(form.alternancePrerequisites) }}
                            {{ form_errors(form.alternancePrerequisites) }}
                            {% if form.alternancePrerequisites.vars.help %}
                                <div class="form-text">{{ form.alternancePrerequisites.vars.help }}</div>
                            {% endif %}
                        </div>
                        
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Information :</strong> Une fois la session créée en mode alternance, vous pourrez créer des contrats d'alternance et un programme pédagogique associé.
                        </div>
                    </div>
                    <!-- ============== END ALTERNANCE SECTION ============== -->
                    
                    <hr class="my-4">
                    
                    <div class="mb-3">
                        <div class="form-check">
                            {{ form_widget(form.isActive) }}
                            {{ form_label(form.isActive) }}
                        </div>
                        {{ form_errors(form.isActive) }}
                    </div>
                    
                    <div class="form-footer">
                        <button type="submit" class="btn btn-primary">
                            {{ session.id ? 'Mettre à jour' : 'Créer la session' }}
                        </button>
                        <a href="{{ session.id ? path('admin_session_show', {id: session.id}) : path('admin_session_index') }}" class="btn btn-link">
                            Annuler
                        </a>
                    </div>
                    
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Aide</h3>
                </div>
                <div class="card-body">
                    <div class="small text-muted">
                        <p><strong>Statuts des sessions :</strong></p>
                        <ul class="list-unstyled">
                            <li><span class="badge bg-secondary me-1">Planifiée</span> Session créée, inscriptions fermées</li>
                            <li><span class="badge bg-success me-1">Ouverte</span> Inscriptions ouvertes au public</li>
                            <li><span class="badge bg-primary me-1">Confirmée</span> Session maintenue, inscriptions fermées</li>
                            <li><span class="badge bg-danger me-1">Annulée</span> Session annulée</li>
                            <li><span class="badge bg-info me-1">Terminée</span> Session achevée</li>
                        </ul>
                        
                        <p class="mt-3"><strong>Conseils :</strong></p>
                        <ul class="small">
                            <li>Définissez une capacité minimale pour pouvoir confirmer automatiquement la session</li>
                            <li>La date limite d'inscription doit être antérieure à la date de début</li>
                            <li>Si aucun prix n'est défini, le prix de la formation sera utilisé</li>
                        </ul>
                        
                        <p class="mt-3"><strong>Alternance :</strong></p>
                        <ul class="small">
                            <li><strong>Apprentissage :</strong> 16-29 ans, diplôme du CAP au Master</li>
                            <li><strong>Professionnalisation :</strong> 16-25 ans ou demandeurs d'emploi 26+</li>
                            <li><strong>Stage alterné :</strong> Autre forme d'alternance</li>
                            <li>Les pourcentages centre/entreprise doivent totaliser 100%</li>
                            <li>La durée minimale est exprimée en semaines</li>
                        </ul>
                    </div>
                </div>
            </div>
            
            {% if session.id %}
                <div class="card mt-3">
                    <div class="card-header">
                        <h3 class="card-title">Actions</h3>
                    </div>
                    <div class="card-body">
                        <form method="post" action="{{ path('admin_session_delete', {id: session.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette session ? Cette action est irréversible.')">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ session.id) }}">
                            <button type="submit" class="btn btn-danger btn-sm">
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                    <path d="M4 7l16 0"/>
                                    <path d="M10 11l0 6"/>
                                    <path d="M14 11l0 6"/>
                                    <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12"/>
                                    <path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3"/>
                                </svg>
                                Supprimer la session
                            </button>
                        </form>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
