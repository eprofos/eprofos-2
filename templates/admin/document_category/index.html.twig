{% extends 'admin/base.html.twig' %}

{% block page_actions %}
    <a href="{{ path('admin_document_category_new') }}" class="btn btn-primary">
        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
            <path d="M12 5l0 14"/>
            <path d="M5 12l14 0"/>
        </svg>
        Nouvelle catégorie
    </a>
{% endblock %}

{% block body %}
    <div class="row row-deck row-cards">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Catégories de documents</h3>
                    <div class="card-actions">
                        <div class="text-muted small">
                            Organisation hiérarchique des documents
                        </div>
                    </div>
                </div>
                
                {% if category_tree|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-vcenter card-table">
                            <thead>
                                <tr>
                                    <th>Catégorie</th>
                                    <th>Slug</th>
                                    <th>Niveau</th>
                                    <th>Documents</th>
                                    <th>Sous-catégories</th>
                                    <th>Statut</th>
                                    <th class="w-1">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for item in category_tree %}
                                    {{ _self.render_category_row(item, 0) }}
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="card-body">
                        <div class="empty">
                            <div class="empty-img">
                                <img src="data:image/svg+xml;base64," height="128" alt="">
                            </div>
                            <p class="empty-title">Aucune catégorie trouvée</p>
                            <p class="empty-subtitle text-muted">
                                Commencez par créer votre première catégorie pour organiser vos documents.
                            </p>
                            <div class="empty-action">
                                <a href="{{ path('admin_document_category_new') }}" class="btn btn-primary">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                        <path d="M12 5l0 14"/>
                                        <path d="M5 12l14 0"/>
                                    </svg>
                                    Créer une catégorie
                                </a>
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

{% macro render_category_row(item, depth) %}
    {% set category = item.category %}
    <tr data-category-id="{{ category.id }}" data-level="{{ category.level }}">
        <td>
            <div class="d-flex align-items-center">
                {% if depth > 0 %}
                    <span class="me-2 text-muted">
                        {% for i in 0..depth-1 %}
                            <span class="ms-3">│</span>
                        {% endfor %}
                        └─
                    </span>
                {% endif %}
                {% if category.icon %}
                    <span class="me-2" {% if category.color %}style="color: {{ category.color }}"{% endif %}>
                        <i class="{{ category.icon }}"></i>
                    </span>
                {% endif %}
                <div>
                    <div class="fw-bold">{{ category.name }}</div>
                    {% if category.description %}
                        <div class="text-muted small text-truncate" style="max-width: 200px;" title="{{ category.description }}">
                            {{ category.description }}
                        </div>
                    {% endif %}
                </div>
            </div>
        </td>
        <td>
            <code class="small">{{ category.slug }}</code>
        </td>
        <td>
            <span class="badge bg-blue-lt">Niveau {{ category.level }}</span>
        </td>
        <td>
            {% if item.document_count > 0 %}
                <div class="d-flex flex-column">
                    <span class="badge bg-green-lt">
                        {{ item.document_count }} direct{{ item.document_count > 1 ? 's' : '' }}
                    </span>
                    {% if item.total_documents != item.document_count %}
                        <span class="badge bg-blue-lt mt-1">
                            {{ item.total_documents }} total
                        </span>
                    {% endif %}
                </div>
            {% else %}
                <span class="text-muted">Aucun document</span>
            {% endif %}
        </td>
        <td>
            {% if item.children_count > 0 %}
                <span class="badge bg-purple-lt">
                    {{ item.children_count }} sous-catégorie{{ item.children_count > 1 ? 's' : '' }}
                </span>
            {% else %}
                <span class="text-muted">Aucune</span>
            {% endif %}
        </td>
        <td>
            <form method="post" action="{{ path('admin_document_category_toggle_status', {'id': category.id}) }}" class="d-inline">
                <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ category.id) }}">
                <button type="submit" class="btn btn-sm {{ category.isActive ? 'btn-success' : 'btn-outline-secondary' }}" 
                        onclick="return confirm('Êtes-vous sûr de vouloir {{ category.isActive ? 'désactiver' : 'activer' }} cette catégorie ?')">
                    {% if category.isActive %}
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-sm" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                            <path d="M5 12l5 5l10 -10"/>
                        </svg>
                        Active
                    {% else %}
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-sm" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                            <path d="M18 6l-12 12"/>
                            <path d="M6 6l12 12"/>
                        </svg>
                        Inactive
                    {% endif %}
                </button>
            </form>
        </td>
        <td>
            <div class="btn-list flex-nowrap">
                <a href="{{ path('admin_document_category_show', {'id': category.id}) }}" class="btn btn-sm btn-outline-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                        <path d="M10 12a2 2 0 1 0 4 0a2 2 0 0 0 -4 0"/>
                        <path d="M21 12c-2.4 4 -5.4 6 -9 6c-3.6 0 -6.6 -2 -9 -6c2.4 -4 5.4 -6 9 -6c3.6 0 6.6 2 9 6"/>
                    </svg>
                </a>
                <a href="{{ path('admin_document_category_edit', {'id': category.id}) }}" class="btn btn-sm btn-outline-secondary">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                        <path d="M7 7h-1a2 2 0 0 0 -2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2 -2v-1"/>
                        <path d="M20.385 6.585a2.1 2.1 0 0 0 -2.97 -2.97l-8.415 8.385v3h3l8.385 -8.415z"/>
                        <path d="M16 5l3 3"/>
                    </svg>
                </a>
                <a href="{{ path('admin_document_category_new', {'parent': category.id}) }}" class="btn btn-sm btn-outline-info" title="Ajouter une sous-catégorie">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                        <path d="M12 5l0 14"/>
                        <path d="M5 12l14 0"/>
                    </svg>
                </a>
                {% if item.document_count == 0 and item.children_count == 0 %}
                    <form method="post" action="{{ path('admin_document_category_delete', {'id': category.id}) }}" class="d-inline">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                        <button type="submit" class="btn btn-sm btn-outline-danger" 
                                onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?')">
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                <path d="M4 7l16 0"/>
                                <path d="M10 11l0 6"/>
                                <path d="M14 11l0 6"/>
                                <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12"/>
                                <path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3"/>
                            </svg>
                        </button>
                    </form>
                {% else %}
                    <span class="btn btn-sm btn-outline-danger disabled" title="Impossible de supprimer : la catégorie contient des éléments">
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                            <path d="M4 7l16 0"/>
                            <path d="M10 11l0 6"/>
                            <path d="M14 11l0 6"/>
                            <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12"/>
                            <path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3"/>
                        </svg>
                    </span>
                {% endif %}
            </div>
        </td>
    </tr>
    
    {# Render children recursively #}
    {% if item.children|length > 0 %}
        {% for child in item.children %}
            {{ _self.render_category_row(child, depth + 1) }}
        {% endfor %}
    {% endif %}
{% endmacro %}
