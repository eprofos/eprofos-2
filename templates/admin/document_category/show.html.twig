{% extends 'admin/base.html.twig' %}

{% block page_actions %}
    <a href="{{ path('admin_document_category_edit', {'id': document_category.id}) }}" class="btn btn-primary">
        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
            <path d="M7 7h-1a2 2 0 0 0 -2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2 -2v-1"/>
            <path d="M20.385 6.585a2.1 2.1 0 0 0 -2.97 -2.97l-8.415 8.385v3h3l8.385 -8.415z"/>
            <path d="M16 5l3 3"/>
        </svg>
        Modifier
    </a>
{% endblock %}

{% block body %}
    <div class="row row-deck row-cards">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        {% if document_category.icon %}
                            <span class="me-2" {% if document_category.color %}style="color: {{ document_category.color }}"{% endif %}>
                                <i class="{{ document_category.icon }}"></i>
                            </span>
                        {% endif %}
                        {{ document_category.name }}
                    </h3>
                    <div class="card-actions">
                        <span class="badge {{ document_category.isActive ? 'bg-success' : 'bg-secondary' }}">
                            {{ document_category.isActive ? 'Active' : 'Inactive' }}
                        </span>
                    </div>
                </div>
                <div class="card-body">
                    {% if stats.parent %}
                        <div class="mb-3">
                            <label class="form-label">Catégorie parente</label>
                            <div>
                                <a href="{{ path('admin_document_category_show', {'id': stats.parent.id}) }}" class="text-decoration-none">
                                    {% if stats.parent.icon %}
                                        <i class="{{ stats.parent.icon }}"></i>
                                    {% endif %}
                                    {{ stats.parent.name }}
                                </a>
                            </div>
                        </div>
                    {% endif %}

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Slug</label>
                                <div>
                                    <code>{{ document_category.slug }}</code>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Niveau</label>
                                <div>
                                    <span class="badge bg-blue-lt">Niveau {{ stats.level }}</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    {% if document_category.description %}
                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <div>{{ document_category.description }}</div>
                        </div>
                    {% endif %}

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Icône</label>
                                <div>
                                    {% if document_category.icon %}
                                        <i class="{{ document_category.icon }}"></i>
                                        <code class="ms-2">{{ document_category.icon }}</code>
                                    {% else %}
                                        <span class="text-muted">Aucune icône</span>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Couleur</label>
                                <div>
                                    {% if document_category.color %}
                                        <span class="d-inline-block rounded" style="width: 20px; height: 20px; background-color: {{ document_category.color }}"></span>
                                        <code class="ms-2">{{ document_category.color }}</code>
                                    {% else %}
                                        <span class="text-muted">Aucune couleur</span>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Ordre de tri</label>
                        <div>{{ document_category.sortOrder }}</div>
                    </div>
                </div>
            </div>

            {% if document_category.children|length > 0 %}
                <div class="card mt-4">
                    <div class="card-header">
                        <h3 class="card-title">Sous-catégories</h3>
                        <div class="card-actions">
                            <a href="{{ path('admin_document_category_new', {'parent': document_category.id}) }}" class="btn btn-sm btn-primary">
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                    <path d="M12 5l0 14"/>
                                    <path d="M5 12l14 0"/>
                                </svg>
                                Ajouter une sous-catégorie
                            </a>
                        </div>
                    </div>
                    <div class="list-group list-group-flush">
                        {% for child in document_category.children %}
                            <div class="list-group-item">
                                <div class="row align-items-center">
                                    <div class="col">
                                        <div class="d-flex align-items-center">
                                            {% if child.icon %}
                                                <span class="me-2" {% if child.color %}style="color: {{ child.color }}"{% endif %}>
                                                    <i class="{{ child.icon }}"></i>
                                                </span>
                                            {% endif %}
                                            <div>
                                                <strong>{{ child.name }}</strong>
                                                {% if child.description %}
                                                    <div class="text-muted small">{{ child.description }}</div>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-auto">
                                        <span class="badge bg-blue-lt">
                                            {{ child.documents|length }} document{{ child.documents|length > 1 ? 's' : '' }}
                                        </span>
                                    </div>
                                    <div class="col-auto">
                                        <a href="{{ path('admin_document_category_show', {'id': child.id}) }}" class="btn btn-sm btn-outline-primary">
                                            Voir
                                        </a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}

            {% if document_category.documents|length > 0 %}
                <div class="card mt-4">
                    <div class="card-header">
                        <h3 class="card-title">Documents dans cette catégorie</h3>
                    </div>
                    <div class="list-group list-group-flush">
                        {% for document in document_category.documents %}
                            <div class="list-group-item">
                                <div class="row align-items-center">
                                    <div class="col">
                                        <div>
                                            <strong>{{ document.title }}</strong>
                                            <div class="text-muted small">
                                                Type: {{ document.documentType.name }}
                                                {% if document.description %}
                                                    · {{ document.description|length > 100 ? document.description|slice(0, 100) ~ '...' : document.description }}
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-auto">
                                        <span class="badge {{ document.status == 'published' ? 'bg-success' : (document.status == 'draft' ? 'bg-warning' : 'bg-secondary') }}">
                                            {{ document.status|title }}
                                        </span>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Statistiques</h3>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="d-flex justify-content-between">
                            <span>Documents directs</span>
                            <span class="fw-bold">{{ stats.document_count }}</span>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <div class="d-flex justify-content-between">
                            <span>Sous-catégories</span>
                            <span class="fw-bold text-purple">{{ stats.children_count }}</span>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <div class="d-flex justify-content-between">
                            <span>Niveau hiérarchique</span>
                            <span class="fw-bold text-blue">{{ stats.level }}</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mt-4">
                <div class="card-header">
                    <h3 class="card-title">Informations</h3>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label small">Créée le</label>
                        <div>{{ document_category.createdAt|date('d/m/Y à H:i') }}</div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label small">Modifiée le</label>
                        <div>{{ document_category.updatedAt|date('d/m/Y à H:i') }}</div>
                    </div>
                </div>
            </div>

            <div class="card mt-4">
                <div class="card-header">
                    <h3 class="card-title">Actions</h3>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="{{ path('admin_document_category_new', {'parent': document_category.id}) }}" class="btn btn-info w-100">
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                <path d="M12 5l0 14"/>
                                <path d="M5 12l14 0"/>
                            </svg>
                            Ajouter une sous-catégorie
                        </a>

                        <form method="post" action="{{ path('admin_document_category_toggle_status', {'id': document_category.id}) }}">
                            <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ document_category.id) }}">
                            <button type="submit" class="btn {{ document_category.isActive ? 'btn-warning' : 'btn-success' }} w-100"
                                    onclick="return confirm('Êtes-vous sûr de vouloir {{ document_category.isActive ? 'désactiver' : 'activer' }} cette catégorie ?')">
                                {% if document_category.isActive %}
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                        <path d="M6 19a2 2 0 0 1 -2 -2v-4l-1 -1l1 -1v-4a2 2 0 0 1 2 -2"/>
                                        <path d="M18 19a2 2 0 0 0 2 -2v-4l1 -1l-1 -1v-4a2 2 0 0 0 -2 -2"/>
                                    </svg>
                                    Désactiver la catégorie
                                {% else %}
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                        <path d="M5 12l5 5l10 -10"/>
                                    </svg>
                                    Activer la catégorie
                                {% endif %}
                            </button>
                        </form>

                        {% if stats.document_count == 0 and stats.children_count == 0 %}
                            <form method="post" action="{{ path('admin_document_category_delete', {'id': document_category.id}) }}">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ document_category.id) }}">
                                <button type="submit" class="btn btn-danger w-100" 
                                        onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ? Cette action est irréversible.')">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                        <path d="M4 7l16 0"/>
                                        <path d="M10 11l0 6"/>
                                        <path d="M14 11l0 6"/>
                                        <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12"/>
                                        <path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3"/>
                                    </svg>
                                    Supprimer la catégorie
                                </button>
                            </form>
                        {% else %}
                            <div class="alert alert-warning">
                                <strong>Suppression impossible :</strong> Cette catégorie contient 
                                {% if stats.document_count > 0 %}{{ stats.document_count }} document{{ stats.document_count > 1 ? 's' : '' }}{% endif %}
                                {% if stats.document_count > 0 and stats.children_count > 0 %} et {% endif %}
                                {% if stats.children_count > 0 %}{{ stats.children_count }} sous-catégorie{{ stats.children_count > 1 ? 's' : '' }}{% endif %}.
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
