{% extends 'admin/base.html.twig' %}

{% block title %}{{ module.title }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>
                    <i class="fas fa-puzzle-piece me-2"></i>
                    {{ module.title }}
                </h1>
                <div class="btn-group">
                    <a href="{{ path('admin_modules_edit', {id: module.id}) }}" class="btn btn-primary">
                        <i class="fas fa-edit me-2"></i>Modifier
                    </a>
                    <a href="{{ path('admin_modules_index', {formation: module.formation.id}) }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Retour à la liste
                    </a>
                </div>
            </div>

            <div class="row">
                <div class="col-md-8">
                    <!-- Module Information -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-info-circle me-2"></i>
                                Informations générales
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <h6>Titre</h6>
                                    <p>{{ module.title }}</p>
                                </div>
                                <div class="col-md-6">
                                    <h6>Slug</h6>
                                    <p><code>{{ module.slug }}</code></p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <h6>Description</h6>
                                    <p>{{ module.description|nl2br }}</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <h6>Durée</h6>
                                    <p>{{ module.formattedDuration }}</p>
                                </div>
                                <div class="col-md-4">
                                    <h6>Ordre</h6>
                                    <p><span class="badge bg-secondary">{{ module.orderIndex }}</span></p>
                                </div>
                                <div class="col-md-4">
                                    <h6>Statut</h6>
                                    <p>
                                        {% if module.isActive %}
                                            <span class="badge bg-success">Actif</span>
                                        {% else %}
                                            <span class="badge bg-secondary">Inactif</span>
                                        {% endif %}
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Learning Objectives -->
                    {% if module.learningObjectives %}
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-target me-2"></i>
                                    Objectifs pédagogiques
                                </h5>
                            </div>
                            <div class="card-body">
                                <ul class="list-unstyled">
                                    {% for objective in module.learningObjectives %}
                                        <li class="mb-2">
                                            <i class="fas fa-check-circle text-success me-2"></i>
                                            {{ objective }}
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                    {% endif %}

                    <!-- Prerequisites -->
                    {% if module.prerequisites %}
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-graduation-cap me-2"></i>
                                    Prérequis
                                </h5>
                            </div>
                            <div class="card-body">
                                <p>{{ module.prerequisites|nl2br }}</p>
                            </div>
                        </div>
                    {% endif %}

                    <!-- Teaching Methods -->
                    {% if module.teachingMethods %}
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-chalkboard-teacher me-2"></i>
                                    Méthodes pédagogiques
                                </h5>
                            </div>
                            <div class="card-body">
                                <p>{{ module.teachingMethods|nl2br }}</p>
                            </div>
                        </div>
                    {% endif %}

                    <!-- Evaluation Methods -->
                    {% if module.evaluationMethods %}
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-clipboard-check me-2"></i>
                                    Méthodes d'évaluation
                                </h5>
                            </div>
                            <div class="card-body">
                                <p>{{ module.evaluationMethods|nl2br }}</p>
                            </div>
                        </div>
                    {% endif %}
                </div>

                <div class="col-md-4">
                    <!-- Formation Information -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-book me-2"></i>
                                Formation
                            </h5>
                        </div>
                        <div class="card-body">
                            <h6>{{ module.formation.title }}</h6>
                            <p class="text-muted">{{ module.formation.description|slice(0, 100) }}...</p>
                            <a href="{{ path('admin_formation_show', {id: module.formation.id}) }}" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-external-link-alt me-1"></i>Voir la formation
                            </a>
                        </div>
                    </div>

                    <!-- Resources -->
                    {% if module.resources %}
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-book me-2"></i>
                                    Ressources
                                </h5>
                            </div>
                            <div class="card-body">
                                <ul class="list-unstyled">
                                    {% for resource in module.resources %}
                                        <li class="mb-2">
                                            <i class="fas fa-file-alt text-primary me-2"></i>
                                            {{ resource }}
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                    {% endif %}

                    <!-- Success Criteria -->
                    {% if module.successCriteria %}
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-check-circle me-2"></i>
                                    Critères de réussite
                                </h5>
                            </div>
                            <div class="card-body">
                                <ul class="list-unstyled">
                                    {% for criteria in module.successCriteria %}
                                        <li class="mb-2">
                                            <i class="fas fa-medal text-warning me-2"></i>
                                            {{ criteria }}
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                    {% endif %}

                    <!-- Chapters -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-list me-2"></i>
                                Chapitres ({{ module.chapters|length }})
                            </h5>
                        </div>
                        <div class="card-body">
                            {% if module.chapters %}
                                <div class="list-group list-group-flush">
                                    {% for chapter in module.chapters %}
                                        <div class="list-group-item d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="mb-1">{{ chapter.title }}</h6>
                                                <small class="text-muted">{{ chapter.durationMinutes }} min</small>
                                            </div>
                                            <span class="badge bg-secondary">{{ chapter.orderIndex }}</span>
                                        </div>
                                    {% endfor %}
                                </div>
                            {% else %}
                                <p class="text-muted">Aucun chapitre pour ce module.</p>
                            {% endif %}
                        </div>
                    </div>

                    <!-- Metadata -->
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-info me-2"></i>
                                Métadonnées
                            </h5>
                        </div>
                        <div class="card-body">
                            <small class="text-muted">
                                <strong>Créé le :</strong> {{ module.createdAt|date('d/m/Y à H:i') }}<br>
                                <strong>Modifié le :</strong> {{ module.updatedAt|date('d/m/Y à H:i') }}
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
