{% extends 'admin/base.html.twig' %}

{% block title %}Certificate Management{% endblock %}

{% block page_title %}
<i class="fas fa-certificate me-2"></i>Certificate Management
{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Issued Certificates</h5>
        <div>
            <button class="btn btn-success btn-sm" onclick="generateMissingCertificates()">
                <i class="fas fa-plus me-1"></i>Generate Missing Certificates
            </button>
        </div>
    </div>
    
    <div class="card-body">
        {% if certificates is empty %}
            <div class="text-center py-5">
                <i class="fas fa-certificate fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No certificates issued yet</h5>
                <p class="text-muted">Certificates will appear here when students complete formations.</p>
            </div>
        {% else %}
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Student</th>
                            <th>Formation</th>
                            <th>Issue Date</th>
                            <th>Verification Code</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for certificate in certificates %}
                        <tr>
                            <td>{{ certificate.id }}</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="avatar avatar-sm bg-primary text-white rounded-circle me-2">
                                        {{ certificate.student.firstName|first }}{{ certificate.student.lastName|first }}
                                    </div>
                                    <div>
                                        <div class="fw-bold">{{ certificate.student.firstName }} {{ certificate.student.lastName }}</div>
                                        <small class="text-muted">{{ certificate.student.email }}</small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="fw-bold">{{ certificate.formation.title }}</span><br>
                                <small class="text-muted">{{ certificate.formation.category.name }}</small>
                            </td>
                            <td>{{ certificate.issuedAt|date('d/m/Y H:i') }}</td>
                            <td><code class="fs-6">{{ certificate.verificationCode }}</code></td>
                            <td class="text-center">
                                <div class="btn-group btn-group-sm">
                                    <a href="{{ path('admin_certificate_show', {'id': certificate.id}) }}" 
                                       class="btn btn-outline-primary" title="View Details">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('certificate_verify') }}?verification_code={{ certificate.verificationCode }}" 
                                       class="btn btn-outline-info" title="Verify" target="_blank">
                                        <i class="fas fa-shield-alt"></i>
                                    </a>
                                    <button type="button" class="btn btn-outline-secondary" 
                                            onclick="resendCertificate({{ certificate.id }})" title="Resend Email">
                                        <i class="fas fa-envelope"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>
</div>

<script>
function generateMissingCertificates() {
    if (confirm('Generate certificates for all eligible completed enrollments?')) {
        // AJAX call to generate missing certificates
        fetch('{{ path("admin_certificate_generate_missing") }}', {
            method: 'POST',
            headers: {
                'X-Requested-With': 'XMLHttpRequest',
                'Content-Type': 'application/json'
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                location.reload();
            } else {
                alert('Error: ' + data.message);
            }
        });
    }
}

function resendCertificate(certificateId) {
    if (confirm('Resend certificate email to student?')) {
        fetch(`{{ path("admin_certificate_resend", {"id": "CERTIFICATE_ID"}) }}`.replace('CERTIFICATE_ID', certificateId), {
            method: 'POST',
            headers: {
                'X-Requested-With': 'XMLHttpRequest'
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                alert('Certificate email sent successfully!');
                location.reload();
            } else {
                alert('Error: ' + data.message);
            }
        });
    }
}
</script>
{% endblock %}
