{% extends 'admin/base.html.twig' %}

{% block title %}{{ page_title }} - EPROFOS Admin{% endblock %}

{% block page_header %}
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <!-- Page pre-title -->
                    <div class="page-pretitle">
                        Administration CRM
                    </div>
                    <h2 class="page-title">
                        {{ page_title }}
                    </h2>
                </div>
                <!-- Page title actions -->
                <div class="col-auto ms-auto d-print-none">
                    <div class="btn-list">
                        <a href="{{ path('admin_prospect_show', {id: prospect.id}) }}" class="btn btn-outline-secondary d-none d-sm-inline-block">
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                <path d="M9 11l3 3l8 -8"/>
                                <path d="M20 12v6a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2v-12a2 2 0 0 1 2 -2h9"/>
                            </svg>
                            Retour au prospect
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="container-xl">
        <div class="row">
            <div class="col-lg-8">
                <!-- Prospect Context Card -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h3 class="card-title">
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon me-2" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                <path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0"/>
                                <path d="M12 10m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0"/>
                                <path d="M6.168 18.849a4 4 0 0 1 3.832 -2.849h4a4 4 0 0 1 3.834 2.855"/>
                            </svg>
                            Prospect concerné
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-auto">
                                <span class="avatar avatar-lg" style="background-color: var(--tblr-primary); color: white;">
                                    {{ prospect.firstName|first|upper }}{{ prospect.lastName|first|upper }}
                                </span>
                            </div>
                            <div class="col">
                                <div class="mb-1">
                                    <h4 class="mb-0">{{ prospect.fullName }}</h4>
                                    <div class="text-muted">{{ prospect.email }}</div>
                                    {% if prospect.phone %}
                                        <div class="text-muted">{{ prospect.phone }}</div>
                                    {% endif %}
                                </div>
                                {% if prospect.company %}
                                    <div class="mb-1">
                                        <strong>{{ prospect.company }}</strong>
                                        {% if prospect.position %}
                                            <span class="text-muted">- {{ prospect.position }}</span>
                                        {% endif %}
                                    </div>
                                {% endif %}
                                <div class="d-flex gap-2 flex-wrap">
                                    <span class="badge {{ prospect.statusBadgeClass }} text-white">{{ prospect.statusLabel }}</span>
                                    <span class="badge {{ prospect.priorityBadgeClass }} text-white">{{ prospect.priorityLabel }}</span>
                                    {% if prospect.source %}
                                        <span class="badge bg-info text-white">{{ prospect.sourceLabel }}</span>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="col-auto">
                                <a href="{{ path('admin_prospect_show', {id: prospect.id}) }}" class="btn btn-primary">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                        <path d="M10 12a2 2 0 1 0 4 0a2 2 0 0 0 -4 0"/>
                                        <path d="M21 12c-2.4 4 -5.4 6 -9 6c-3.6 0 -6.6 -2 -9 -6c2.4 -4 5.4 -6 9 -6c3.6 0 6.6 2 9 6"/>
                                    </svg>
                                    Voir le prospect
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Note Form Card -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon me-2" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                <path d="M9 5h-2a2 2 0 0 0 -2 2v12a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-12a2 2 0 0 0 -2 -2h-2"/>
                                <path d="M9 3m0 2a2 2 0 0 1 2 -2h2a2 2 0 0 1 2 2v0a2 2 0 0 1 -2 2h-2a2 2 0 0 1 -2 -2z"/>
                                <path d="M9 12l2 2l4 -4"/>
                            </svg>
                            Nouvelle note
                        </h3>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'prospect-note-form', 'novalidate': 'novalidate'}}) }}
                        
                        <div class="row">
                            <div class="col-md-8">
                                <div class="mb-3">
                                    {{ form_label(form.title, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Titre de la note ou de la tâche'}}) }}
                                    {{ form_help(form.title) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.title) }}
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    {{ form_label(form.type, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.type, {'attr': {'class': 'form-select'}}) }}
                                    {{ form_help(form.type) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.type) }}
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.content, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.content, {'attr': {'class': 'form-control', 'rows': 6, 'placeholder': 'Détails de l\'interaction, de la note ou de la tâche...'}}) }}
                            {{ form_help(form.content) }}
                            <div class="invalid-feedback">
                                {{ form_errors(form.content) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.status, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.status, {'attr': {'class': 'form-select'}}) }}
                                    {{ form_help(form.status) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.status) }}
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3" id="scheduled-field">
                                    {{ form_label(form.scheduledAt, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.scheduledAt, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_help(form.scheduledAt) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.scheduledAt) }}
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <div class="form-check form-switch">
                                        {{ form_widget(form.isImportant, {'attr': {'class': 'form-check-input'}}) }}
                                        {{ form_label(form.isImportant, 'Marquer comme important', {'label_attr': {'class': 'form-check-label'}}) }}
                                    </div>
                                    {{ form_help(form.isImportant) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <div class="form-check form-switch">
                                        {{ form_widget(form.isPrivate, {'attr': {'class': 'form-check-input'}}) }}
                                        {{ form_label(form.isPrivate, 'Note privée', {'label_attr': {'class': 'form-check-label'}}) }}
                                    </div>
                                    {{ form_help(form.isPrivate) }}
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('admin_prospect_show', {id: prospect.id}) }}" class="btn btn-secondary">
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon me-1" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                    <path d="M5 12l14 0"/>
                                    <path d="M5 12l6 6"/>
                                    <path d="M5 12l6 -6"/>
                                </svg>
                                Annuler
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon me-1" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                    <path d="M12 5l0 14"/>
                                    <path d="M5 12l14 0"/>
                                </svg>
                                Ajouter la note
                            </button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <!-- Quick Actions -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h3 class="card-title">
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon me-2" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                <path d="M9 12l2 2l4 -4"/>
                                <path d="M21 2l-2 14l-6 -2l-6 2l2 -14z"/>
                            </svg>
                            Actions rapides
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="list-group list-group-flush">
                            <a href="{{ path('admin_prospect_edit', {id: prospect.id}) }}" class="list-group-item list-group-item-action">
                                <div class="d-flex align-items-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon me-3 text-blue" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                        <path d="M7 7h-1a2 2 0 0 0 -2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2 -2v-1"/>
                                        <path d="M20.385 6.585a2.1 2.1 0 0 0 -2.97 -2.97l-8.415 8.385v3h3l8.385 -8.415z"/>
                                        <path d="M16 5l3 3"/>
                                    </svg>
                                    <div>
                                        <div class="fw-bold">Modifier le prospect</div>
                                        <div class="text-muted small">Mettre à jour les informations</div>
                                    </div>
                                </div>
                            </a>
                            <a href="mailto:{{ prospect.email }}" class="list-group-item list-group-item-action">
                                <div class="d-flex align-items-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon me-3 text-green" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                        <path d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z"/>
                                        <path d="M3 7l9 6l9 -6"/>
                                    </svg>
                                    <div>
                                        <div class="fw-bold">Envoyer un email</div>
                                        <div class="text-muted small">{{ prospect.email }}</div>
                                    </div>
                                </div>
                            </a>
                            {% if prospect.phone %}
                                <a href="tel:{{ prospect.phone }}" class="list-group-item list-group-item-action">
                                    <div class="d-flex align-items-center">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon me-3 text-orange" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                            <path d="M5 4h4l2 5l-2.5 1.5a11 11 0 0 0 5 5l1.5 -2.5l5 2v4a2 2 0 0 1 -2 2a16 16 0 0 1 -15 -15a2 2 0 0 1 2 -2"/>
                                        </svg>
                                        <div>
                                            <div class="fw-bold">Appeler</div>
                                            <div class="text-muted small">{{ prospect.phone }}</div>
                                        </div>
                                    </div>
                                </a>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <!-- Help & Guidelines -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon me-2" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                <circle cx="12" cy="12" r="9"/>
                                <path d="M9 9h.01"/>
                                <path d="M15 9h.01"/>
                                <path d="M8 13a4 4 0 1 0 8 0H8"/>
                            </svg>
                            Guide d'utilisation
                        </h3>
                    </div>
                    <div class="card-body">
                        <h6 class="text-primary">Types de notes</h6>
                        <div class="small text-muted mb-3">
                            <div class="mb-1"><strong>Appel :</strong> Journalisation des appels téléphoniques</div>
                            <div class="mb-1"><strong>Email :</strong> Suivi des échanges par email</div>
                            <div class="mb-1"><strong>Réunion :</strong> Comptes-rendus de rendez-vous</div>
                            <div class="mb-1"><strong>Démonstration :</strong> Notes de présentation produit</div>
                            <div class="mb-1"><strong>Proposition :</strong> Envoi de devis/propositions</div>
                            <div class="mb-1"><strong>Tâche :</strong> Actions à effectuer</div>
                            <div class="mb-1"><strong>Rappel :</strong> Notifications programmées</div>
                        </div>

                        <h6 class="text-primary">Bonnes pratiques</h6>
                        <div class="small text-muted mb-3">
                            <div class="mb-1">• Soyez précis dans le titre</div>
                            <div class="mb-1">• Détaillez le contenu de l'interaction</div>
                            <div class="mb-1">• Planifiez les suivis avec une date</div>
                            <div class="mb-1">• Marquez les éléments importants</div>
                            <div class="mb-1">• Utilisez les notes privées si nécessaire</div>
                        </div>

                        <h6 class="text-primary">Statuts</h6>
                        <div class="small text-muted">
                            <div class="mb-1"><span class="badge bg-warning text-white me-1">En attente</span> Pour les tâches à faire</div>
                            <div class="mb-1"><span class="badge bg-success text-white me-1">Terminé</span> Pour les actions accomplies</div>
                            <div class="mb-1"><span class="badge bg-danger text-white me-1">Annulé</span> Pour les tâches abandonnées</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const typeSelect = document.querySelector('select[name="prospect_note[type]"]');
            const scheduledField = document.getElementById('scheduled-field');
            
            function toggleScheduledField() {
                if (typeSelect && (typeSelect.value === 'task' || typeSelect.value === 'reminder')) {
                    scheduledField.style.display = 'block';
                } else {
                    scheduledField.style.display = 'none';
                }
            }
            
            // Initial state
            toggleScheduledField();
            
            // Listen for changes
            if (typeSelect) {
                typeSelect.addEventListener('change', toggleScheduledField);
            }
        });
    </script>
{% endblock %}
