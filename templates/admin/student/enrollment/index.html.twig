{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des Inscriptions{% endblock %}

{% block content %}
<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Gestion des Inscriptions Étudiants</h1>
        <div class="btn-group">
            <a href="{{ path('admin_student_enrollment_link') }}" class="btn btn-primary">
                <i class="fas fa-link"></i> Lier un étudiant
            </a>
            <a href="{{ path('admin_student_enrollment_bulk') }}" class="btn btn-info">
                <i class="fas fa-users"></i> Inscription en lot
            </a>
            <a href="{{ path('admin_student_enrollment_auto_link') }}" class="btn btn-success">
                <i class="fas fa-magic"></i> Liaison automatique
            </a>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="card-title mb-1">Total</h6>
                            <h3 class="mb-0">{{ stats.total }}</h3>
                        </div>
                        <div class="text-white-50">
                            <i class="fas fa-graduation-cap fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="card-title mb-1">Actives</h6>
                            <h3 class="mb-0">{{ stats.active }}</h3>
                        </div>
                        <div class="text-white-50">
                            <i class="fas fa-user-check fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="card-title mb-1">Terminées</h6>
                            <h3 class="mb-0">{{ stats.completed }}</h3>
                        </div>
                        <div class="text-white-50">
                            <i class="fas fa-trophy fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="card-title mb-1">Abandons</h6>
                            <h3 class="mb-0">{{ stats.dropped }}</h3>
                        </div>
                        <div class="text-white-50">
                            <i class="fas fa-user-times fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Linking Statistics -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Statistiques de Liaison</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="d-flex align-items-center">
                                <div class="flex-grow-1">
                                    <div class="text-muted small">Inscriptions confirmées</div>
                                    <div class="h4 mb-0">{{ linkingStats.total_confirmed_registrations }}</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-flex align-items-center">
                                <div class="flex-grow-1">
                                    <div class="text-muted small">Liées à des étudiants</div>
                                    <div class="h4 mb-0 text-success">{{ linkingStats.linked_registrations }}</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-flex align-items-center">
                                <div class="flex-grow-1">
                                    <div class="text-muted small">Non liées</div>
                                    <div class="h4 mb-0 text-warning">{{ linkingStats.unlinked_registrations }}</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="mt-3">
                        <div class="progress">
                            <div class="progress-bar bg-success" role="progressbar" 
                                 style="width: {{ linkingStats.linking_rate }}%" 
                                 aria-valuenow="{{ linkingStats.linking_rate }}" 
                                 aria-valuemin="0" aria-valuemax="100">
                                {{ linkingStats.linking_rate }}%
                            </div>
                        </div>
                        <small class="text-muted">Taux de liaison</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Search and Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="GET" class="row g-3">
                <div class="col-md-4">
                    <label for="search" class="form-label">Recherche</label>
                    <input type="text" class="form-control" id="search" name="search" 
                           value="{{ search }}" placeholder="Nom, email, formation...">
                </div>
                <div class="col-md-3">
                    <label for="status" class="form-label">Statut</label>
                    <select class="form-select" id="status" name="status">
                        <option value="">Tous les statuts</option>
                        {% for statusKey, statusLabel in statuses %}
                            <option value="{{ statusKey }}" {{ status == statusKey ? 'selected' : '' }}>
                                {{ statusLabel }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="source" class="form-label">Source</label>
                    <select class="form-select" id="source" name="source">
                        <option value="">Toutes les sources</option>
                        <option value="manual" {{ source == 'manual' ? 'selected' : '' }}>Manuelle</option>
                        <option value="auto_email_match" {{ source == 'auto_email_match' ? 'selected' : '' }}>Email automatique</option>
                        <option value="bulk_admin" {{ source == 'bulk_admin' ? 'selected' : '' }}>Lot admin</option>
                        <option value="manual_link" {{ source == 'manual_link' ? 'selected' : '' }}>Liaison manuelle</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">&nbsp;</label>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-outline-primary">
                            <i class="fas fa-search"></i> Filtrer
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Enrollments Table -->
    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">Liste des Inscriptions</h5>
        </div>
        <div class="card-body p-0">
            {% if enrollments|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Étudiant</th>
                                <th>Formation</th>
                                <th>Session</th>
                                <th>Statut</th>
                                <th>Date d'inscription</th>
                                <th>Source</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for enrollment in enrollments %}
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div>
                                                <div class="fw-medium">{{ enrollment.student.fullName }}</div>
                                                <small class="text-muted">{{ enrollment.student.email }}</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="fw-medium">{{ enrollment.formation.title }}</div>
                                        <small class="text-muted">{{ enrollment.formation.category.name }}</small>
                                    </td>
                                    <td>
                                        <div>{{ enrollment.session.name }}</div>
                                        <small class="text-muted">
                                            Du {{ enrollment.session.startDate|date('d/m/Y') }}
                                            au {{ enrollment.session.endDate|date('d/m/Y') }}
                                        </small>
                                    </td>
                                    <td>
                                        <span class="badge {{ enrollment.statusBadgeClass }}">
                                            {{ enrollment.statusLabel }}
                                        </span>
                                    </td>
                                    <td>
                                        <div>{{ enrollment.enrolledAt|date('d/m/Y H:i') }}</div>
                                        {% if enrollment.completedAt %}
                                            <small class="text-success">
                                                Terminé le {{ enrollment.completedAt|date('d/m/Y') }}
                                            </small>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">
                                            {% if enrollment.enrollmentSource == 'manual' %}
                                                Manuelle
                                            {% elseif enrollment.enrollmentSource == 'auto_email_match' %}
                                                Email auto
                                            {% elseif enrollment.enrollmentSource == 'bulk_admin' %}
                                                Lot admin
                                            {% elseif enrollment.enrollmentSource == 'manual_link' %}
                                                Liaison manuelle
                                            {% else %}
                                                {{ enrollment.enrollmentSource }}
                                            {% endif %}
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="{{ path('admin_student_enrollment_show', {id: enrollment.id}) }}" 
                                               class="btn btn-outline-primary" title="Voir les détails">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="{{ path('admin_student_enrollment_edit', {id: enrollment.id}) }}" 
                                               class="btn btn-outline-warning" title="Modifier">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            {% if enrollment.isActive %}
                                                <form method="POST" action="{{ path('admin_student_enrollment_unlink', {id: enrollment.id}) }}" 
                                                      class="d-inline" onsubmit="return confirm('Êtes-vous sûr de vouloir délier cet étudiant ?')">
                                                    <button type="submit" class="btn btn-outline-danger" title="Délier">
                                                        <i class="fas fa-unlink"></i>
                                                    </button>
                                                </form>
                                            {% endif %}
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                <div class="card-footer">
                    {{ knp_pagination_render(enrollments) }}
                </div>
            {% else %}
                <div class="text-center py-5">
                    <i class="fas fa-users fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">Aucune inscription trouvée</h5>
                    <p class="text-muted">
                        {% if search or status or source %}
                            Aucune inscription ne correspond à vos critères de recherche.
                        {% else %}
                            Aucune inscription n'a été enregistrée pour le moment.
                        {% endif %}
                    </p>
                    {% if not search and not status and not source %}
                        <a href="{{ path('admin_student_enrollment_link') }}" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Créer une inscription
                        </a>
                    {% endif %}
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
