{% extends 'admin/base.html.twig' %}

{% block title %}Résultats de la Liaison Automatique{% endblock %}

{% block content %}
<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">Résultats de la Liaison Automatique</h1>
            <p class="text-muted">Traitement terminé - Voici les résultats</p>
        </div>
        <a href="{{ path('admin_student_enrollment_index') }}" class="btn btn-primary">
            <i class="fas fa-list"></i> Voir Toutes les Inscriptions
        </a>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body text-center">
                    <i class="fas fa-cogs fa-3x mb-2"></i>
                    <h3 class="mb-0">{{ results.processed }}</h3>
                    <p class="mb-0">Correspondances traitées</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <i class="fas fa-check-circle fa-3x mb-2"></i>
                    <h3 class="mb-0">{{ results.success }}</h3>
                    <p class="mb-0">Liaisons réussies</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white">
                <div class="card-body text-center">
                    <i class="fas fa-times-circle fa-3x mb-2"></i>
                    <h3 class="mb-0">{{ results.failed }}</h3>
                    <p class="mb-0">Échecs</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body text-center">
                    <i class="fas fa-percentage fa-3x mb-2"></i>
                    <h3 class="mb-0">
                        {% if results.processed > 0 %}
                            {{ ((results.success / results.processed) * 100)|round }}%
                        {% else %}
                            0%
                        {% endif %}
                    </h3>
                    <p class="mb-0">Taux de réussite</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Success Message -->
    {% if results.success > 0 %}
        <div class="alert alert-success" role="alert">
            <i class="fas fa-check-circle"></i>
            <strong>Félicitations !</strong> 
            {{ results.success }} liaison(s) automatique(s) créée(s) avec succès. 
            Les étudiants ont reçu des emails de confirmation et peuvent maintenant accéder au contenu de formation.
        </div>
    {% endif %}

    <!-- Error Message -->
    {% if results.failed > 0 %}
        <div class="alert alert-warning" role="alert">
            <i class="fas fa-exclamation-triangle"></i>
            <strong>Attention !</strong> 
            {{ results.failed }} liaison(s) ont échoué. Consultez les détails ci-dessous pour plus d'informations.
        </div>
    {% endif %}

    <!-- Detailed Results -->
    {% if results.details is not empty %}
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Détails des Résultats</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Étudiant</th>
                                <th>Formation</th>
                                <th>Statut</th>
                                <th>Message</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for detail in results.details %}
                                <tr class="{{ detail.status is defined and detail.status == 'success' ? 'table-success' : 'table-danger' }}">
                                    <td>
                                        <strong>{{ detail.student }}</strong>
                                    </td>
                                    <td>
                                        {{ detail.formation }}
                                    </td>
                                    <td>
                                        {% if detail.status is defined and detail.status == 'success' %}
                                            <span class="badge bg-success">
                                                <i class="fas fa-check"></i> Réussi
                                            </span>
                                        {% else %}
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times"></i> Échec
                                            </span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if detail.error is defined %}
                                            <span class="text-danger">{{ detail.error }}</span>
                                        {% else %}
                                            <span class="text-success">
                                                <i class="fas fa-link"></i> Liaison créée automatiquement
                                            </span>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    {% endif %}

    <!-- No Results -->
    {% if results.processed == 0 %}
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="fas fa-info-circle fa-3x text-info mb-3"></i>
                <h5 class="text-info">Aucune Correspondance à Traiter</h5>
                <p class="text-muted">
                    Aucune correspondance n'a été trouvée pour la liaison automatique. 
                    Toutes les inscriptions confirmées sont peut-être déjà liées.
                </p>
            </div>
        </div>
    {% endif %}

    <!-- Next Actions -->
    <div class="card mt-4">
        <div class="card-header">
            <h5 class="card-title mb-0">Actions Suivantes</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <div class="d-grid">
                        <a href="{{ path('admin_student_enrollment_index') }}" class="btn btn-outline-primary">
                            <i class="fas fa-list"></i> Voir Toutes les Inscriptions
                        </a>
                        <small class="text-muted mt-2">Consulter la liste complète des inscriptions</small>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="d-grid">
                        <a href="{{ path('admin_student_enrollment_link') }}" class="btn btn-outline-warning">
                            <i class="fas fa-link"></i> Liaison Manuelle
                        </a>
                        <small class="text-muted mt-2">Lier manuellement les cas particuliers</small>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="d-grid">
                        <a href="{{ path('admin_student_enrollment_auto_link') }}" class="btn btn-outline-success">
                            <i class="fas fa-magic"></i> Nouvelle Liaison Auto
                        </a>
                        <small class="text-muted mt-2">Relancer le processus automatique</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Auto-redirect after 10 seconds if all successful
    {% if results.failed == 0 and results.success > 0 %}
        setTimeout(function() {
            if (confirm('Redirection automatique vers la liste des inscriptions dans 5 secondes. Continuer ?')) {
                window.location.href = '{{ path("admin_student_enrollment_index") }}';
            }
        }, 5000);
    {% endif %}
});
</script>
{% endblock %}
