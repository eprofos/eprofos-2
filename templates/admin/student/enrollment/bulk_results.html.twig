{% extends 'admin/base.html.twig' %}

{% block title %}Résultats de l'Inscription en Lot{% endblock %}

{% block content %}
<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">Résultats de l'Inscription en Lot</h1>
            <p class="text-muted">Session: {{ session.formation.title }} - {{ session.name }}</p>
        </div>
        <a href="{{ path('admin_student_enrollment_index') }}" class="btn btn-primary">
            <i class="fas fa-list"></i> Voir Toutes les Inscriptions
        </a>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <i class="fas fa-check-circle fa-3x mb-2"></i>
                    <h3 class="mb-0">{{ results.success }}</h3>
                    <p class="mb-0">Inscriptions réussies</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-danger text-white">
                <div class="card-body text-center">
                    <i class="fas fa-times-circle fa-3x mb-2"></i>
                    <h3 class="mb-0">{{ results.failed }}</h3>
                    <p class="mb-0">Échecs</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-primary text-white">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-3x mb-2"></i>
                    <h3 class="mb-0">{{ results.success + results.failed }}</h3>
                    <p class="mb-0">Total traité</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Detailed Results -->
    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">Détails des Résultats</h5>
        </div>
        <div class="card-body">
            {% if results.details is not empty %}
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Étudiant</th>
                                <th>Statut</th>
                                <th>Message</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for detail in results.details %}
                                <tr class="{{ detail.status is defined and detail.status == 'success' ? 'table-success' : 'table-danger' }}">
                                    <td>
                                        <strong>{{ detail.student }}</strong>
                                    </td>
                                    <td>
                                        {% if detail.status is defined and detail.status == 'success' %}
                                            <span class="badge bg-success">
                                                <i class="fas fa-check"></i> Réussi
                                            </span>
                                        {% else %}
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times"></i> Échec
                                            </span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if detail.error is defined %}
                                            <span class="text-danger">{{ detail.error }}</span>
                                        {% else %}
                                            <span class="text-success">Inscription créée avec succès</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="text-center py-4">
                    <i class="fas fa-exclamation-triangle fa-3x text-warning mb-3"></i>
                    <h5>Aucun détail disponible</h5>
                    <p class="text-muted">Les détails du traitement ne sont pas disponibles.</p>
                </div>
            {% endif %}
        </div>
    </div>

    <!-- Actions -->
    <div class="d-flex justify-content-center mt-4">
        <div class="btn-group">
            <a href="{{ path('admin_student_enrollment_bulk') }}" class="btn btn-outline-primary">
                <i class="fas fa-plus"></i> Nouvelle Inscription en Lot
            </a>
            <a href="{{ path('admin_student_enrollment_index') }}" class="btn btn-outline-secondary">
                <i class="fas fa-list"></i> Voir Toutes les Inscriptions
            </a>
        </div>
    </div>
</div>
{% endblock %}
