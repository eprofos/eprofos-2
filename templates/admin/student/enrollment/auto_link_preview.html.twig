{% extends 'admin/base.html.twig' %}

{% block title %}Aperçu des Correspondances Automatiques{% endblock %}

{% block body %}
<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">Aperçu des Correspondances Automatiques</h1>
            <p class="text-muted">Vérifiez les liaisons qui seront créées automatiquement</p>
        </div>
        <a href="{{ path('admin_student_enrollment_auto_link') }}" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Retour
        </a>
    </div>

    {% if potentialMatches is not empty %}
        <!-- Summary -->
        <div class="alert alert-info mb-4" role="alert">
            <i class="fas fa-info-circle"></i>
            <strong>{{ potentialMatches|length }} correspondance(s) trouvée(s)</strong> 
            basée(s) sur la correspondance d'email entre les inscriptions et les étudiants.
        </div>

        <!-- Matches Table -->
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Correspondances à Traiter</h5>
                <form method="POST" action="{{ path('admin_student_enrollment_auto_link') }}" 
                      onsubmit="return confirm('Êtes-vous sûr de vouloir traiter toutes ces correspondances ?')">
                    <input type="hidden" name="action" value="process">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-magic"></i> Traiter Toutes les Correspondances
                    </button>
                </form>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Étudiant</th>
                                <th>Inscription de Session</th>
                                <th>Formation</th>
                                <th>Session</th>
                                <th>Email</th>
                                <th>Date d'inscription</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for match in potentialMatches %}
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div>
                                                <div class="fw-medium">{{ match.student.fullName }}</div>
                                                <small class="text-muted">ID: {{ match.student.id }}</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            <div class="fw-medium">{{ match.registration.fullName }}</div>
                                            <small class="text-muted">
                                                Inscrit le {{ match.registration.createdAt|date('d/m/Y') }}
                                            </small>
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            <div class="fw-medium">{{ match.formation.title }}</div>
                                            <small class="text-muted">{{ match.formation.category.name }}</small>
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            <div>{{ match.session.name }}</div>
                                            <small class="text-muted">
                                                Du {{ match.session.startDate|date('d/m/Y') }}
                                                {% if match.session.endDate %}
                                                    au {{ match.session.endDate|date('d/m/Y') }}
                                                {% endif %}
                                            </small>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <span class="me-2">{{ match.registration.email }}</span>
                                            <i class="fas fa-check-circle text-success" 
                                               title="Email correspond avec l'étudiant"></i>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-success">
                                            {{ match.registration.status|upper }}
                                        </span>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Process Actions -->
        <div class="d-flex justify-content-center mt-4">
            <div class="btn-group">
                <a href="{{ path('admin_student_enrollment_auto_link') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-times"></i> Annuler
                </a>
                <form method="POST" action="{{ path('admin_student_enrollment_auto_link') }}" class="d-inline"
                      onsubmit="return confirm('Cette action va créer {{ potentialMatches|length }} inscription(s) et envoyer des emails de confirmation. Continuer ?')">
                    <input type="hidden" name="action" value="process">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-magic"></i> Confirmer et Traiter
                    </button>
                </form>
            </div>
        </div>

    {% else %}
        <!-- No Matches -->
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="fas fa-search fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">Aucune Correspondance Trouvée</h5>
                <p class="text-muted">
                    Aucune correspondance d'email n'a été trouvée entre les inscriptions confirmées 
                    non liées et les étudiants existants.
                </p>
                <p class="text-muted">
                    Cela peut signifier que :
                </p>
                <ul class="list-unstyled text-muted">
                    <li>• Toutes les inscriptions sont déjà liées</li>
                    <li>• Les participants ne sont pas encore enregistrés comme étudiants</li>
                    <li>• Les adresses email ne correspondent pas exactement</li>
                </ul>
                <div class="mt-4">
                    <a href="{{ path('admin_student_enrollment_link') }}" class="btn btn-primary me-2">
                        <i class="fas fa-link"></i> Liaison Manuelle
                    </a>
                    <a href="{{ path('admin_student_enrollment_auto_link') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Retour
                    </a>
                </div>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}
