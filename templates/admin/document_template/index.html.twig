{% extends 'admin/base.html.twig' %}

{% block title %}{{ page_title }} - Administration{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- Page Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h3 mb-0">{{ page_title }}</h1>
                    <p class="text-muted">Gestion des modèles de documents réutilisables</p>
                </div>
                <div>
                    <a href="{{ path('admin_document_template_new') }}" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Nouveau modèle
                    </a>
                </div>
            </div>

            <!-- Statistics Cards -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card bg-primary text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4 class="mb-0">{{ templates_with_stats|length }}</h4>
                                    <p class="mb-0">Modèles total</p>
                                </div>
                                <i class="fas fa-layer-group fa-2x opacity-50"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-success text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    {% set active_count = 0 %}
                                    {% for item in templates_with_stats %}
                                        {% if item.template.isActive %}
                                            {% set active_count = active_count + 1 %}
                                        {% endif %}
                                    {% endfor %}
                                    <h4 class="mb-0">{{ active_count }}</h4>
                                    <p class="mb-0">Modèles actifs</p>
                                </div>
                                <i class="fas fa-check-circle fa-2x opacity-50"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-info text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    {% set total_usage = 0 %}
                                    {% for item in templates_with_stats %}
                                        {% set total_usage = total_usage + item.usage_count %}
                                    {% endfor %}
                                    <h4 class="mb-0">{{ total_usage }}</h4>
                                    <p class="mb-0">Utilisations</p>
                                </div>
                                <i class="fas fa-chart-line fa-2x opacity-50"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-warning text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    {% set default_count = 0 %}
                                    {% for item in templates_with_stats %}
                                        {% if item.is_default %}
                                            {% set default_count = default_count + 1 %}
                                        {% endif %}
                                    {% endfor %}
                                    <h4 class="mb-0">{{ default_count }}</h4>
                                    <p class="mb-0">Par défaut</p>
                                </div>
                                <i class="fas fa-star fa-2x opacity-50"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Templates Table -->
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Liste des modèles</h5>
                </div>
                <div class="card-body">
                    {% if templates_with_stats is empty %}
                        <div class="text-center py-5">
                            <i class="fas fa-layer-group fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Aucun modèle de document</h5>
                            <p class="text-muted">Créez votre premier modèle pour commencer</p>
                            <a href="{{ path('admin_document_template_new') }}" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>Créer un modèle
                            </a>
                        </div>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Modèle</th>
                                        <th>Type</th>
                                        <th>Statut</th>
                                        <th>Utilisation</th>
                                        <th>Placeholders</th>
                                        <th>Créé le</th>
                                        <th width="200">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for item in templates_with_stats %}
                                        {% set template = item.template %}
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    {% if template.icon %}
                                                        <i class="{{ template.icon }} me-2" 
                                                           {% if template.color %}style="color: {{ template.color }}"{% endif %}></i>
                                                    {% endif %}
                                                    <div>
                                                        <strong>{{ template.name }}</strong>
                                                        {% if template.description %}
                                                            <br><small class="text-muted">{{ template.description|slice(0, 80) }}{% if template.description|length > 80 %}...{% endif %}</small>
                                                        {% endif %}
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                {% if template.documentType %}
                                                    <span class="badge bg-light text-dark">{{ template.documentType.name }}</span>
                                                {% else %}
                                                    <span class="text-muted">-</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center gap-2">
                                                    {% if template.isActive %}
                                                        <span class="badge bg-success">Actif</span>
                                                    {% else %}
                                                        <span class="badge bg-secondary">Inactif</span>
                                                    {% endif %}
                                                    {% if template.isDefault %}
                                                        <span class="badge bg-warning">
                                                            <i class="fas fa-star"></i> Défaut
                                                        </span>
                                                    {% endif %}
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-info">{{ item.usage_count }}</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-light text-dark">{{ item.placeholders_count }}</span>
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    {{ template.createdAt|date('d/m/Y H:i') }}
                                                </small>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a href="{{ path('admin_document_template_show', {id: template.id}) }}" 
                                                       class="btn btn-outline-info" title="Voir">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="{{ path('admin_document_template_edit', {id: template.id}) }}" 
                                                       class="btn btn-outline-primary" title="Modifier">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    
                                                    <!-- Toggle Status Form -->
                                                    <form method="post" 
                                                          action="{{ path('admin_document_template_toggle_status', {id: template.id}) }}"
                                                          class="d-inline" 
                                                          onsubmit="return confirm('Êtes-vous sûr de vouloir changer le statut de ce modèle ?');">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ template.id) }}">
                                                        <button class="btn btn-outline-warning" type="submit" 
                                                                title="{% if template.isActive %}Désactiver{% else %}Activer{% endif %}">
                                                            <i class="fas {% if template.isActive %}fa-pause{% else %}fa-play{% endif %}"></i>
                                                        </button>
                                                    </form>
                                                    
                                                    <!-- Duplicate Form -->
                                                    <form method="post" 
                                                          action="{{ path('admin_document_template_duplicate', {id: template.id}) }}"
                                                          class="d-inline">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('duplicate' ~ template.id) }}">
                                                        <button class="btn btn-outline-secondary" type="submit" title="Dupliquer">
                                                            <i class="fas fa-copy"></i>
                                                        </button>
                                                    </form>
                                                    
                                                    <!-- Delete Form -->
                                                    <form method="post" 
                                                          action="{{ path('admin_document_template_delete', {id: template.id}) }}"
                                                          class="d-inline" 
                                                          onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce modèle ? Cette action est irréversible.');">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ template.id) }}">
                                                        <button class="btn btn-outline-danger" type="submit" title="Supprimer"
                                                                {% if item.usage_count > 0 %}disabled{% endif %}>
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Auto-refresh statistics every 30 seconds
        setTimeout(function() {
            location.reload();
        }, 30000);
    </script>
{% endblock %}
