{% extends 'admin/base.html.twig' %}

{% block title %}{{ page_title }} - Administration{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- Page Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h3 mb-0">{{ page_title }}</h1>
                    <p class="text-muted">Modifier le modèle de document</p>
                </div>
                <div>
                    <a href="{{ path('admin_document_template_show', {id: document_template.id}) }}" class="btn btn-info me-2">
                        <i class="fas fa-eye me-2"></i>Voir
                    </a>
                    <a href="{{ path('admin_document_template_index') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Retour à la liste
                    </a>
                </div>
            </div>

            <!-- Form -->
            <div class="row">
                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">Informations du modèle</h5>
                        </div>
                        <div class="card-body">
                            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}
                            
                            <div class="row mb-3">
                                <div class="col-md-8">
                                    {{ form_row(form.name, {
                                        'row_attr': {'class': 'mb-3'}
                                    }) }}
                                </div>
                                <div class="col-md-4">
                                    {{ form_row(form.slug, {
                                        'row_attr': {'class': 'mb-3'}
                                    }) }}
                                </div>
                            </div>

                            {{ form_row(form.description, {
                                'row_attr': {'class': 'mb-3'}
                            }) }}

                            {{ form_row(form.documentType, {
                                'row_attr': {'class': 'mb-3'}
                            }) }}

                            {{ form_row(form.templateContent, {
                                'row_attr': {'class': 'mb-3'}
                            }) }}

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    {{ form_row(form.icon, {
                                        'row_attr': {'class': 'mb-3'}
                                    }) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(form.color, {
                                        'row_attr': {'class': 'mb-3'}
                                    }) }}
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-4">
                                    {{ form_row(form.sortOrder, {
                                        'row_attr': {'class': 'mb-3'}
                                    }) }}
                                </div>
                                <div class="col-md-4">
                                    {{ form_row(form.isActive, {
                                        'row_attr': {'class': 'mb-3'}
                                    }) }}
                                </div>
                                <div class="col-md-4">
                                    {{ form_row(form.isDefault, {
                                        'row_attr': {'class': 'mb-3'}
                                    }) }}
                                </div>
                            </div>

                            <div class="d-flex justify-content-between">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-2"></i>Enregistrer les modifications
                                </button>
                                <a href="{{ path('admin_document_template_show', {id: document_template.id}) }}" class="btn btn-secondary">
                                    <i class="fas fa-times me-2"></i>Annuler
                                </a>
                            </div>

                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <!-- Template Info -->
                    <div class="card">
                        <div class="card-header">
                            <h6 class="card-title mb-0">
                                <i class="fas fa-info-circle me-2"></i>Informations
                            </h6>
                        </div>
                        <div class="card-body">
                            <table class="table table-sm">
                                <tr>
                                    <td><strong>ID:</strong></td>
                                    <td>{{ document_template.id }}</td>
                                </tr>
                                <tr>
                                    <td><strong>Slug:</strong></td>
                                    <td><code>{{ document_template.slug }}</code></td>
                                </tr>
                                <tr>
                                    <td><strong>Utilisations:</strong></td>
                                    <td>
                                        <span class="badge bg-info">{{ document_template.usageCount }}</span>
                                    </td>
                                </tr>
                                <tr>
                                    <td><strong>Créé le:</strong></td>
                                    <td>{{ document_template.createdAt|date('d/m/Y H:i') }}</td>
                                </tr>
                                <tr>
                                    <td><strong>Modifié le:</strong></td>
                                    <td>{{ document_template.updatedAt|date('d/m/Y H:i') }}</td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <!-- Help Card -->
                    <div class="card mt-3">
                        <div class="card-header">
                            <h6 class="card-title mb-0">
                                <i class="fas fa-question-circle me-2"></i>Aide
                            </h6>
                        </div>
                        <div class="card-body">
                            <h6>Placeholders disponibles</h6>
                            <p class="text-muted small">Utilisez ces placeholders dans le contenu du modèle :</p>
                            <ul class="list-unstyled small">
                                <li><code>{{'{{'}}date{{'}}'}}</code> - Date actuelle</li>
                                <li><code>{{'{{'}}datetime{{'}}'}}</code> - Date et heure actuelles</li>
                                <li><code>{{'{{'}}year{{'}}'}}</code> - Année actuelle</li>
                                <li><code>{{'{{'}}month{{'}}'}}</code> - Mois actuel</li>
                                <li><code>{{'{{'}}day{{'}}'}}</code> - Jour actuel</li>
                            </ul>
                            
                            <hr>
                            
                            {% if document_template.usageCount > 0 %}
                                <div class="alert alert-warning small">
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    <strong>Attention :</strong> Ce modèle est utilisé par {{ document_template.usageCount }} document(s). 
                                    Les modifications peuvent affecter les futurs documents créés à partir de ce modèle.
                                </div>
                            {% endif %}
                        </div>
                    </div>

                    <!-- Preview Card -->
                    <div class="card mt-3">
                        <div class="card-header">
                            <h6 class="card-title mb-0">
                                <i class="fas fa-eye me-2"></i>Aperçu
                            </h6>
                        </div>
                        <div class="card-body">
                            <div id="template-preview" class="border p-3 bg-light">
                                {% if document_template.templateContent %}
                                    {{ document_template.templateContent|nl2br }}
                                {% else %}
                                    <p class="text-muted text-center">
                                        <i class="fas fa-file-alt fa-2x mb-2"></i><br>
                                        Aucun contenu défini
                                    </p>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Live preview of template content
            const contentInput = document.getElementById('document_template_templateContent');
            const previewDiv = document.getElementById('template-preview');
            
            if (contentInput && previewDiv) {
                function updatePreview() {
                    let content = contentInput.value;
                    if (content.trim() === '') {
                        previewDiv.innerHTML = '<p class="text-muted text-center">' +
                            '<i class="fas fa-file-alt fa-2x mb-2"></i><br>' +
                            'Aucun contenu défini' +
                            '</p>';
                        return;
                    }
                    
                    // Replace placeholders for preview
                    const now = new Date();
                    const placeholders = {
                        'date': now.toLocaleDateString('fr-FR'),
                        'datetime': now.toLocaleString('fr-FR'),
                        'year': now.getFullYear(),
                        'month': (now.getMonth() + 1).toString().padStart(2, '0'),
                        'day': now.getDate().toString().padStart(2, '0')
                    };
                    
                    for (const [key, value] of Object.entries(placeholders)) {
                        content = content.replace(new RegExp('{{' + key + '}}', 'g'), '<mark>' + value + '</mark>');
                    }
                    
                    // Highlight remaining placeholders
                    content = content.replace(/\{\{([^}]+)\}\}/g, function(match, group1) {
                        return '<span class="badge bg-warning">{{' + group1 + '}}</span>';
                    });
                    
                    // Convert line breaks
                    content = content.replace(/\n/g, '<br>');
                    
                    previewDiv.innerHTML = content;
                }
                
                contentInput.addEventListener('input', updatePreview);
                updatePreview(); // Initial preview
            }

            // Icon preview
            const iconSelect = document.getElementById('document_template_icon');
            if (iconSelect) {
                iconSelect.addEventListener('change', function() {
                    const selectedOption = this.options[this.selectedIndex];
                    const iconClass = selectedOption.value;
                    
                    // Remove existing icon preview
                    const existingPreview = this.parentNode.querySelector('.icon-preview');
                    if (existingPreview) {
                        existingPreview.remove();
                    }
                    
                    // Add new icon preview
                    if (iconClass) {
                        const preview = document.createElement('span');
                        preview.className = 'icon-preview ms-2';
                        preview.innerHTML = '<i class="' + iconClass + '"></i>';
                        this.parentNode.appendChild(preview);
                    }
                });
                
                // Trigger initial preview
                iconSelect.dispatchEvent(new Event('change'));
            }
        });
    </script>
{% endblock %}
