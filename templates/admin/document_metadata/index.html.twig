{% extends 'admin/base.html.twig' %}

{% block title %}{{ page_title }} - Administration{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- Page Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h3 mb-0">{{ page_title }}</h1>
                    <p class="text-muted">Gestion des métadonnées structurées des documents</p>
                </div>
                <div>
                    <a href="{{ path('admin_document_metadata_new') }}" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Nouvelle métadonnée
                    </a>
                </div>
            </div>

            <!-- Statistics Cards -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body text-center">
                            <div class="h2 text-primary mb-1">{{ statistics.total_count }}</div>
                            <div class="text-muted small">Total métadonnées</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body text-center">
                            <div class="h2 text-info mb-1">{{ statistics.searchable_count }}</div>
                            <div class="text-muted small">Recherchables</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body text-center">
                            <div class="h2 text-warning mb-1">{{ statistics.required_count }}</div>
                            <div class="text-muted small">Obligatoires</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body text-center">
                            <div class="h2 text-success mb-1">{{ statistics.type_distribution|length }}</div>
                            <div class="text-muted small">Types différents</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Filters -->
            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-filter me-2"></i>Filtres
                    </h5>
                </div>
                <div class="card-body">
                    <form method="GET" action="{{ path('admin_document_metadata_index') }}" class="row g-3">
                        <div class="col-md-4">
                            <label for="document_filter" class="form-label">Document</label>
                            <select name="document" id="document_filter" class="form-select">
                                <option value="">Tous les documents</option>
                                {% for metadata in metadata_with_stats %}
                                    {% if metadata.document_title not in used_documents|default([]) %}
                                        {% set used_documents = used_documents|default([])|merge([metadata.document_title]) %}
                                        <option value="{{ metadata.document_title }}" {{ filters.document == metadata.document_title ? 'selected' : '' }}>
                                            {{ metadata.document_title }}
                                        </option>
                                    {% endif %}
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label for="key_filter" class="form-label">Clé</label>
                            <input type="text" name="key" id="key_filter" class="form-control" 
                                   value="{{ filters.key }}" placeholder="Filtrer par clé..."
                                   list="metadata-keys-filter-list">
                            <datalist id="metadata-keys-filter-list">
                                <!-- Options will be populated via AJAX -->
                            </datalist>
                        </div>
                        <div class="col-md-4">
                            <label for="type_filter" class="form-label">Type de valeur</label>
                            <select name="value_type" id="type_filter" class="form-select">
                                <option value="">Tous les types</option>
                                {% for type_stat in statistics.type_distribution %}
                                    <option value="{{ type_stat.type }}" {{ filters.value_type == type_stat.type ? 'selected' : '' }}>
                                        {{ type_stat.type|title }} ({{ type_stat.count }})
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-outline-primary">
                                <i class="fas fa-search me-2"></i>Filtrer
                            </button>
                            <a href="{{ path('admin_document_metadata_index') }}" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-2"></i>Réinitialiser
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Metadata List -->
            <div class="card shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-tags me-2"></i>Liste des métadonnées
                    </h5>
                    <div class="btn-group" role="group">
                        <button type="button" id="bulkDeleteBtn" class="btn btn-outline-danger btn-sm" 
                                onclick="showBulkDeleteModal()" style="display: none;">
                            <i class="fas fa-trash me-1"></i>Supprimer sélection
                        </button>
                        <a href="{{ path('admin_document_metadata_export') }}" class="btn btn-outline-success btn-sm">
                            <i class="fas fa-download me-1"></i>Export CSV
                        </a>
                    </div>
                </div>
                <div class="card-body p-0">
                    {% if metadata_with_stats|length > 0 %}
                        <div class="table-responsive">
                            <form id="bulkDeleteForm" method="post" action="{{ path('admin_document_metadata_bulk_delete') }}">
                                <input type="hidden" name="_token" value="{{ csrf_token('bulk_delete') }}">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th class="text-center">
                                                <input type="checkbox" id="selectAll" class="form-check-input">
                                            </th>
                                            <th>Document</th>
                                            <th>Clé</th>
                                            <th>Nom d'affichage</th>
                                            <th>Type</th>
                                            <th>Valeur</th>
                                            <th>Requis</th>
                                            <th>Recherchable</th>
                                            <th class="text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for item in metadata_with_stats %}
                                            <tr>
                                                <td class="text-center">
                                                    <input type="checkbox" name="selected_metadata[]" 
                                                           value="{{ item.metadata.id }}" 
                                                           class="form-check-input metadata-checkbox">
                                                </td>
                                            <td>
                                                <div class="fw-medium">{{ item.document_title }}</div>
                                                <small class="text-muted">{{ item.document_type }}</small>
                                            </td>
                                            <td>
                                                <button type="button" 
                                                        class="btn btn-link text-start p-0 text-decoration-none"
                                                        data-action="click->metadata-statistics#showStatistics"
                                                        data-key="{{ item.metadata.metaKey }}"
                                                        title="Voir les statistiques pour cette clé">
                                                    <code class="text-primary">{{ item.metadata.metaKey }}</code>
                                                    <i class="fas fa-chart-bar ms-1 text-muted" style="font-size: 0.8em;"></i>
                                                </button>
                                            </td>
                                            <td>{{ item.effective_display_name }}</td>
                                            <td>
                                                <span class="badge bg-secondary">{{ item.metadata.dataType }}</span>
                                            </td>
                                            <td>
                                                <div class="text-truncate" style="max-width: 200px;" 
                                                     title="{% if item.typed_value is iterable and item.typed_value is not same as(null) %}{{ item.typed_value|json_encode }}{% elseif item.typed_value is same as(true) %}true{% elseif item.typed_value is same as(false) %}false{% elseif item.metadata.dataType == 'date' or item.metadata.dataType == 'datetime' %}{{ item.typed_value|date('d/m/Y H:i:s') }}{% else %}{{ item.typed_value }}{% endif %}">
                                                    {% if item.metadata.dataType == 'boolean' %}
                                                        {% if item.typed_value %}
                                                            <span class="badge bg-success">Oui</span>
                                                        {% else %}
                                                            <span class="badge bg-danger">Non</span>
                                                        {% endif %}
                                                    {% elseif item.metadata.dataType == 'date' or item.metadata.dataType == 'datetime' %}
                                                        {% if item.metadata.dataType == 'datetime' %}
                                                            {{ item.typed_value|date('d/m/Y H:i') }}
                                                        {% else %}
                                                            {{ item.typed_value|date('d/m/Y') }}
                                                        {% endif %}
                                                    {% elseif item.metadata.dataType == 'json' %}
                                                        {% if item.typed_value is iterable %}
                                                            <span class="text-muted">Objet JSON ({{ item.typed_value|keys|length }} propriétés)</span>
                                                        {% else %}
                                                            <span class="text-muted">{{ item.typed_value|json_encode|length }} caractères</span>
                                                        {% endif %}
                                                    {% elseif item.metadata.dataType == 'url' %}
                                                        <a href="{{ item.typed_value }}" target="_blank" class="text-decoration-none">
                                                            <i class="fas fa-external-link-alt me-1"></i>Lien
                                                        </a>
                                                    {% elseif item.metadata.dataType == 'text' %}
                                                        <div class="text-truncate" style="max-width: 180px;">{{ item.typed_value }}</div>
                                                    {% elseif item.metadata.dataType == 'file' %}
                                                        <span class="text-muted">
                                                            <i class="fas fa-file me-1"></i>{{ item.typed_value }}
                                                        </span>
                                                    {% else %}
                                                        {{ item.typed_value }}
                                                    {% endif %}
                                                </div>
                                            </td>
                                            <td>
                                                {% if item.metadata.isRequired %}
                                                    <span class="badge bg-warning">Requis</span>
                                                {% else %}
                                                    <span class="badge bg-light text-dark">Optionnel</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if item.metadata.isSearchable %}
                                                    <span class="badge bg-info">Recherchable</span>
                                                {% else %}
                                                    <span class="badge bg-light text-dark">Non</span>
                                                {% endif %}
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a href="{{ path('admin_document_metadata_show', {id: item.metadata.id}) }}" 
                                                       class="btn btn-outline-info btn-sm" title="Voir">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="{{ path('admin_document_metadata_edit', {id: item.metadata.id}) }}" 
                                                       class="btn btn-outline-primary btn-sm" title="Modifier">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-outline-danger btn-sm" 
                                                            onclick="confirmDelete({{ item.metadata.id }})" title="Supprimer">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </form>
                        </div>
                    {% else %}
                        <div class="text-center py-5">
                            <i class="fas fa-tags fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Aucune métadonnée trouvée</h5>
                            <p class="text-muted">Commencez par créer une nouvelle métadonnée.</p>
                            <a href="{{ path('admin_document_metadata_new') }}" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>Créer une métadonnée
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmer la suppression</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Êtes-vous sûr de vouloir supprimer cette métadonnée ?</p>
                <p class="text-muted small">Cette action est irréversible.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete') }}">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn btn-danger">Supprimer</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Bulk Delete Confirmation Modal -->
<div class="modal fade" id="bulkDeleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmer la suppression multiple</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Êtes-vous sûr de vouloir supprimer <span id="selectedCount">0</span> métadonnée(s) sélectionnée(s) ?</p>
                <p class="text-muted small">Cette action est irréversible.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <button type="button" class="btn btn-danger" onclick="submitBulkDelete()">Supprimer tout</button>
            </div>
        </div>
    </div>
</div>

<!-- Metadata Statistics Modal -->
<div class="modal fade" id="statisticsModal" tabindex="-1" 
     data-controller="metadata-statistics"
     data-metadata-statistics-target="modal"
     data-metadata-statistics-url-value="{{ path('admin_document_metadata_statistics', {key: '__KEY__'}) }}">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" data-metadata-statistics-target="title">Statistiques de métadonnée</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <!-- Loading state -->
                <div class="text-center py-4 d-none" data-metadata-statistics-target="loading">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Chargement...</span>
                    </div>
                    <div class="mt-2 text-muted">Chargement des statistiques...</div>
                </div>
                
                <!-- Statistics content -->
                <div data-metadata-statistics-target="content">
                    <!-- Statistics will be loaded here -->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>

<script>
function confirmDelete(metadataId) {
    const form = document.getElementById('deleteForm');
    const baseUrl = '{{ path('admin_document_metadata_delete', {id: 1}) }}';
    form.action = baseUrl.replace('/1', '/' + metadataId);
    
    const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
    modal.show();
}

// Bulk delete functionality
function updateBulkDeleteButton() {
    const checkboxes = document.querySelectorAll('.metadata-checkbox:checked');
    const bulkDeleteBtn = document.getElementById('bulkDeleteBtn');
    
    if (checkboxes.length > 0) {
        bulkDeleteBtn.style.display = 'inline-block';
    } else {
        bulkDeleteBtn.style.display = 'none';
    }
}

function showBulkDeleteModal() {
    const checkboxes = document.querySelectorAll('.metadata-checkbox:checked');
    if (checkboxes.length === 0) {
        return;
    }
    
    document.getElementById('selectedCount').textContent = checkboxes.length;
    const modal = new bootstrap.Modal(document.getElementById('bulkDeleteModal'));
    modal.show();
}

function submitBulkDelete() {
    document.getElementById('bulkDeleteForm').submit();
}

// Load metadata keys for filter autocomplete
document.addEventListener('DOMContentLoaded', function() {
    const filterDatalist = document.getElementById('metadata-keys-filter-list');
    
    // Bulk delete event handlers
    const selectAllCheckbox = document.getElementById('selectAll');
    const metadataCheckboxes = document.querySelectorAll('.metadata-checkbox');
    
    // Handle "Select All" checkbox
    selectAllCheckbox.addEventListener('change', function() {
        metadataCheckboxes.forEach(checkbox => {
            checkbox.checked = this.checked;
        });
        updateBulkDeleteButton();
    });
    
    // Handle individual checkboxes
    metadataCheckboxes.forEach(checkbox => {
        checkbox.addEventListener('change', function() {
            updateBulkDeleteButton();
            
            // Update "Select All" checkbox state
            const checkedBoxes = document.querySelectorAll('.metadata-checkbox:checked');
            if (checkedBoxes.length === 0) {
                selectAllCheckbox.indeterminate = false;
                selectAllCheckbox.checked = false;
            } else if (checkedBoxes.length === metadataCheckboxes.length) {
                selectAllCheckbox.indeterminate = false;
                selectAllCheckbox.checked = true;
            } else {
                selectAllCheckbox.indeterminate = true;
            }
        });
    });
    
    async function loadMetadataKeysForFilter() {
        try {
            const response = await fetch('{{ path('admin_document_metadata_keys') }}', {
                headers: {
                    'X-Requested-With': 'XMLHttpRequest',
                    'Accept': 'application/json'
                }
            });
            
            if (!response.ok) {
                console.warn('Could not load metadata keys for filter autocomplete');
                return;
            }
            
            const keys = await response.json();
            
            // Clear existing options
            filterDatalist.innerHTML = '';
            
            // Add new options
            keys.forEach(keyData => {
                const option = document.createElement('option');
                option.value = keyData.key;
                option.textContent = `${keyData.key} (${keyData.usage_count} utilisations)`;
                filterDatalist.appendChild(option);
            });
        } catch (error) {
            console.warn('Error loading metadata keys for filter:', error);
        }
    }
    
    loadMetadataKeysForFilter();
});
</script>
{% endblock %}
