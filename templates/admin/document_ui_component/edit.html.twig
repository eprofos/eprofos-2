{% extends 'admin/base.html.twig' %}

{% block title %}Modifier le composant {{ component.name }} - {{ parent() }}{% endblock %}

{% block page_title %}{{ page_title }}{% endblock %}

{% block breadcrumb %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            {% for crumb in breadcrumb %}
                {% if crumb.url %}
                    <li class="breadcrumb-item"><a href="{{ crumb.url }}">{{ crumb.label }}</a></li>
                {% else %}
                    <li class="breadcrumb-item active" aria-current="page">{{ crumb.label }}</li>
                {% endif %}
            {% endfor %}
        </ol>
    </nav>
{% endblock %}

{% block body %}
<div class="container-fluid">
    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}
    
    <div class="row">
        <!-- Main Form -->
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-puzzle-piece me-2"></i>
                        Modifier le composant
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.name) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.type) }}
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.zone) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.sortOrder) }}
                        </div>
                    </div>
                    
                    {{ form_row(form.content) }}
                    
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.cssClass) }}
                        </div>
                        <div class="col-md-6">
                            <div class="form-check form-switch mt-4">
                                {{ form_widget(form.isRequired) }}
                                {{ form_label(form.isRequired) }}
                            </div>
                        </div>
                    </div>
                    
                    {% if form.isConditional is defined %}
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-check form-switch">
                                    {{ form_widget(form.isConditional) }}
                                    {{ form_label(form.isConditional) }}
                                </div>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
        
        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Actions -->
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-cogs me-2"></i>
                        Actions
                    </h4>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i>
                            Mettre à jour
                        </button>
                        
                        <a href="{{ path('admin_document_ui_component_preview', {templateId: template.id, id: component.id}) }}" 
                           class="btn btn-outline-info">
                            <i class="fas fa-eye me-1"></i>
                            Aperçu
                        </a>
                        
                        <a href="{{ path('admin_document_ui_component_show', {templateId: template.id, id: component.id}) }}" 
                           class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i>
                            Voir le composant
                        </a>
                        
                        <a href="{{ path('admin_document_ui_component_index', {templateId: template.id}) }}" 
                           class="btn btn-outline-secondary">
                            <i class="fas fa-list me-1"></i>
                            Tous les composants
                        </a>
                    </div>
                </div>
            </div>
            
            <!-- Component Info -->
            <div class="card mt-3">
                <div class="card-header">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        Informations
                    </h4>
                </div>
                <div class="card-body">
                    <div class="small">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Type actuel :</span>
                            <span class="badge bg-secondary">{{ component.typeLabel }}</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Zone :</span>
                            <span class="badge bg-info">{{ component.zoneLabel }}</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Statut :</span>
                            <span>
                                {% if component.isActive %}
                                    <span class="badge bg-success">Actif</span>
                                {% else %}
                                    <span class="badge bg-danger">Inactif</span>
                                {% endif %}
                            </span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Créé le :</span>
                            <span>{{ component.createdAt|date('d/m/Y') }}</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="text-muted">Modifié le :</span>
                            <span>{{ component.updatedAt|date('d/m/Y') }}</span>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Template Info -->
            <div class="card mt-3">
                <div class="card-header">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-layer-group me-2"></i>
                        Modèle parent
                    </h4>
                </div>
                <div class="card-body">
                    <h6 class="card-title">{{ template.name }}</h6>
                    {% if template.description %}
                        <p class="text-muted small">{{ template.description }}</p>
                    {% endif %}
                </div>
                <div class="card-footer p-2">
                    <a href="{{ path('admin_document_ui_template_show', {id: template.id}) }}" 
                       class="btn btn-outline-primary btn-sm w-100">
                        <i class="fas fa-arrow-left me-1"></i>
                        Voir le modèle
                    </a>
                </div>
            </div>
            
            <!-- Component Types Info -->
            <div class="card mt-3">
                <div class="card-header">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-question-circle me-2"></i>
                        Types de composants
                    </h4>
                </div>
                <div class="card-body">
                    <div class="small">
                        <p class="mb-2"><strong>Types disponibles :</strong></p>
                        <ul class="list-unstyled ms-2">
                            {% for type_key, type_label in component_types %}
                                <li class="mb-1">
                                    <span class="badge bg-light text-dark">{{ type_label }}</span>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    {{ form_end(form) }}
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Form validation
            const form = document.querySelector('.needs-validation');
            if (form) {
                form.addEventListener('submit', function(e) {
                    if (!form.checkValidity()) {
                        e.preventDefault();
                        e.stopPropagation();
                    }
                    form.classList.add('was-validated');
                });
            }
            
            // Type-specific field management
            const typeField = document.querySelector('#{{ form.type.vars.id }}');
            const contentField = document.querySelector('#{{ form.content.vars.id }}');
            
            if (typeField && contentField) {
                function updateFieldsByType() {
                    const selectedType = typeField.value;
                    const contentLabel = contentField.closest('.mb-3').querySelector('label');
                    
                    // Update content field placeholder and label based on type
                    switch (selectedType) {
                        case 'text':
                            contentField.placeholder = 'Contenu textuel du composant...';
                            if (contentLabel) contentLabel.textContent = 'Contenu texte';
                            break;
                        case 'image':
                            contentField.placeholder = 'URL de l\'image ou chemin relatif...';
                            if (contentLabel) contentLabel.textContent = 'Source de l\'image';
                            break;
                        case 'table':
                            contentField.placeholder = 'Configuration du tableau (JSON)...';
                            if (contentLabel) contentLabel.textContent = 'Configuration du tableau';
                            break;
                        case 'list':
                            contentField.placeholder = 'Éléments de la liste, un par ligne...';
                            if (contentLabel) contentLabel.textContent = 'Éléments de la liste';
                            break;
                        case 'custom_html':
                            contentField.placeholder = 'Code HTML personnalisé...';
                            if (contentLabel) contentLabel.textContent = 'Code HTML';
                            break;
                        default:
                            contentField.placeholder = 'Contenu du composant...';
                            if (contentLabel) contentLabel.textContent = 'Contenu';
                    }
                }
                
                // Initial setup
                updateFieldsByType();
                
                // Listen for type changes
                typeField.addEventListener('change', updateFieldsByType);
            }
        });
    </script>
{% endblock %}
