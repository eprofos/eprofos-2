{% extends 'admin/base.html.twig' %}

{% block title %}{{ page_title }} - {{ parent() }}{% endblock %}

{% block page_title %}{{ page_title }}{% endblock %}

{% block breadcrumb %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            {% for crumb in breadcrumb %}
                {% if crumb.url %}
                    <li class="breadcrumb-item"><a href="{{ crumb.url }}">{{ crumb.label }}</a></li>
                {% else %}
                    <li class="breadcrumb-item active" aria-current="page">{{ crumb.label }}</li>
                {% endif %}
            {% endfor %}
        </ol>
    </nav>
{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <!-- Preview Panel -->
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-eye me-2"></i>
                        Aperçu du composant
                        <span class="badge bg-secondary ms-2">{{ component.typeLabel }}</span>
                    </h4>
                    <div class="btn-group">
                        <button type="button" class="btn btn-outline-secondary btn-sm" id="zoom-out">
                            <i class="fas fa-search-minus"></i>
                        </button>
                        <button type="button" class="btn btn-outline-secondary btn-sm" id="zoom-reset">
                            100%
                        </button>
                        <button type="button" class="btn btn-outline-secondary btn-sm" id="zoom-in">
                            <i class="fas fa-search-plus"></i>
                        </button>
                        <a href="{{ path('admin_document_ui_component_edit', {templateId: template.id, id: component.id}) }}" 
                           class="btn btn-primary btn-sm">
                            <i class="fas fa-edit me-1"></i>
                            Modifier
                        </a>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="preview-container" style="background: #f8f9fa; padding: 40px; overflow: auto; min-height: 400px;">
                        <div class="component-preview" id="component-preview" style="
                            background: white;
                            margin: 0 auto;
                            padding: 20px;
                            border: 1px solid #ddd;
                            border-radius: 8px;
                            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
                            transform-origin: center;
                            transition: transform 0.2s ease;
                            max-width: 800px;
                        ">
                            <div class="component-content">
                                {{ rendered_html|raw }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <small class="text-muted">
                                <i class="fas fa-info-circle me-1"></i>
                                Aperçu généré avec des données de test
                            </small>
                        </div>
                        <div class="col-md-6 text-end">
                            <button type="button" class="btn btn-outline-secondary btn-sm me-2" id="refresh-preview">
                                <i class="fas fa-sync-alt me-1"></i>
                                Actualiser
                            </button>
                            <a href="{{ path('admin_document_ui_template_preview', {id: template.id}) }}" 
                               class="btn btn-outline-info btn-sm">
                                <i class="fas fa-layer-group me-1"></i>
                                Aperçu du modèle complet
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Controls Sidebar -->
        <div class="col-lg-4">
            <!-- Component Info -->
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-puzzle-piece me-2"></i>
                        Informations du composant
                    </h4>
                </div>
                <div class="card-body">
                    <table class="table table-sm">
                        <tr>
                            <td><strong>Nom :</strong></td>
                            <td>{{ component.name }}</td>
                        </tr>
                        <tr>
                            <td><strong>Type :</strong></td>
                            <td><span class="badge bg-secondary">{{ component.typeLabel }}</span></td>
                        </tr>
                        <tr>
                            <td><strong>Zone :</strong></td>
                            <td><span class="badge bg-info">{{ component.zoneLabel|title }}</span></td>
                        </tr>
                        <tr>
                            <td><strong>Ordre :</strong></td>
                            <td>{{ component.sortOrder }}</td>
                        </tr>
                        <tr>
                            <td><strong>Statut :</strong></td>
                            <td>
                                {% if component.isActive %}
                                    <span class="badge bg-success">Actif</span>
                                {% else %}
                                    <span class="badge bg-danger">Inactif</span>
                                {% endif %}
                                {% if component.isRequired %}
                                    <span class="badge bg-warning text-dark ms-1">Requis</span>
                                {% endif %}
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            
            <!-- Preview Data -->
            <div class="card mt-3">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-database me-2"></i>
                        Données de test
                    </h4>
                    <button type="button" class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#editPreviewDataModal">
                        <i class="fas fa-edit"></i>
                    </button>
                </div>
                <div class="card-body">
                    <div class="preview-data-display">
                        {% for key, value in preview_data %}
                            <div class="mb-2">
                                <small class="text-muted d-block">{{ key }}:</small>
                                <code class="small">{{ value }}</code>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
            
            <!-- Actions -->
            <div class="card mt-3">
                <div class="card-header">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-cogs me-2"></i>
                        Actions
                    </h4>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="{{ path('admin_document_ui_component_edit', {templateId: template.id, id: component.id}) }}" 
                           class="btn btn-warning">
                            <i class="fas fa-edit me-1"></i>
                            Modifier le composant
                        </a>
                        
                        <a href="{{ path('admin_document_ui_component_show', {templateId: template.id, id: component.id}) }}" 
                           class="btn btn-outline-primary">
                            <i class="fas fa-info-circle me-1"></i>
                            Détails du composant
                        </a>
                        
                        <a href="{{ path('admin_document_ui_component_index', {templateId: template.id}) }}" 
                           class="btn btn-outline-secondary">
                            <i class="fas fa-list me-1"></i>
                            Tous les composants
                        </a>
                        
                        <hr>
                        
                        <a href="{{ path('admin_document_ui_template_preview', {id: template.id}) }}" 
                           class="btn btn-outline-info">
                            <i class="fas fa-layer-group me-1"></i>
                            Aperçu du modèle complet
                        </a>
                        
                        <a href="{{ path('admin_document_ui_template_show', {id: template.id}) }}" 
                           class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i>
                            Retour au modèle
                        </a>
                    </div>
                </div>
            </div>
            
            <!-- Technical Details -->
            <div class="card mt-3">
                <div class="card-header">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-code me-2"></i>
                        Détails techniques
                    </h4>
                </div>
                <div class="card-body">
                    {% if component.cssClass %}
                        <div class="mb-2">
                            <small class="text-muted">Classe CSS :</small>
                            <div><code>{{ component.cssClass }}</code></div>
                        </div>
                    {% endif %}
                    
                    {% if component.elementId %}
                        <div class="mb-2">
                            <small class="text-muted">ID de l'élément :</small>
                            <div><code>{{ component.elementId }}</code></div>
                        </div>
                    {% endif %}
                    
                    {% if component.styleConfig %}
                        <div class="mb-2">
                            <small class="text-muted">Styles appliqués :</small>
                            <div>
                                {% for property, value in component.styleConfig %}
                                    <div class="small"><code>{{ property }}: {{ value }}</code></div>
                                {% endfor %}
                            </div>
                        </div>
                    {% endif %}
                    
                    {% if component.conditionalDisplay %}
                        <div class="mb-2">
                            <small class="text-muted">Affichage conditionnel :</small>
                            <div><span class="badge bg-info">{{ component.conditionalDisplay|length }} condition(s)</span></div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal for editing preview data -->
<div class="modal fade" id="editPreviewDataModal" tabindex="-1" aria-labelledby="editPreviewDataModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editPreviewDataModalLabel">
                    <i class="fas fa-edit me-1"></i>
                    Modifier les données de test
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" id="previewDataForm">
                <div class="modal-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-1"></i>
                        Modifiez les données ci-dessous pour tester différents contenus dans votre composant.
                    </div>
                    
                    <div class="row">
                        {% for key, value in preview_data %}
                            <div class="col-md-6 mb-3">
                                <label for="data_{{ key }}" class="form-label">{{ key|title }}</label>
                                <input type="text" 
                                       class="form-control" 
                                       id="data_{{ key }}" 
                                       name="{{ key }}" 
                                       value="{{ value }}"
                                       placeholder="Valeur pour {{ key }}">
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-1"></i>
                        Annuler
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-sync-alt me-1"></i>
                        Actualiser l'aperçu
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .preview-container {
            position: relative;
        }
        
        .component-preview {
            transition: transform 0.2s ease;
        }
        
        .component-content {
            min-height: 100px;
            position: relative;
        }
        
        .component-content:empty::before {
            content: "Aucun contenu à afficher";
            color: #6c757d;
            font-style: italic;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100px;
        }
        
        .preview-data-display {
            max-height: 300px;
            overflow-y: auto;
        }
        
        /* Zoom controls */
        .zoom-25 { transform: scale(0.25); }
        .zoom-50 { transform: scale(0.5); }
        .zoom-75 { transform: scale(0.75); }
        .zoom-100 { transform: scale(1); }
        .zoom-125 { transform: scale(1.25); }
        .zoom-150 { transform: scale(1.5); }
        .zoom-200 { transform: scale(2); }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            let currentZoom = 100;
            const preview = document.getElementById('component-preview');
            const zoomResetBtn = document.getElementById('zoom-reset');
            
            // Zoom controls
            document.getElementById('zoom-in').addEventListener('click', function() {
                if (currentZoom < 200) {
                    currentZoom += 25;
                    updateZoom();
                }
            });
            
            document.getElementById('zoom-out').addEventListener('click', function() {
                if (currentZoom > 25) {
                    currentZoom -= 25;
                    updateZoom();
                }
            });
            
            document.getElementById('zoom-reset').addEventListener('click', function() {
                currentZoom = 100;
                updateZoom();
            });
            
            function updateZoom() {
                preview.style.transform = `scale(${currentZoom / 100})`;
                zoomResetBtn.textContent = currentZoom + '%';
                
                // Update container padding to accommodate scaled content
                const container = preview.parentElement;
                const scaleFactor = currentZoom / 100;
                const extraPadding = scaleFactor > 1 ? (scaleFactor - 1) * 200 : 0;
                container.style.padding = `${40 + extraPadding}px`;
            }
            
            // Refresh preview
            document.getElementById('refresh-preview').addEventListener('click', function() {
                location.reload();
            });
            
            // Preview data form
            document.getElementById('previewDataForm').addEventListener('submit', function(e) {
                e.preventDefault();
                
                const formData = new FormData(this);
                const button = this.querySelector('button[type="submit"]');
                const originalText = button.innerHTML;
                
                button.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Actualisation...';
                button.disabled = true;
                
                fetch(window.location.href, {
                    method: 'POST',
                    body: formData
                })
                .then(response => response.text())
                .then(html => {
                    // Parse the response and update the preview
                    const parser = new DOMParser();
                    const doc = parser.parseFromString(html, 'text/html');
                    const newPreview = doc.querySelector('.component-content');
                    
                    if (newPreview) {
                        document.querySelector('.component-content').innerHTML = newPreview.innerHTML;
                    }
                    
                    // Close modal
                    const modal = bootstrap.Modal.getInstance(document.getElementById('editPreviewDataModal'));
                    modal.hide();
                    
                    // Show success message
                    const alert = document.createElement('div');
                    alert.className = 'alert alert-success alert-dismissible fade show position-fixed';
                    alert.style.cssText = 'top: 20px; right: 20px; z-index: 9999;';
                    alert.innerHTML = `
                        <i class="fas fa-check me-1"></i>
                        Aperçu mis à jour avec succès
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    `;
                    document.body.appendChild(alert);
                    
                    setTimeout(() => {
                        if (alert.parentElement) {
                            alert.remove();
                        }
                    }, 3000);
                })
                .catch(error => {
                    console.error('Error updating preview:', error);
                    alert('Erreur lors de la mise à jour de l\'aperçu');
                })
                .finally(() => {
                    button.innerHTML = originalText;
                    button.disabled = false;
                });
            });
            
            // Initialize tooltips
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            const tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
{% endblock %}
