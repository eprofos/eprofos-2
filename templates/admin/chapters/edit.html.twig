{% extends 'admin/base.html.twig' %}

{% form_theme form 'form/collection_theme.html.twig' %}

{% block title %}Modifier le chapitre - {{ chapter.title }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>
                    <i class="fas fa-edit me-2"></i>
                    Modifier le chapitre
                    <small class="text-muted">{{ chapter.title }}</small>
                </h1>
                <div class="btn-group">
                    <a href="{{ path('admin_chapters_show', {id: chapter.id}) }}" class="btn btn-outline-info">
                        <i class="fas fa-eye me-2"></i>Voir
                    </a>
                    <a href="{{ path('admin_chapters_index', {module: chapter.module.id}) }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Retour
                    </a>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-book-open me-2"></i>
                        Informations du chapitre
                    </h5>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-8">
                                <div class="mb-3">
                                    {{ form_row(form.title) }}
                                </div>
                                <div class="mb-3">
                                    {{ form_row(form.slug) }}
                                </div>
                                <div class="mb-3">
                                    {{ form_row(form.description) }}
                                </div>
                                <div class="mb-3">
                                    {{ form_row(form.contentOutline) }}
                                </div>
                                <div class="mb-3">
                                    {{ form_row(form.prerequisites) }}
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    {{ form_row(form.module) }}
                                </div>
                                <div class="mb-3">
                                    {{ form_row(form.durationMinutes) }}
                                </div>
                                <div class="mb-3">
                                    {{ form_row(form.orderIndex) }}
                                </div>
                                <div class="mb-3">
                                    {{ form_row(form.isActive) }}
                                </div>
                            </div>
                        </div>

                        <!-- Informations pédagogiques (Conformité réglementaire) -->
                        <div class="card mt-4">
                            <div class="card-header bg-info text-white">
                                <h6 class="card-title mb-0">
                                    <i class="fas fa-graduation-cap me-2"></i>
                                    Informations pédagogiques (Conformité réglementaire)
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            {{ form_row(form.learningObjectives) }}
                                        </div>
                                        <div class="mb-3">
                                            {{ form_row(form.learningOutcomes) }}
                                        </div>
                                        <div class="mb-3">
                                            {{ form_row(form.teachingMethods) }}
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            {{ form_row(form.assessmentMethods) }}
                                        </div>
                                        <div class="mb-3">
                                            {{ form_row(form.resources) }}
                                        </div>
                                        <div class="mb-3">
                                            {{ form_row(form.successCriteria) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a href="{{ path('admin_chapters_index', {module: chapter.module.id}) }}" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Annuler
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Enregistrer les modifications
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
