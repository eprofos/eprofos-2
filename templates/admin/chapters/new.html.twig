{% extends 'admin/base.html.twig' %}

{% form_theme form 'form/collection_theme.html.twig' %}

{% block title %}Nouveau chapitre{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>
                    <i class="fas fa-plus me-2"></i>
                    Nouveau chapitre
                </h1>
                <a href="{{ path('admin_chapters_index') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Retour à la liste
                </a>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-book-open me-2"></i>
                        Informations du chapitre
                    </h5>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-8">
                                <div class="mb-3">
                                    {{ form_row(form.title) }}
                                </div>
                                <div class="mb-3">
                                    {{ form_row(form.slug) }}
                                </div>
                                <div class="mb-3">
                                    {{ form_row(form.description) }}
                                </div>
                                <div class="mb-3">
                                    {{ form_row(form.contentOutline) }}
                                </div>
                                <div class="mb-3">
                                    {{ form_row(form.prerequisites) }}
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    {{ form_row(form.module) }}
                                </div>
                                <div class="mb-3">
                                    {{ form_row(form.durationMinutes) }}
                                </div>
                                <div class="mb-3">
                                    {{ form_row(form.orderIndex) }}
                                </div>
                                <div class="mb-3">
                                    {{ form_row(form.isActive) }}
                                </div>
                            </div>
                        </div>

                        <!-- Pedagogical Information (Qualiopi Compliance) -->
                        <div class="card mt-4">
                            <div class="card-header bg-info text-white">
                                <h6 class="card-title mb-0">
                                    <i class="fas fa-graduation-cap me-2"></i>
                                    Informations pédagogiques (Qualiopi)
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            {{ form_row(form.learningObjectives) }}
                                        </div>
                                        <div class="mb-3">
                                            {{ form_row(form.learningOutcomes) }}
                                        </div>
                                        <div class="mb-3">
                                            {{ form_row(form.teachingMethods) }}
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            {{ form_row(form.assessmentMethods) }}
                                        </div>
                                        <div class="mb-3">
                                            {{ form_row(form.resources) }}
                                        </div>
                                        <div class="mb-3">
                                            {{ form_row(form.successCriteria) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a href="{{ path('admin_chapters_index') }}" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Annuler
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Créer le chapitre
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Auto-generate slug from title
    const titleInput = document.getElementById('chapter_title');
    const slugInput = document.getElementById('chapter_slug');
    
    if (titleInput && slugInput) {
        titleInput.addEventListener('input', function() {
            if (!slugInput.value) {
                const slug = this.value
                    .toLowerCase()
                    .replace(/[^a-z0-9\s-]/g, '')
                    .replace(/\s+/g, '-')
                    .replace(/-+/g, '-')
                    .replace(/^-|-$/g, '');
                slugInput.value = slug;
            }
        });
    }
});
</script>
{% endblock %}
