{% extends 'admin/base.html.twig' %}

{% block title %}Chapitres - {{ module.title }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>
                    <i class="fas fa-book-open me-2"></i>
                    Chapitres du module : {{ module.title }}
                </h1>
                <div class="btn-group">
                    <a href="{{ path('admin_chapters_new', {module: module.id}) }}" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Nouveau chapitre
                    </a>
                    <a href="{{ path('admin_modules_show', {id: module.id}) }}" class="btn btn-info">
                        <i class="fas fa-eye me-2"></i>Voir le module
                    </a>
                    <a href="{{ path('admin_chapters_index') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Tous les chapitres
                    </a>
                </div>
            </div>

            <!-- Module Information -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-puzzle-piece me-2"></i>
                        Informations du module
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <p class="mb-2"><strong>Formation :</strong> {{ module.formation.title }}</p>
                            {% if module.description %}
                                <p class="mb-2"><strong>Description :</strong> {{ module.description }}</p>
                            {% endif %}
                            <p class="mb-2"><strong>Durée :</strong> {{ module.formattedDuration }}</p>
                        </div>
                        <div class="col-md-4">
                            <p class="mb-2"><strong>Ordre :</strong> <span class="badge bg-secondary">{{ module.orderIndex }}</span></p>
                            <p class="mb-2"><strong>Statut :</strong> 
                                {% if module.isActive %}
                                    <span class="badge bg-success">Actif</span>
                                {% else %}
                                    <span class="badge bg-secondary">Inactif</span>
                                {% endif %}
                            </p>
                            <p class="mb-0"><strong>Chapitres :</strong> <span class="badge bg-primary">{{ chapters|length }}</span></p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Chapters List -->
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-list me-2"></i>
                        Liste des chapitres ({{ chapters|length }})
                    </h5>
                </div>
                <div class="card-body">
                    {% if chapters %}
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Ordre</th>
                                        <th>Titre</th>
                                        <th>Durée</th>
                                        <th>Objectifs</th>
                                        <th>Ressources</th>
                                        <th>Statut</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody id="chapters-sortable">
                                    {% for chapter in chapters %}
                                        <tr data-id="{{ chapter.id }}">
                                            <td>
                                                <span class="badge bg-secondary">{{ chapter.orderIndex }}</span>
                                                <i class="fas fa-grip-vertical text-muted ms-2" style="cursor: move;"></i>
                                            </td>
                                            <td>
                                                <strong>{{ chapter.title }}</strong>
                                                {% if chapter.description %}
                                                    <br><small class="text-muted">{{ chapter.description|slice(0, 80) }}...</small>
                                                {% endif %}
                                            </td>
                                            <td>{{ chapter.formattedDuration }}</td>
                                            <td>
                                                {% if chapter.learningObjectives %}
                                                    <span class="badge bg-success">{{ chapter.learningObjectives|length }}</span>
                                                {% else %}
                                                    <span class="badge bg-secondary">0</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if chapter.resources %}
                                                    <span class="badge bg-warning">{{ chapter.resources|length }}</span>
                                                {% else %}
                                                    <span class="badge bg-secondary">0</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if chapter.isActive %}
                                                    <span class="badge bg-success">Actif</span>
                                                {% else %}
                                                    <span class="badge bg-secondary">Inactif</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a href="{{ path('admin_chapters_show', {id: chapter.id}) }}" 
                                                       class="btn btn-outline-info" title="Voir">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="{{ path('admin_chapters_edit', {id: chapter.id}) }}" 
                                                       class="btn btn-outline-primary" title="Modifier">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <form method="post" 
                                                          action="{{ path('admin_chapters_duplicate', {id: chapter.id}) }}" 
                                                          style="display: inline;">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('duplicate' ~ chapter.id) }}">
                                                        <button type="submit" class="btn btn-outline-success" title="Dupliquer">
                                                            <i class="fas fa-copy"></i>
                                                        </button>
                                                    </form>
                                                    <form method="post" 
                                                          action="{{ path('admin_chapters_toggle_active', {id: chapter.id}) }}" 
                                                          style="display: inline;">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ chapter.id) }}">
                                                        <button type="submit" class="btn btn-outline-warning" 
                                                                title="{% if chapter.isActive %}Désactiver{% else %}Activer{% endif %}">
                                                            <i class="fas fa-{% if chapter.isActive %}pause{% else %}play{% endif %}"></i>
                                                        </button>
                                                    </form>
                                                    <form method="post" 
                                                          action="{{ path('admin_chapters_delete', {id: chapter.id}) }}" 
                                                          style="display: inline;"
                                                          onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce chapitre ?');">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ chapter.id) }}">
                                                        <button type="submit" class="btn btn-outline-danger" title="Supprimer">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="text-center py-4">
                            <i class="fas fa-book-open fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Aucun chapitre trouvé</h5>
                            <p class="text-muted">Ce module ne contient pas encore de chapitres.</p>
                            <a href="{{ path('admin_chapters_new', {module: module.id}) }}" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>Créer un chapitre
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

{% if chapters %}
    <!-- Sortable functionality -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const tbody = document.getElementById('chapters-sortable');
            if (tbody) {
                new Sortable(tbody, {
                    handle: '.fa-grip-vertical',
                    animation: 150,
                    onEnd: function(evt) {
                        const chapterIds = Array.from(tbody.children).map(tr => tr.dataset.id);
                        
                        fetch('{{ path('admin_chapters_reorder') }}', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/x-www-form-urlencoded',
                                'X-Requested-With': 'XMLHttpRequest'
                            },
                            body: new URLSearchParams({
                                'chapters': chapterIds,
                                'module_id': '{{ module.id }}'
                            })
                        })
                        .then(response => {
                            if (response.ok) {
                                location.reload();
                            }
                        });
                    }
                });
            }
        });
    </script>
{% endif %}
{% endblock %}
