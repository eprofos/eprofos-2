<div class="card border-0 shadow-sm">
    <div class="card-header bg-success text-white">
        <h5 class="mb-0">
            <i class="fas fa-user me-2"></i>
            Analyse des besoins - Particulier
        </h5>
    </div>
    <div class="card-body">
        {% if analysis %}
            <!-- Personal Information -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <h6 class="text-success border-bottom pb-2">
                        <i class="fas fa-id-card me-2"></i>
                        Informations personnelles
                    </h6>
                    <dl class="row">
                        <dt class="col-sm-5">Nom complet :</dt>
                        <dd class="col-sm-7">{{ analysis.fullName|default('Non renseigné') }}</dd>
                        
                        <dt class="col-sm-5">Email :</dt>
                        <dd class="col-sm-7">
                            {% if analysis.email %}
                                <a href="mailto:{{ analysis.email }}" class="text-decoration-none">
                                    {{ analysis.email }}
                                </a>
                            {% else %}
                                Non renseigné
                            {% endif %}
                        </dd>
                        
                        <dt class="col-sm-5">Téléphone :</dt>
                        <dd class="col-sm-7">
                            {% if analysis.phone %}
                                <a href="tel:{{ analysis.phone }}" class="text-decoration-none">
                                    {{ analysis.phone }}
                                </a>
                            {% else %}
                                Non renseigné
                            {% endif %}
                        </dd>
                        
                        <dt class="col-sm-5">Adresse :</dt>
                        <dd class="col-sm-7">{{ analysis.address|default('Non renseigné') }}</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <h6 class="text-success border-bottom pb-2">
                        <i class="fas fa-briefcase me-2"></i>
                        Situation professionnelle
                    </h6>
                    <dl class="row">
                        <dt class="col-sm-5">Statut :</dt>
                        <dd class="col-sm-7">
                            {% if analysis.status %}
                                <span class="badge bg-primary">{{ analysis.statusLabel }}</span>
                            {% else %}
                                Non renseigné
                            {% endif %}
                        </dd>
                        
                        <dt class="col-sm-5">Détails statut :</dt>
                        <dd class="col-sm-7">
                            {% if analysis.statusOtherDetails %}
                                <div class="bg-light p-2 rounded">
                                    {{ analysis.statusOtherDetails|nl2br }}
                                </div>
                            {% else %}
                                Non renseigné
                            {% endif %}
                        </dd>
                    </dl>
                </div>
            </div>

            <!-- Education and Skills -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <h6 class="text-success border-bottom pb-2">
                        <i class="fas fa-graduation-cap me-2"></i>
                        Formation et compétences
                    </h6>
                    <dl class="row">
                        <dt class="col-sm-5">Niveau actuel :</dt>
                        <dd class="col-sm-7">
                            {% if analysis.currentLevel %}
                                <span class="badge bg-info">{{ analysis.currentLevelLabel }}</span>
                            {% else %}
                                Non renseigné
                            {% endif %}
                        </dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <h6 class="text-success border-bottom pb-2">
                        <i class="fas fa-bullseye me-2"></i>
                        Projet professionnel
                    </h6>
                    <dl class="row">
                        <dt class="col-sm-5">Objectif professionnel :</dt>
                        <dd class="col-sm-7">
                            {% if analysis.professionalObjective %}
                                <div class="bg-light p-3 rounded">
                                    {{ analysis.professionalObjective|nl2br }}
                                </div>
                            {% else %}
                                Non renseigné
                            {% endif %}
                        </dd>
                    </dl>
                </div>
            </div>

            <!-- Training Needs -->
            <div class="row mb-4">
                <div class="col-12">
                    <h6 class="text-success border-bottom pb-2">
                        <i class="fas fa-target me-2"></i>
                        Besoins de formation
                    </h6>
                    <dl class="row">
                        <dt class="col-sm-3">Formation souhaitée :</dt>
                        <dd class="col-sm-9">{{ analysis.desiredTrainingTitle|default('Non renseigné') }}</dd>
                        
                        <dt class="col-sm-3">Durée souhaitée :</dt>
                        <dd class="col-sm-9">
                            {% if analysis.desiredDurationHours %}
                                <span class="badge bg-info">{{ analysis.formattedDuration }}</span>
                            {% else %}
                                Non renseigné
                            {% endif %}
                        </dd>
                        
                        <dt class="col-sm-3">Attentes de formation :</dt>
                        <dd class="col-sm-9">
                            {% if analysis.trainingExpectations %}
                                <div class="bg-light p-3 rounded">
                                    {{ analysis.trainingExpectations|nl2br }}
                                </div>
                            {% else %}
                                Non renseigné
                            {% endif %}
                        </dd>
                        
                        <dt class="col-sm-3">Besoins spécifiques :</dt>
                        <dd class="col-sm-9">
                            {% if analysis.specificNeeds %}
                                <div class="bg-light p-3 rounded">
                                    {{ analysis.specificNeeds|nl2br }}
                                </div>
                            {% else %}
                                Non renseigné
                            {% endif %}
                        </dd>
                    </dl>
                </div>
            </div>

            <!-- Learning Preferences -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <h6 class="text-success border-bottom pb-2">
                        <i class="fas fa-cogs me-2"></i>
                        Préférences d'apprentissage
                    </h6>
                    <dl class="row">
                        <dt class="col-sm-6">Lieu de formation :</dt>
                        <dd class="col-sm-6">
                            {% if analysis.trainingLocationPreference %}
                                <span class="badge bg-secondary">{{ analysis.trainingLocationPreferenceLabel }}</span>
                            {% else %}
                                Non renseigné
                            {% endif %}
                        </dd>
                        
                        <dt class="col-sm-6">Date de début :</dt>
                        <dd class="col-sm-6">{{ analysis.preferredStartDate ? analysis.preferredStartDate|date('d/m/Y') : 'Non renseigné' }}</dd>
                        
                        <dt class="col-sm-6">Date de fin :</dt>
                        <dd class="col-sm-6">{{ analysis.preferredEndDate ? analysis.preferredEndDate|date('d/m/Y') : 'Non renseigné' }}</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <h6 class="text-success border-bottom pb-2">
                        <i class="fas fa-calendar-times me-2"></i>
                        Contraintes
                    </h6>
                    {% if analysis.disabilityAccommodations %}
                        <div class="bg-light p-3 rounded">
                            {{ analysis.disabilityAccommodations|nl2br }}
                        </div>
                    {% else %}
                        <p class="text-muted">Aucun aménagement handicap spécifique</p>
                    {% endif %}
                </div>
            </div>

            <!-- Financing -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <h6 class="text-success border-bottom pb-2">
                        <i class="fas fa-euro-sign me-2"></i>
                        Financement
                    </h6>
                    <dl class="row">
                        <dt class="col-sm-6">Type de financement :</dt>
                        <dd class="col-sm-6">
                            {% if analysis.fundingType %}
                                <span class="badge bg-success">{{ analysis.fundingTypeLabel }}</span>
                            {% else %}
                                Non renseigné
                            {% endif %}
                        </dd>
                        
                        <dt class="col-sm-6">Détails financement :</dt>
                        <dd class="col-sm-6">
                            {% if analysis.fundingOtherDetails %}
                                <div class="bg-light p-2 rounded">
                                    {{ analysis.fundingOtherDetails|nl2br }}
                                </div>
                            {% else %}
                                Non renseigné
                            {% endif %}
                        </dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <h6 class="text-success border-bottom pb-2">
                        <i class="fas fa-clock me-2"></i>
                        Disponibilité
                    </h6>
                    <dl class="row">
                        <dt class="col-sm-6">Début souhaité :</dt>
                        <dd class="col-sm-6">{{ analysis.preferredStartDate ? analysis.preferredStartDate|date('d/m/Y') : 'Non renseigné' }}</dd>
                        
                        <dt class="col-sm-6">Fin souhaitée :</dt>
                        <dd class="col-sm-6">{{ analysis.preferredEndDate ? analysis.preferredEndDate|date('d/m/Y') : 'Non renseigné' }}</dd>
                    </dl>
                </div>
            </div>


            <!-- Metadata -->
            <div class="row">
                <div class="col-12">
                    <div class="card bg-light border-0">
                        <div class="card-body">
                            <h6 class="card-title text-muted">
                                <i class="fas fa-info me-2"></i>
                                Informations de soumission
                            </h6>
                            <div class="row">
                                <div class="col-md-4">
                                    <small class="text-muted">
                                        <strong>Date de soumission :</strong><br>
                                        {{ analysis.submittedAt ? analysis.submittedAt|date('d/m/Y à H:i') : 'Non soumis' }}
                                    </small>
                                </div>
                                <div class="col-md-4">
                                    <small class="text-muted">
                                        <strong>Dernière modification :</strong><br>
                                        {{ analysis.submittedAt ? analysis.submittedAt|date('d/m/Y à H:i') : 'Jamais' }}
                                    </small>
                                </div>
                                <div class="col-md-4">
                                    <small class="text-muted">
                                        <strong>Statut :</strong><br>
                                        {% if analysis.submittedAt %}
                                            <span class="badge bg-success">Complété</span>
                                        {% else %}
                                            <span class="badge bg-warning">En cours</span>
                                        {% endif %}
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="text-center py-5">
                <i class="fas fa-file-alt text-muted mb-3" style="font-size: 3rem;"></i>
                <h5 class="text-muted">Analyse non disponible</h5>
                <p class="text-muted">L'analyse des besoins n'a pas encore été remplie.</p>
                
                {% if request.status == 'sent' %}
                    <div class="alert alert-info">
                        <i class="fas fa-clock me-2"></i>
                        Le formulaire a été envoyé et est en attente de completion.
                    </div>
                {% endif %}
            </div>
        {% endif %}
    </div>
</div>

<style>
.card {
    border-radius: 0.75rem;
}

.badge {
    font-size: 0.8em;
}

dt {
    font-weight: 600;
    color: #495057;
}

dd {
    margin-bottom: 0.5rem;
}

.bg-light {
    background-color: #f8f9fa !important;
}

.border-bottom {
    border-bottom: 2px solid #dee2e6 !important;
}

.text-success {
    color: #198754 !important;
}
</style>