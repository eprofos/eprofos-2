<div class="card border-0 shadow-sm">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">
            <i class="fas fa-building me-2"></i>
            Analyse des besoins - Entreprise
        </h5>
    </div>
    <div class="card-body">
        {% if analysis %}
            <!-- Company Information -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <h6 class="text-primary border-bottom pb-2">
                        <i class="fas fa-info-circle me-2"></i>
                        Informations entreprise
                    </h6>
                    <dl class="row">
                        <dt class="col-sm-5">Nom de l'entreprise :</dt>
                        <dd class="col-sm-7">{{ analysis.companyName|default('Non renseigné') }}</dd>
                        
                        <dt class="col-sm-5">Secteur d'activité :</dt>
                        <dd class="col-sm-7">{{ analysis.activitySector|default('Non renseigné') }}</dd>
                        
                        <dt class="col-sm-5">Taille :</dt>
                        <dd class="col-sm-7">
                            {% if analysis.companySize %}
                                <span class="badge bg-info">{{ analysis.companySize }}</span>
                            {% else %}
                                Non renseigné
                            {% endif %}
                        </dd>
                        
                        <dt class="col-sm-5">Localisation :</dt>
                        <dd class="col-sm-7">{{ analysis.location|default('Non renseigné') }}</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <h6 class="text-primary border-bottom pb-2">
                        <i class="fas fa-user-tie me-2"></i>
                        Contact principal
                    </h6>
                    <dl class="row">
                        <dt class="col-sm-5">Nom :</dt>
                        <dd class="col-sm-7">{{ analysis.contactName|default('Non renseigné') }}</dd>
                        
                        <dt class="col-sm-5">Fonction :</dt>
                        <dd class="col-sm-7">{{ analysis.contactPosition|default('Non renseigné') }}</dd>
                        
                        <dt class="col-sm-5">Téléphone :</dt>
                        <dd class="col-sm-7">
                            {% if analysis.contactPhone %}
                                <a href="tel:{{ analysis.contactPhone }}" class="text-decoration-none">
                                    {{ analysis.contactPhone }}
                                </a>
                            {% else %}
                                Non renseigné
                            {% endif %}
                        </dd>
                        
                        <dt class="col-sm-5">Email :</dt>
                        <dd class="col-sm-7">
                            {% if analysis.contactEmail %}
                                <a href="mailto:{{ analysis.contactEmail }}" class="text-decoration-none">
                                    {{ analysis.contactEmail }}
                                </a>
                            {% else %}
                                Non renseigné
                            {% endif %}
                        </dd>
                    </dl>
                </div>
            </div>

            <!-- Training Needs -->
            <div class="row mb-4">
                <div class="col-12">
                    <h6 class="text-primary border-bottom pb-2">
                        <i class="fas fa-target me-2"></i>
                        Besoins de formation
                    </h6>
                    <dl class="row">
                        <dt class="col-sm-3">Domaine de formation :</dt>
                        <dd class="col-sm-9">{{ analysis.trainingDomain|default('Non renseigné') }}</dd>
                        
                        <dt class="col-sm-3">Objectifs pédagogiques :</dt>
                        <dd class="col-sm-9">
                            {% if analysis.trainingObjectives %}
                                <div class="bg-light p-3 rounded">
                                    {{ analysis.trainingObjectives|nl2br }}
                                </div>
                            {% else %}
                                Non renseigné
                            {% endif %}
                        </dd>
                        
                        <dt class="col-sm-3">Compétences à développer :</dt>
                        <dd class="col-sm-9">
                            {% if analysis.skillsToAcquire %}
                                <div class="bg-light p-3 rounded">
                                    {{ analysis.skillsToAcquire|nl2br }}
                                </div>
                            {% else %}
                                Non renseigné
                            {% endif %}
                        </dd>
                    </dl>
                </div>
            </div>

            <!-- Participants -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <h6 class="text-primary border-bottom pb-2">
                        <i class="fas fa-users me-2"></i>
                        Participants
                    </h6>
                    <dl class="row">
                        <dt class="col-sm-6">Nombre :</dt>
                        <dd class="col-sm-6">
                            {% if analysis.participantsCount %}
                                <span class="badge bg-success">{{ analysis.participantsCount }}</span>
                            {% else %}
                                Non renseigné
                            {% endif %}
                        </dd>
                        
                        <dt class="col-sm-6">Profils :</dt>
                        <dd class="col-sm-6">{{ analysis.participantsProfiles|default('Non renseigné') }}</dd>
                        
                        <dt class="col-sm-6">Niveau actuel :</dt>
                        <dd class="col-sm-6">
                            {% if analysis.currentSkillLevel %}
                                <span class="badge bg-info">{{ analysis.currentSkillLevel }}</span>
                            {% else %}
                                Non renseigné
                            {% endif %}
                        </dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <h6 class="text-primary border-bottom pb-2">
                        <i class="fas fa-calendar me-2"></i>
                        Organisation
                    </h6>
                    <dl class="row">
                        <dt class="col-sm-6">Modalités :</dt>
                        <dd class="col-sm-6">
                            {% if analysis.preferredModality %}
                                <span class="badge bg-secondary">{{ analysis.preferredModality }}</span>
                            {% else %}
                                Non renseigné
                            {% endif %}
                        </dd>
                        
                        <dt class="col-sm-6">Durée souhaitée :</dt>
                        <dd class="col-sm-6">{{ analysis.preferredDuration|default('Non renseigné') }}</dd>
                        
                        <dt class="col-sm-6">Planning :</dt>
                        <dd class="col-sm-6">{{ analysis.preferredSchedule|default('Non renseigné') }}</dd>
                    </dl>
                </div>
            </div>

            <!-- Budget and Constraints -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <h6 class="text-primary border-bottom pb-2">
                        <i class="fas fa-euro-sign me-2"></i>
                        Budget et financement
                    </h6>
                    <dl class="row">
                        <dt class="col-sm-6">Budget estimé :</dt>
                        <dd class="col-sm-6">{{ analysis.estimatedBudget|default('Non renseigné') }}</dd>
                        
                        <dt class="col-sm-6">Financement :</dt>
                        <dd class="col-sm-6">{{ analysis.fundingSource|default('Non renseigné') }}</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <h6 class="text-primary border-bottom pb-2">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Contraintes
                    </h6>
                    {% if analysis.constraints %}
                        <div class="bg-light p-3 rounded">
                            {{ analysis.constraints|nl2br }}
                        </div>
                    {% else %}
                        <p class="text-muted">Aucune contrainte particulière</p>
                    {% endif %}
                </div>
            </div>

            <!-- Additional Information -->
            {% if analysis.additionalInfo %}
                <div class="row mb-4">
                    <div class="col-12">
                        <h6 class="text-primary border-bottom pb-2">
                            <i class="fas fa-plus-circle me-2"></i>
                            Informations complémentaires
                        </h6>
                        <div class="bg-light p-3 rounded">
                            {{ analysis.additionalInfo|nl2br }}
                        </div>
                    </div>
                </div>
            {% endif %}

            <!-- Metadata -->
            <div class="row">
                <div class="col-12">
                    <div class="card bg-light border-0">
                        <div class="card-body">
                            <h6 class="card-title text-muted">
                                <i class="fas fa-info me-2"></i>
                                Informations de soumission
                            </h6>
                            <div class="row">
                                <div class="col-md-4">
                                    <small class="text-muted">
                                        <strong>Date de soumission :</strong><br>
                                        {{ analysis.submittedAt ? analysis.submittedAt|date('d/m/Y à H:i') : 'Non soumis' }}
                                    </small>
                                </div>
                                <div class="col-md-4">
                                    <small class="text-muted">
                                        <strong>Dernière modification :</strong><br>
                                        {{ analysis.updatedAt ? analysis.updatedAt|date('d/m/Y à H:i') : 'Jamais' }}
                                    </small>
                                </div>
                                <div class="col-md-4">
                                    <small class="text-muted">
                                        <strong>Statut :</strong><br>
                                        {% if analysis.submittedAt %}
                                            <span class="badge bg-success">Complété</span>
                                        {% else %}
                                            <span class="badge bg-warning">En cours</span>
                                        {% endif %}
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="text-center py-5">
                <i class="fas fa-file-alt text-muted mb-3" style="font-size: 3rem;"></i>
                <h5 class="text-muted">Analyse non disponible</h5>
                <p class="text-muted">L'analyse des besoins n'a pas encore été remplie.</p>
                
                {% if request.status == 'sent' %}
                    <div class="alert alert-info">
                        <i class="fas fa-clock me-2"></i>
                        Le formulaire a été envoyé et est en attente de completion.
                    </div>
                {% endif %}
            </div>
        {% endif %}
    </div>
</div>

<style>
.card {
    border-radius: 0.75rem;
}

.badge {
    font-size: 0.8em;
}

dt {
    font-weight: 600;
    color: #495057;
}

dd {
    margin-bottom: 0.5rem;
}

.bg-light {
    background-color: #f8f9fa !important;
}

.border-bottom {
    border-bottom: 2px solid #dee2e6 !important;
}
</style>