<div class="card border-0 shadow-sm">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">
            <i class="fas fa-building me-2"></i>
            Analyse des besoins - Entreprise
        </h5>
    </div>
    <div class="card-body">
        {% if analysis %}
            <!-- Company Information -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <h6 class="text-primary border-bottom pb-2">
                        <i class="fas fa-info-circle me-2"></i>
                        Informations entreprise
                    </h6>
                    <dl class="row">
                        <dt class="col-sm-5">Nom de l'entreprise :</dt>
                        <dd class="col-sm-7">{{ analysis.companyName|default('Non renseigné') }}</dd>
                        
                        <dt class="col-sm-5">Secteur d'activité :</dt>
                        <dd class="col-sm-7">{{ analysis.activitySector|default('Non renseigné') }}</dd>
                        
                        <dt class="col-sm-5">Nombre d'employés :</dt>
                        <dd class="col-sm-7">
                            {% if analysis.employeeCount %}
                                <span class="badge bg-info">{{ analysis.employeeCount }} employés</span>
                            {% else %}
                                Non renseigné
                            {% endif %}
                        </dd>
                        
                        <dt class="col-sm-5">Adresse :</dt>
                        <dd class="col-sm-7">{{ analysis.companyAddress|default('Non renseigné') }}</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <h6 class="text-primary border-bottom pb-2">
                        <i class="fas fa-user-tie me-2"></i>
                        Contact principal
                    </h6>
                    <dl class="row">
                        <dt class="col-sm-5">Responsable :</dt>
                        <dd class="col-sm-7">{{ analysis.responsiblePerson|default('Non renseigné') }}</dd>
                        
                        <dt class="col-sm-5">Code NAF :</dt>
                        <dd class="col-sm-7">{{ analysis.nafCode|default('Non renseigné') }}</dd>
                        
                        <dt class="col-sm-5">Téléphone :</dt>
                        <dd class="col-sm-7">
                            {% if analysis.contactPhone %}
                                <a href="tel:{{ analysis.contactPhone }}" class="text-decoration-none">
                                    {{ analysis.contactPhone }}
                                </a>
                            {% else %}
                                Non renseigné
                            {% endif %}
                        </dd>
                        
                        <dt class="col-sm-5">Email :</dt>
                        <dd class="col-sm-7">
                            {% if analysis.contactEmail %}
                                <a href="mailto:{{ analysis.contactEmail }}" class="text-decoration-none">
                                    {{ analysis.contactEmail }}
                                </a>
                            {% else %}
                                Non renseigné
                            {% endif %}
                        </dd>
                    </dl>
                </div>
            </div>

            <!-- Training Needs -->
            <div class="row mb-4">
                <div class="col-12">
                    <h6 class="text-primary border-bottom pb-2">
                        <i class="fas fa-target me-2"></i>
                        Besoins de formation
                    </h6>
                    <dl class="row">
                        <dt class="col-sm-3">Titre de formation :</dt>
                        <dd class="col-sm-9">{{ analysis.trainingTitle|default('Non renseigné') }}</dd>
                        
                        <dt class="col-sm-3">Durée (heures) :</dt>
                        <dd class="col-sm-9">
                            {% if analysis.trainingDurationHours %}
                                <span class="badge bg-info">{{ analysis.trainingDurationHours }}h</span>
                            {% else %}
                                Non renseigné
                            {% endif %}
                        </dd>
                        
                        <dt class="col-sm-3">Attentes de formation :</dt>
                        <dd class="col-sm-9">
                            {% if analysis.trainingExpectations %}
                                <div class="bg-light p-3 rounded">
                                    {{ analysis.trainingExpectations|nl2br }}
                                </div>
                            {% else %}
                                Non renseigné
                            {% endif %}
                        </dd>
                        
                        <dt class="col-sm-3">Besoins spécifiques :</dt>
                        <dd class="col-sm-9">
                            {% if analysis.specificNeeds %}
                                <div class="bg-light p-3 rounded">
                                    {{ analysis.specificNeeds|nl2br }}
                                </div>
                            {% else %}
                                Non renseigné
                            {% endif %}
                        </dd>
                    </dl>
                </div>
            </div>

            <!-- Participants -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <h6 class="text-primary border-bottom pb-2">
                        <i class="fas fa-users me-2"></i>
                        Participants
                    </h6>
                    <dl class="row">
                        <dt class="col-sm-6">Informations stagiaires :</dt>
                        <dd class="col-sm-6">
                            {% if analysis.traineesInfo %}
                                <div class="bg-light p-2 rounded">
                                    {% for trainee in analysis.traineesInfo %}
                                        <small class="d-block">{{ trainee.first_name|default('') }} {{ trainee.last_name|default('') }} - {{ trainee.position|default('') }}</small>
                                    {% endfor %}
                                </div>
                            {% else %}
                                Non renseigné
                            {% endif %}
                        </dd>
                        
                        <dt class="col-sm-6">SIRET :</dt>
                        <dd class="col-sm-6">{{ analysis.siret|default('Non renseigné') }}</dd>
                        
                        <dt class="col-sm-6">OPCO :</dt>
                        <dd class="col-sm-6">{{ analysis.opco|default('Non renseigné') }}</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <h6 class="text-primary border-bottom pb-2">
                        <i class="fas fa-calendar me-2"></i>
                        Organisation
                    </h6>
                    <dl class="row">
                        <dt class="col-sm-6">Lieu de formation :</dt>
                        <dd class="col-sm-6">
                            {% if analysis.trainingLocationPreference %}
                                <span class="badge bg-secondary">{{ analysis.trainingLocationPreference }}</span>
                            {% else %}
                                Non renseigné
                            {% endif %}
                        </dd>
                        
                        <dt class="col-sm-6">Date de début :</dt>
                        <dd class="col-sm-6">{{ analysis.preferredStartDate ? analysis.preferredStartDate|date('d/m/Y') : 'Non renseigné' }}</dd>
                        
                        <dt class="col-sm-6">Date de fin :</dt>
                        <dd class="col-sm-6">{{ analysis.preferredEndDate ? analysis.preferredEndDate|date('d/m/Y') : 'Non renseigné' }}</dd>
                    </dl>
                </div>
            </div>

            <!-- Budget and Constraints -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <h6 class="text-primary border-bottom pb-2">
                        <i class="fas fa-euro-sign me-2"></i>
                        Budget et financement
                    </h6>
                    <dl class="row">
                        <dt class="col-sm-6">Aménagements handicap :</dt>
                        <dd class="col-sm-6">
                            {% if analysis.disabilityAccommodations %}
                                <div class="bg-light p-2 rounded">
                                    {{ analysis.disabilityAccommodations|nl2br }}
                                </div>
                            {% else %}
                                Non renseigné
                            {% endif %}
                        </dd>
                        
                        <dt class="col-sm-6">Besoins d'appropriation :</dt>
                        <dd class="col-sm-6">
                            {% if analysis.locationAppropriationNeeds %}
                                <div class="bg-light p-2 rounded">
                                    {{ analysis.locationAppropriationNeeds|nl2br }}
                                </div>
                            {% else %}
                                Non renseigné
                            {% endif %}
                        </dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <h6 class="text-primary border-bottom pb-2">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Contraintes
                    </h6>
                    <p class="text-muted">Informations supplémentaires disponibles dans les champs ci-dessus</p>
                </div>
            </div>


            <!-- Metadata -->
            <div class="row">
                <div class="col-12">
                    <div class="card bg-light border-0">
                        <div class="card-body">
                            <h6 class="card-title text-muted">
                                <i class="fas fa-info me-2"></i>
                                Informations de soumission
                            </h6>
                            <div class="row">
                                <div class="col-md-4">
                                    <small class="text-muted">
                                        <strong>Date de soumission :</strong><br>
                                        {{ analysis.submittedAt ? analysis.submittedAt|date('d/m/Y à H:i') : 'Non soumis' }}
                                    </small>
                                </div>
                                <div class="col-md-4">
                                    <small class="text-muted">
                                        <strong>Dernière modification :</strong><br>
                                        {{ analysis.submittedAt ? analysis.submittedAt|date('d/m/Y à H:i') : 'Jamais' }}
                                    </small>
                                </div>
                                <div class="col-md-4">
                                    <small class="text-muted">
                                        <strong>Statut :</strong><br>
                                        {% if analysis.submittedAt %}
                                            <span class="badge bg-success">Complété</span>
                                        {% else %}
                                            <span class="badge bg-warning">En cours</span>
                                        {% endif %}
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="text-center py-5">
                <i class="fas fa-file-alt text-muted mb-3" style="font-size: 3rem;"></i>
                <h5 class="text-muted">Analyse non disponible</h5>
                <p class="text-muted">L'analyse des besoins n'a pas encore été remplie.</p>
                
                {% if request.status == 'sent' %}
                    <div class="alert alert-info">
                        <i class="fas fa-clock me-2"></i>
                        Le formulaire a été envoyé et est en attente de completion.
                    </div>
                {% endif %}
            </div>
        {% endif %}
    </div>
</div>

<style>
.card {
    border-radius: 0.75rem;
}

.badge {
    font-size: 0.8em;
}

dt {
    font-weight: 600;
    color: #495057;
}

dd {
    margin-bottom: 0.5rem;
}

.bg-light {
    background-color: #f8f9fa !important;
}

.border-bottom {
    border-bottom: 2px solid #dee2e6 !important;
}
</style>