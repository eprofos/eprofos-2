{% extends 'admin/base.html.twig' %}

{% block title %}Documents légaux - Dashboard{% endblock %}

{% block body %}
<div class="container-xl">
    <!-- Page header -->
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <!-- Page pre-title -->
                    <div class="page-pretitle">
                        Admin Dashboard
                    </div>
                    <h2 class="page-title">
                        Documents légaux
                        <span class="badge bg-orange ms-2">Qualiopi 3.9</span>
                    </h2>
                </div>
                <!-- Page title actions -->
                <div class="col-auto ms-auto d-print-none">
                    <div class="btn-list">
                        <a href="{{ path('admin_legal_document_new') }}" class="btn btn-primary">
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                <path d="M12 5l0 14"/>
                                <path d="M5 12l14 0"/>
                            </svg>
                            Nouveau document
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Page body -->
    <div class="page-body">
        <div class="container-xl">
            <!-- Global Statistics -->
            <div class="row row-deck row-cards mb-4">
                <div class="col-sm-6 col-lg-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="subheader">Total documents</div>
                                <div class="ms-auto lh-1">
                                    <div class="dropdown">
                                        <span class="badge bg-blue">Tous</span>
                                    </div>
                                </div>
                            </div>
                            <div class="h1 mb-3">{{ statistics.total }}</div>
                            <div class="d-flex mb-2">
                                <div>Documents dans le système</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="subheader">Documents publiés</div>
                                <div class="ms-auto lh-1">
                                    <span class="badge bg-green">Actifs</span>
                                </div>
                            </div>
                            <div class="h1 mb-3 text-green">{{ statistics.published }}</div>
                            <div class="d-flex mb-2">
                                <div>Visibles par le public</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="subheader">Brouillons</div>
                                <div class="ms-auto lh-1">
                                    <span class="badge bg-warning">En attente</span>
                                </div>
                            </div>
                            <div class="h1 mb-3 text-warning">{{ statistics.drafts }}</div>
                            <div class="d-flex mb-2">
                                <div>En cours de rédaction</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Document Types Overview -->
            <div class="row row-deck row-cards">
                <!-- Internal Regulations -->
                <div class="col-sm-6 col-lg-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <div class="avatar avatar-sm me-3 bg-blue text-white">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                        <path d="M14 3v4a1 1 0 0 0 1 1h4"/>
                                        <path d="M17 21h-10a2 2 0 0 1 -2 -2v-14a2 2 0 0 1 2 -2h7l5 5v11a2 2 0 0 1 -2 2z"/>
                                    </svg>
                                </div>
                                <div>
                                    <div class="fw-bold">Règlements intérieurs</div>
                                    <div class="text-muted">{{ statistics.types.internal_regulation ?? 0 }} document(s)</div>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between">
                                <a href="{{ path('admin_legal_document_internal_regulation') }}" class="btn btn-outline-blue btn-sm">
                                    Gérer
                                </a>
                                <a href="{{ path('admin_legal_document_new', {type: 'internal_regulation'}) }}" class="btn btn-blue btn-sm">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                        <path d="M12 5l0 14"/>
                                        <path d="M5 12l14 0"/>
                                    </svg>
                                    Nouveau
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Student Handbooks -->
                <div class="col-sm-6 col-lg-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <div class="avatar avatar-sm me-3 bg-green text-white">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                        <path d="M19 4v16l-12 -7l12 -9z"/>
                                    </svg>
                                </div>
                                <div>
                                    <div class="fw-bold">Livrets d'accueil</div>
                                    <div class="text-muted">{{ statistics.types.student_handbook ?? 0 }} document(s)</div>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between">
                                <a href="{{ path('admin_legal_document_student_handbook') }}" class="btn btn-outline-green btn-sm">
                                    Gérer
                                </a>
                                <a href="{{ path('admin_legal_document_new', {type: 'student_handbook'}) }}" class="btn btn-green btn-sm">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                        <path d="M12 5l0 14"/>
                                        <path d="M5 12l14 0"/>
                                    </svg>
                                    Nouveau
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Training Terms -->
                <div class="col-sm-6 col-lg-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <div class="avatar avatar-sm me-3 bg-purple text-white">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                        <path d="M9 5h-2a2 2 0 0 0 -2 2v12a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-12a2 2 0 0 0 -2 -2h-2"/>
                                        <path d="M9 3m0 2a2 2 0 0 1 2 -2h2a2 2 0 0 1 2 2v0a2 2 0 0 1 -2 2h-2a2 2 0 0 1 -2 -2z"/>
                                    </svg>
                                </div>
                                <div>
                                    <div class="fw-bold">Conditions de formation</div>
                                    <div class="text-muted">{{ statistics.types.training_terms ?? 0 }} document(s)</div>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between">
                                <a href="{{ path('admin_legal_document_training_terms') }}" class="btn btn-outline-purple btn-sm">
                                    Gérer
                                </a>
                                <a href="{{ path('admin_legal_document_new', {type: 'training_terms'}) }}" class="btn btn-purple btn-sm">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                        <path d="M12 5l0 14"/>
                                        <path d="M5 12l14 0"/>
                                    </svg>
                                    Nouveau
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Accessibility Policy -->
                <div class="col-sm-6 col-lg-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <div class="avatar avatar-sm me-3 bg-orange text-white">
                                    ♿
                                </div>
                                <div>
                                    <div class="fw-bold">Politiques accessibilité</div>
                                    <div class="text-muted">{{ statistics.types.accessibility_policy ?? 0 }} document(s)</div>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between">
                                <a href="{{ path('admin_legal_document_accessibility_policy') }}" class="btn btn-outline-orange btn-sm">
                                    Gérer
                                </a>
                                <a href="{{ path('admin_legal_document_new', {type: 'accessibility_policy'}) }}" class="btn btn-orange btn-sm">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                        <path d="M12 5l0 14"/>
                                        <path d="M5 12l14 0"/>
                                    </svg>
                                    Nouveau
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Accessibility Procedures -->
                <div class="col-sm-6 col-lg-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <div class="avatar avatar-sm me-3 bg-yellow text-white">
                                    ⚙️
                                </div>
                                <div>
                                    <div class="fw-bold">Procédures accessibilité</div>
                                    <div class="text-muted">{{ statistics.types.accessibility_procedures ?? 0 }} document(s)</div>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between">
                                <a href="{{ path('admin_legal_document_accessibility_procedures') }}" class="btn btn-outline-yellow btn-sm">
                                    Gérer
                                </a>
                                <a href="{{ path('admin_legal_document_new', {type: 'accessibility_procedures'}) }}" class="btn btn-yellow btn-sm">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                        <path d="M12 5l0 14"/>
                                        <path d="M5 12l14 0"/>
                                    </svg>
                                    Nouveau
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Accessibility FAQ -->
                <div class="col-sm-6 col-lg-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <div class="avatar avatar-sm me-3 bg-cyan text-white">
                                    ❓
                                </div>
                                <div>
                                    <div class="fw-bold">FAQ Accessibilité</div>
                                    <div class="text-muted">{{ statistics.types.accessibility_faq ?? 0 }} document(s)</div>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between">
                                <a href="{{ path('admin_legal_document_accessibility_faq') }}" class="btn btn-outline-cyan btn-sm">
                                    Gérer
                                </a>
                                <a href="{{ path('admin_legal_document_new', {type: 'accessibility_faq'}) }}" class="btn btn-cyan btn-sm">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                        <path d="M12 5l0 14"/>
                                        <path d="M5 12l14 0"/>
                                    </svg>
                                    Nouveau
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="row mt-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Actions rapides</h3>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <h4>Gestion des documents</h4>
                                    <p class="text-muted">Créez et gérez vos documents légaux par catégorie.</p>
                                    <ul class="list-unstyled">
                                        <li><a href="{{ path('admin_legal_document_new') }}" class="text-decoration-none">→ Créer un nouveau document</a></li>
                                        <li><a href="{{ path('admin_legal_document_internal_regulation') }}" class="text-decoration-none">→ Gérer les règlements intérieurs</a></li>
                                        <li><a href="{{ path('admin_legal_document_accessibility_policy') }}" class="text-decoration-none">→ Gérer les documents d'accessibilité</a></li>
                                    </ul>
                                </div>
                                <div class="col-md-6">
                                    <h4>Conformité Qualiopi</h4>
                                    <p class="text-muted">Assurez-vous que tous les documents requis sont publiés.</p>
                                    <div class="list-group list-group-flush">
                                        {% set required_types = ['internal_regulation', 'student_handbook', 'training_terms', 'accessibility_policy'] %}
                                        {% for type in required_types %}
                                            <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                                                <span>{{ constant('App\\Entity\\LegalDocument::TYPES')[type] }}</span>
                                                {% if statistics.types[type] is defined and statistics.types[type] > 0 %}
                                                    <span class="badge bg-success">✓ Présent</span>
                                                {% else %}
                                                    <span class="badge bg-warning">⚠ Manquant</span>
                                                {% endif %}
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

                <div class="card-body">
                    {# Statistics #}
                    <div class="row mb-4">
                        <div class="col-md-3">
                            <div class="small-box bg-info">
                                <div class="inner">
                                    <h3>{{ statistics.total }}</h3>
                                    <p>Total documents</p>
                                </div>
                                <div class="icon">
                                    <i class="fas fa-file-alt"></i>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="small-box bg-success">
                                <div class="inner">
                                    <h3>{{ statistics.published }}</h3>
                                    <p>Publiés</p>
                                </div>
                                <div class="icon">
                                    <i class="fas fa-check-circle"></i>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="small-box bg-warning">
                                <div class="inner">
                                    <h3>{{ statistics.drafts }}</h3>
                                    <p>Brouillons</p>
                                </div>
                                <div class="icon">
                                    <i class="fas fa-edit"></i>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="small-box bg-secondary">
                                <div class="inner">
                                    <h3>{{ statistics.types|length }}</h3>
                                    <p>Types différents</p>
                                </div>
                                <div class="icon">
                                    <i class="fas fa-tags"></i>
                                </div>
                            </div>
                        </div>
                    </div>

                    {# Filters #}
                    <form method="GET" class="mb-4">
                        <div class="row">
                            <div class="col-md-4">
                                <label for="search" class="form-label">Recherche</label>
                                <input type="text" 
                                       id="search" 
                                       name="search" 
                                       class="form-control" 
                                       value="{{ filters.search }}"
                                       placeholder="Titre ou contenu...">
                            </div>
                            <div class="col-md-3">
                                <label for="type" class="form-label">Type</label>
                                <select id="type" name="type" class="form-select">
                                    <option value="">Tous les types</option>
                                    <option value="internal_regulation" {{ filters.type == 'internal_regulation' ? 'selected' }}>Règlement intérieur</option>
                                    <option value="student_handbook" {{ filters.type == 'student_handbook' ? 'selected' }}>Livret d'accueil</option>
                                    <option value="training_terms" {{ filters.type == 'training_terms' ? 'selected' }}>Conditions de formation</option>
                                    <option value="accessibility_policy" {{ filters.type == 'accessibility_policy' ? 'selected' }}>Politique d'accessibilité</option>
                                    <option value="accessibility_procedures" {{ filters.type == 'accessibility_procedures' ? 'selected' }}>Procédures accessibilité</option>
                                    <option value="accessibility_faq" {{ filters.type == 'accessibility_faq' ? 'selected' }}>FAQ Accessibilité</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label for="status" class="form-label">Statut</label>
                                <select id="status" name="status" class="form-select">
                                    <option value="">Tous les statuts</option>
                                    <option value="published" {{ filters.status == 'published' ? 'selected' }}>Publié</option>
                                    <option value="draft" {{ filters.status == 'draft' ? 'selected' }}>Brouillon</option>
                                    <option value="inactive" {{ filters.status == 'inactive' ? 'selected' }}>Inactif</option>
                                </select>
                            </div>
                            <div class="col-md-2 d-flex align-items-end">
                                <button type="submit" class="btn btn-outline-primary me-2">
                                    <i class="fas fa-search"></i> Filtrer
                                </button>
                                <a href="{{ path('admin_legal_document_index') }}" class="btn btn-outline-secondary">
                                    <i class="fas fa-times"></i>
                                </a>
                            </div>
                        </div>
                    </form>

                    {# Documents table #}
                    {% if documents|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Type</th>
                                        <th>Titre</th>
                                        <th>Version</th>
                                        <th>Statut</th>
                                        <th>Fichier</th>
                                        <th>Dernière modification</th>
                                        <th width="120">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for document in documents %}
                                        <tr>
                                            <td>
                                                <span class="badge bg-secondary">{{ document.typeLabel }}</span>
                                            </td>
                                            <td>
                                                <a href="{{ path('admin_legal_document_show', {id: document.id}) }}" 
                                                   class="fw-bold text-decoration-none">
                                                    {{ document.title }}
                                                </a>
                                            </td>
                                            <td>
                                                <code>{{ document.version }}</code>
                                            </td>
                                            <td>
                                                {% if document.isPublished %}
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-check"></i> Publié
                                                    </span>
                                                {% elseif document.isActive %}
                                                    <span class="badge bg-warning">
                                                        <i class="fas fa-edit"></i> Brouillon
                                                    </span>
                                                {% else %}
                                                    <span class="badge bg-secondary">
                                                        <i class="fas fa-times"></i> Inactif
                                                    </span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if document.hasFile %}
                                                    <a href="{{ document.fileUrl }}" 
                                                       target="_blank" 
                                                       class="btn btn-sm btn-outline-primary">
                                                        <i class="fas fa-download"></i> PDF
                                                    </a>
                                                {% else %}
                                                    <span class="text-muted">-</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    {{ document.updatedAt|date('d/m/Y H:i') }}
                                                </small>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="{{ path('admin_legal_document_show', {id: document.id}) }}" 
                                                       class="btn btn-sm btn-outline-info" 
                                                       title="Voir">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="{{ path('admin_legal_document_edit', {id: document.id}) }}" 
                                                       class="btn btn-sm btn-outline-warning" 
                                                       title="Modifier">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="text-center py-4">
                            <i class="fas fa-file-alt fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Aucun document trouvé</h5>
                            {% if filters.search or filters.type or filters.status %}
                                <p class="text-muted">Essayez de modifier vos filtres.</p>
                                <a href="{{ path('admin_legal_document_index') }}" class="btn btn-outline-primary">
                                    Voir tous les documents
                                </a>
                            {% else %}
                                <p class="text-muted">Commencez par créer votre premier document légal.</p>
                                <a href="{{ path('admin_legal_document_new') }}" class="btn btn-primary">
                                    <i class="fas fa-plus"></i> Créer un document
                                </a>
                            {% endif %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
