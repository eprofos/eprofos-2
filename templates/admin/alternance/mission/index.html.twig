{% extends 'admin/base.html.twig' %}

{% set page_title = 'Gestion des missions' %}

{% block page_actions %}
    <a href="{{ path('admin_alternance_mission_export') }}" class="btn btn-outline-primary me-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
            <path d="M14 3v4a1 1 0 0 0 1 1h4"/>
            <path d="M17 21h-10a2 2 0 0 1 -2 -2v-14a2 2 0 0 1 2 -2h7l5 5v11a2 2 0 0 1 -2 2z"/>
            <path d="M9 9l1 0"/>
            <path d="M9 13l6 0"/>
            <path d="M9 17l6 0"/>
        </svg>
        Exporter
    </a>
    <a href="{{ path('admin_alternance_mission_new') }}" class="btn btn-primary">
        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
            <path d="M12 5l0 14"/>
            <path d="M5 12l14 0"/>
        </svg>
        Nouvelle mission
    </a>
{% endblock %}

{% block body %}
    <div class="row row-deck row-cards">
        <!-- Statistics Cards -->
        <div class="col-12 mb-4">
            <div class="row">
                <div class="col-sm-6 col-lg-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="subheader">Total missions</div>
                                <div class="ms-auto lh-1">
                                    <div class="dropdown">
                                        <a class="dropdown-toggle text-muted" href="#" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Dernières 30 jours</a>
                                        <div class="dropdown-menu dropdown-menu-end">
                                            <a class="dropdown-item active" href="#">Dernières 30 jours</a>
                                            <a class="dropdown-item" href="#">Dernières 7 jours</a>
                                            <a class="dropdown-item" href="#">Aujourd'hui</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="h1 mb-3">{{ statistics.total_missions ?? 0 }}</div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="subheader">Missions actives</div>
                            </div>
                            <div class="h1 mb-3">{{ statistics.active_missions ?? 0 }}</div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="subheader">Assignations terminées</div>
                            </div>
                            <div class="h1 mb-3">{{ statistics.completed_assignments ?? 0 }}</div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="subheader">Taux de réussite</div>
                            </div>
                            <div class="h1 mb-3">{{ statistics.completion_rate ?? 0 }}%</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Filters Card -->
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Filtres</h3>
                    <div class="card-actions">
                        <a href="{{ path('admin_alternance_mission_index') }}" class="btn btn-sm btn-outline-secondary">
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                <path d="M20 11a8.1 8.1 0 0 0 -15.5 -2m-.5 -4v4h4"/>
                                <path d="M4 13a8.1 8.1 0 0 0 15.5 2m.5 4v-4h-4"/>
                            </svg>
                            Réinitialiser
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <form method="GET" action="{{ path('admin_alternance_mission_index') }}" class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label">Recherche</label>
                            <input type="text" name="search" class="form-control" placeholder="Titre ou description..." value="{{ filters.search ?? '' }}">
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Statut</label>
                            <select name="status" class="form-select">
                                <option value="">Tous</option>
                                <option value="active" {{ filters.status == 'active' ? 'selected' : '' }}>Actif</option>
                                <option value="inactive" {{ filters.status == 'inactive' ? 'selected' : '' }}>Inactif</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Complexité</label>
                            <select name="complexity" class="form-select">
                                <option value="">Toutes</option>
                                <option value="debutant" {{ filters.complexity == 'debutant' ? 'selected' : '' }}>Débutant</option>
                                <option value="intermediaire" {{ filters.complexity == 'intermediaire' ? 'selected' : '' }}>Intermédiaire</option>
                                <option value="avance" {{ filters.complexity == 'avance' ? 'selected' : '' }}>Avancé</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">&nbsp;</label>
                            <button type="submit" class="btn btn-primary w-100">
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                    <path d="M10 10m-7 0a7 7 0 1 0 14 0a7 7 0 1 0 -14 0"/>
                                    <path d="M21 21l-6 -6"/>
                                </svg>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Missions List Card -->
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Liste des missions</h3>
                    <div class="card-actions">
                        <span class="text-muted">{{ missions|length }} mission{{ missions|length > 1 ? 's' : '' }}</span>
                    </div>
                </div>
                
                {% if missions|length > 0 %}
                    <form method="POST" action="{{ path('admin_alternance_mission_bulk_actions') }}" id="bulk-actions-form">
                        <div class="card-header border-0">
                            <div class="row align-items-center">
                                <div class="col-auto">
                                    <input type="checkbox" id="select-all" class="form-check-input">
                                    <label for="select-all" class="form-check-label">Tout sélectionner</label>
                                </div>
                                <div class="col-auto">
                                    <select name="action" class="form-select" style="width: auto;">
                                        <option value="">Actions groupées</option>
                                        <option value="activate">Activer</option>
                                        <option value="deactivate">Désactiver</option>
                                    </select>
                                </div>
                                <div class="col-auto">
                                    <button type="submit" class="btn btn-primary btn-sm" disabled id="bulk-action-btn">Appliquer</button>
                                </div>
                            </div>
                        </div>
                        
                        <div class="table-responsive">
                            <table class="table table-vcenter card-table">
                                <thead>
                                    <tr>
                                        <th class="w-1"></th>
                                        <th>Mission</th>
                                        <th>Complexité</th>
                                        <th>Durée estimée</th>
                                        <th>Assignations</th>
                                        <th>Statut</th>
                                        <th>Créée le</th>
                                        <th class="w-1">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for mission in missions %}
                                        <tr>
                                            <td>
                                                <input type="checkbox" name="mission_ids[]" value="{{ mission.id }}" class="form-check-input mission-checkbox">
                                            </td>
                                            <td>
                                                <div>
                                                    <div class="fw-bold">{{ mission.title }}</div>
                                                    <div class="text-muted small">{{ mission.description|length > 80 ? mission.description|slice(0, 80) ~ '...' : mission.description }}</div>
                                                </div>
                                            </td>
                                            <td>
                                                {% set complexityColors = {
                                                    'debutant': 'green',
                                                    'intermediaire': 'blue',
                                                    'avance': 'orange'
                                                } %}
                                                <span class="badge bg-{{ complexityColors[mission.complexity] ?? 'secondary' }} text-white">
                                                    {{ mission.complexityLabel }}
                                                </span>
                                            </td>
                                            <td>
                                                <span class="text-muted">{{ mission.duration }}</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-blue text-white">{{ mission.assignments|length }}</span>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center gap-1">
                                                    {% if mission.isActive %}
                                                        <span class="badge bg-success text-white">Actif</span>
                                                    {% else %}
                                                        <span class="badge bg-secondary text-white">Inactif</span>
                                                    {% endif %}
                                                </div>
                                            </td>
                                            <td class="text-muted">
                                                {{ mission.createdAt|date('d/m/Y') }}
                                            </td>
                                            <td>
                                                <div class="btn-list flex-nowrap">
                                                    <a href="{{ path('admin_alternance_mission_show', {id: mission.id}) }}" class="btn btn-sm btn-outline-primary">
                                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                                            <path d="M10 12a2 2 0 1 0 4 0a2 2 0 0 0 -4 0"/>
                                                            <path d="M21 12c-2.4 4 -5.4 6 -9 6c-3.6 0 -6.6 -2 -9 -6c2.4 -4 5.4 -6 9 -6c3.6 0 6.6 2 9 6"/>
                                                        </svg>
                                                    </a>
                                                    <div class="dropdown">
                                                        <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                                            Actions
                                                        </button>
                                                        <div class="dropdown-menu">
                                                            <a class="dropdown-item" href="{{ path('admin_alternance_mission_assignments', {id: mission.id}) }}">
                                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon dropdown-item-icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                                                    <path d="M9 7m-4 0a4 4 0 1 0 8 0a4 4 0 1 0 -8 0"/>
                                                                    <path d="M3 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2"/>
                                                                    <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
                                                                    <path d="M21 21v-2a4 4 0 0 0 -3 -3.85"/>
                                                                </svg>
                                                                Assignations
                                                            </a>
                                                            <a class="dropdown-item" href="{{ path('admin_alternance_mission_edit', {id: mission.id}) }}">
                                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon dropdown-item-icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                                                    <path d="M7 7h-1a2 2 0 0 0 -2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2 -2v-1"/>
                                                                    <path d="M20.385 6.585a2.1 2.1 0 0 0 -2.97 -2.97l-8.415 8.385v3h3l8.385 -8.415z"/>
                                                                    <path d="M16 5l3 3"/>
                                                                </svg>
                                                                Modifier
                                                            </a>
                                                            <div class="dropdown-divider"></div>
                                                            <form method="post" action="{{ path('admin_alternance_mission_delete', {id: mission.id}) }}" style="display: inline;">
                                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ mission.id) }}">
                                                                <button type="submit" class="dropdown-item text-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette mission ? Cette action est irréversible.')">
                                                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon dropdown-item-icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                                                        <path d="M4 7l16 0"/>
                                                                        <path d="M10 11l0 6"/>
                                                                        <path d="M14 11l0 6"/>
                                                                        <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12"/>
                                                                        <path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3"/>
                                                                    </svg>
                                                                    Supprimer
                                                                </button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </form>

                    <!-- Pagination -->
                    {% if total_pages > 1 %}
                        <div class="card-footer d-flex align-items-center">
                            <p class="m-0 text-muted">
                                Page {{ current_page }} sur {{ total_pages }}
                            </p>
                            <ul class="pagination m-0 ms-auto">
                                {% if current_page > 1 %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ path('admin_alternance_mission_index', filters|merge({page: current_page - 1})) }}">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                                <path d="M15 6l-6 6l6 6"/>
                                            </svg>
                                            prev
                                        </a>
                                    </li>
                                {% endif %}
                                
                                {% for page in range(max(1, current_page - 2), min(total_pages, current_page + 2)) %}
                                    <li class="page-item {{ page == current_page ? 'active' : '' }}">
                                        <a class="page-link" href="{{ path('admin_alternance_mission_index', filters|merge({page: page})) }}">{{ page }}</a>
                                    </li>
                                {% endfor %}
                                
                                {% if current_page < total_pages %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ path('admin_alternance_mission_index', filters|merge({page: current_page + 1})) }}">
                                            next
                                            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                                <path d="M9 6l6 6l-6 6"/>
                                            </svg>
                                        </a>
                                    </li>
                                {% endif %}
                            </ul>
                        </div>
                    {% endif %}
                {% else %}
                    <div class="card-body">
                        <div class="empty">
                            <div class="empty-img">
                                <img src="data:image/svg+xml;base64," height="128" alt="">
                            </div>
                            <p class="empty-title">Aucune mission trouvée</p>
                            <p class="empty-subtitle text-muted">
                                {% if filters.search or filters.status or filters.complexity %}
                                    Aucune mission ne correspond aux critères de recherche.
                                {% else %}
                                    Commencez par créer votre première mission.
                                {% endif %}
                            </p>
                            <div class="empty-action">
                                {% if filters.search or filters.status or filters.complexity %}
                                    <a href="{{ path('admin_alternance_mission_index') }}" class="btn btn-outline-secondary">
                                        Voir toutes les missions
                                    </a>
                                {% endif %}
                                <a href="{{ path('admin_alternance_mission_new') }}" class="btn btn-primary">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                        <path d="M12 5l0 14"/>
                                        <path d="M5 12l14 0"/>
                                    </svg>
                                    Créer une mission
                                </a>
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const selectAllCheckbox = document.getElementById('select-all');
            const missionCheckboxes = document.querySelectorAll('.mission-checkbox');
            const bulkActionBtn = document.getElementById('bulk-action-btn');
            const actionSelect = document.querySelector('select[name="action"]');

            function updateBulkActionButton() {
                const checkedBoxes = document.querySelectorAll('.mission-checkbox:checked');
                const hasAction = actionSelect.value !== '';
                bulkActionBtn.disabled = checkedBoxes.length === 0 || !hasAction;
            }

            selectAllCheckbox.addEventListener('change', function() {
                missionCheckboxes.forEach(checkbox => {
                    checkbox.checked = this.checked;
                });
                updateBulkActionButton();
            });

            missionCheckboxes.forEach(checkbox => {
                checkbox.addEventListener('change', updateBulkActionButton);
            });

            actionSelect.addEventListener('change', updateBulkActionButton);

            document.getElementById('bulk-actions-form').addEventListener('submit', function(e) {
                const checkedBoxes = document.querySelectorAll('.mission-checkbox:checked');
                if (checkedBoxes.length === 0) {
                    e.preventDefault();
                    alert('Veuillez sélectionner au moins une mission.');
                    return;
                }

                const action = actionSelect.value;
                if (!action) {
                    e.preventDefault();
                    alert('Veuillez sélectionner une action.');
                    return;
                }

                const actionText = {
                    'activate': 'activer',
                    'deactivate': 'désactiver'
                };

                if (!confirm(`Êtes-vous sûr de vouloir ${actionText[action]} ${checkedBoxes.length} mission(s) ?`)) {
                    e.preventDefault();
                }
            });
        });
    </script>
{% endblock %}
