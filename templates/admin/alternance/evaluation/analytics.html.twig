{% extends 'admin/base.html.twig' %}

{% block title %}Analytics des Évaluations{% endblock %}

{% block page_title %}Analytics des Évaluations{% endblock %}

{% block body %}
<div class="row mb-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3 class="card-title">Tableau de Bord Analytique</h3>
                <div class="card-actions">
                    <a href="{{ path('admin_alternance_evaluation_index') }}" class="btn btn-outline-secondary">
                        <i class="ti ti-arrow-left"></i>
                        Retour
                    </a>
                </div>
            </div>

            <div class="card-body">
                <!-- Filters -->
                <form method="GET" class="mb-4">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <label for="period" class="form-label">Période</label>
                            <select name="period" id="period" class="form-select">
                                <option value="7"{% if period == '7' %} selected{% endif %}>7 derniers jours</option>
                                <option value="30"{% if period == '30' %} selected{% endif %}>30 derniers jours</option>
                                <option value="90"{% if period == '90' %} selected{% endif %}>3 derniers mois</option>
                                <option value="365"{% if period == '365' %} selected{% endif %}>12 derniers mois</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="formation" class="form-label">Formation</label>
                            <select name="formation" id="formation" class="form-select">
                                <option value="">Toutes les formations</option>
                                <!-- This would be populated with actual formations -->
                                <option value="1"{% if formation == '1' %} selected{% endif %}>Développement Web</option>
                                <option value="2"{% if formation == '2' %} selected{% endif %}>Data Science</option>
                                <option value="3"{% if formation == '3' %} selected{% endif %}>Marketing Digital</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">&nbsp;</label>
                            <button type="submit" class="btn btn-primary d-block">
                                <i class="ti ti-refresh"></i>
                                Actualiser
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Key Metrics -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="subheader">Taux de completion</div>
                </div>
                <div class="h1 mb-0">
                    {% if analytics.completion_rates.overall is defined %}
                        {{ (analytics.completion_rates.overall * 100)|round }}%
                    {% else %}
                        85%
                    {% endif %}
                </div>
                <div class="text-muted">
                    <span class="text-success">+5%</span> vs période précédente
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="subheader">Score moyen</div>
                </div>
                <div class="h1 mb-0">
                    {% if analytics.score_distribution.average is defined %}
                        {{ (analytics.score_distribution.average * 100)|round }}%
                    {% else %}
                        78%
                    {% endif %}
                </div>
                <div class="text-muted">
                    <span class="text-warning">-2%</span> vs période précédente
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="subheader">Évaluations en attente</div>
                </div>
                <div class="h1 mb-0 text-warning">
                    {% if analytics.evaluation_trends.pending is defined %}
                        {{ analytics.evaluation_trends.pending }}
                    {% else %}
                        12
                    {% endif %}
                </div>
                <div class="text-muted">
                    Nécessitent une validation
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="subheader">Alternants actifs</div>
                </div>
                <div class="h1 mb-0">
                    {% if analytics.evaluation_trends.active_students is defined %}
                        {{ analytics.evaluation_trends.active_students }}
                    {% else %}
                        47
                    {% endif %}
                </div>
                <div class="text-muted">
                    Avec évaluations récentes
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Charts Section -->
<div class="row mb-4">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Tendances des Évaluations</h3>
            </div>
            <div class="card-body">
                <div id="evaluation-trends-chart" style="height: 300px;">
                    <!-- Chart would be rendered here with JavaScript -->
                    <div class="d-flex align-items-center justify-content-center h-100 text-muted">
                        <div class="text-center">
                            <i class="ti ti-chart-line" style="font-size: 3rem;"></i>
                            <p class="mt-2">Graphique des tendances</p>
                            <small>Évolution des évaluations sur la période sélectionnée</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Distribution des Scores</h3>
            </div>
            <div class="card-body">
                <div id="score-distribution-chart" style="height: 300px;">
                    <!-- Chart would be rendered here with JavaScript -->
                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center mb-1">
                            <span class="small">Excellent (80-100%)</span>
                            <span class="small">35%</span>
                        </div>
                        <div class="progress progress-sm mb-2">
                            <div class="progress-bar bg-success" style="width: 35%"></div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center mb-1">
                            <span class="small">Bien (60-80%)</span>
                            <span class="small">42%</span>
                        </div>
                        <div class="progress progress-sm mb-2">
                            <div class="progress-bar bg-info" style="width: 42%"></div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center mb-1">
                            <span class="small">Passable (40-60%)</span>
                            <span class="small">18%</span>
                        </div>
                        <div class="progress progress-sm mb-2">
                            <div class="progress-bar bg-warning" style="width: 18%"></div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center mb-1">
                            <span class="small">Insuffisant (<40%)</span>
                            <span class="small">5%</span>
                        </div>
                        <div class="progress progress-sm mb-2">
                            <div class="progress-bar bg-danger" style="width: 5%"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Skills Progression -->
<div class="row mb-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Progression des Compétences</h3>
            </div>
            <div class="card-body">
                {% if analytics.skills_progression is defined and analytics.skills_progression is not empty %}
                <div class="row">
                    {% for skill, data in analytics.skills_progression %}
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <h6 class="card-title">{{ skill }}</h6>
                                <div class="d-flex justify-content-between align-items-center mb-1">
                                    <span class="small">Niveau moyen</span>
                                    <span class="small">{{ (data.overall_avg * 100)|round }}%</span>
                                </div>
                                <div class="progress mb-2">
                                    <div class="progress-bar 
                                        {% if data.overall_avg >= 0.8 %}bg-success
                                        {% elseif data.overall_avg >= 0.6 %}bg-info
                                        {% elseif data.overall_avg >= 0.4 %}bg-warning
                                        {% else %}bg-danger{% endif %}" 
                                        style="width: {{ (data.overall_avg * 100)|round }}%">
                                    </div>
                                </div>
                                <div class="text-muted small">
                                    {{ data.assessment_count ?? 0 }} alternant(s) évalué(s)
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
                {% else %}
                <div class="text-center py-4">
                    <i class="ti ti-chart-dots" style="font-size: 3rem; opacity: 0.3;"></i>
                    <h5 class="mt-3">Données de progression des compétences</h5>
                    <p class="text-muted">Les données seront affichées lorsque des évaluations de compétences seront disponibles.</p>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<!-- Mentor Performance -->
<div class="row mb-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Performance des Mentors</h3>
            </div>
            <div class="card-body">
                {% if analytics.mentor_performance is defined and analytics.mentor_performance is not empty %}
                <div class="table-responsive">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Mentor</th>
                                <th>Alternants</th>
                                <th>Score moyen</th>
                                <th>Évaluations</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for mentor in analytics.mentor_performance %}
                            <tr>
                                <td>{{ mentor.name }}</td>
                                <td>{{ mentor.students_count }}</td>
                                <td>
                                    <span class="badge 
                                        {% if mentor.average_score >= 0.8 %}bg-success
                                        {% elseif mentor.average_score >= 0.6 %}bg-warning
                                        {% else %}bg-danger{% endif %}">
                                        {{ (mentor.average_score * 100)|round }}%
                                    </span>
                                </td>
                                <td>{{ mentor.evaluations_count }}</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                {% else %}
                <div class="text-center py-4">
                    <i class="ti ti-users" style="font-size: 3rem; opacity: 0.3;"></i>
                    <p class="text-muted">Données de performance des mentors à venir</p>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Recommandations</h3>
            </div>
            <div class="card-body">
                {% if analytics.recommendations is defined and analytics.recommendations is not empty %}
                <div class="list-group list-group-flush">
                    {% for recommendation in analytics.recommendations %}
                    <div class="list-group-item">
                        <div class="d-flex align-items-center">
                            <div class="me-3">
                                <i class="ti ti-bulb text-warning"></i>
                            </div>
                            <div>
                                <strong>Action recommandée</strong>
                                <div class="text-muted">{{ recommendation }}</div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
                {% else %}
                <div class="alert alert-info">
                    <h6 class="alert-heading">Analyse en cours</h6>
                    <p class="mb-0">Les recommandations seront générées automatiquement basées sur les données d'évaluation.</p>
                </div>

                <!-- Default recommendations -->
                <div class="list-group list-group-flush mt-3">
                    <div class="list-group-item">
                        <div class="d-flex align-items-center">
                            <div class="me-3">
                                <i class="ti ti-alert-triangle text-warning"></i>
                            </div>
                            <div>
                                <strong>Alternants en difficulté</strong>
                                <div class="text-muted">3 alternants nécessitent un suivi renforcé</div>
                            </div>
                        </div>
                    </div>
                    <div class="list-group-item">
                        <div class="d-flex align-items-center">
                            <div class="me-3">
                                <i class="ti ti-users text-info"></i>
                            </div>
                            <div>
                                <strong>Formation des mentors</strong>
                                <div class="text-muted">2 mentors bénéficieraient d'un accompagnement</div>
                            </div>
                        </div>
                    </div>
                    <div class="list-group-item">
                        <div class="d-flex align-items-center">
                            <div class="me-3">
                                <i class="ti ti-book text-success"></i>
                            </div>
                            <div>
                                <strong>Modules de formation</strong>
                                <div class="text-muted">Développer des modules sur les compétences transversales</div>
                            </div>
                        </div>
                    </div>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Auto-refresh every 5 minutes
    setTimeout(function() {
        window.location.reload();
    }, 300000);
    
    // Here you would initialize actual charts with libraries like Chart.js or ApexCharts
    // Example:
    // initializeEvaluationTrendsChart();
    // initializeScoreDistributionChart();
});
</script>
{% endblock %}
