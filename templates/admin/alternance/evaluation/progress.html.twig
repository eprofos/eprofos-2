{% extends 'admin/base.html.twig' %}

{% block title %}Évaluations de Progression{% endblock %}

{% block page_title %}Évaluations de Progression{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3 class="card-title">Évaluations de Progression</h3>
                <div class="card-actions">
                    <a href="{{ path('admin_alternance_evaluation_index') }}" class="btn btn-outline-secondary">
                        <i class="ti ti-arrow-left"></i>
                        Retour
                    </a>
                    <a href="{{ path('admin_alternance_evaluation_export', {type: 'progress'}) }}" class="btn btn-outline-success">
                        <i class="ti ti-download"></i>
                        Export
                    </a>
                </div>
            </div>

            <div class="card-body">
                <!-- Filters -->
                <form method="GET" class="mb-4">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <input type="text" name="search" class="form-control" placeholder="Rechercher alternant ou mentor..."
                                   value="{{ filters.search }}">
                        </div>
                        <div class="col-md-3">
                            <select name="status" class="form-select">
                                <option value="">Tous statuts</option>
                                <option value="pending"{% if filters.status == 'pending' %} selected{% endif %}>En attente</option>
                                <option value="validated"{% if filters.status == 'validated' %} selected{% endif %}>Validé</option>
                                <option value="rejected"{% if filters.status == 'rejected' %} selected{% endif %}>Rejeté</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="ti ti-search"></i>
                                Filtrer
                            </button>
                        </div>
                        <div class="col-md-3">
                            <a href="{{ path('admin_alternance_evaluation_progress') }}" class="btn btn-outline-secondary">
                                <i class="ti ti-x"></i>
                                Réinitialiser
                            </a>
                        </div>
                    </div>
                </form>

                <!-- Evaluations Table -->
                {% if evaluations is not empty %}
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Alternant</th>
                                <th>Mentor</th>
                                <th>Formation</th>
                                <th>Période</th>
                                <th>Date d'évaluation</th>
                                <th>Statut</th>
                                <th>Score global</th>
                                <th>Objectifs atteints</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for evaluation in evaluations %}
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div>
                                            <strong>{{ evaluation.student.fullName }}</strong>
                                            <div class="text-muted small">{{ evaluation.student.email }}</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    {% if evaluation.mentor %}
                                        <div>
                                            <strong>{{ evaluation.mentor.fullName }}</strong>
                                            <div class="text-muted small">{{ evaluation.mentor.email }}</div>
                                        </div>
                                    {% else %}
                                        <span class="text-muted">Non assigné</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <span class="text-muted">Formation en alternance</span>
                                </td>
                                <td>
                                    <div class="text-muted small">
                                        Du {{ evaluation.periodStart|date('d/m/Y') }}<br>
                                        au {{ evaluation.periodEnd|date('d/m/Y') }}
                                    </div>
                                </td>
                                <td>{{ evaluation.createdAt|date('d/m/Y H:i') }}</td>
                                <td>
                                    {% if evaluation.status == 'pending' %}
                                        <span class="badge bg-warning">En attente</span>
                                    {% elseif evaluation.status == 'validated' %}
                                        <span class="badge bg-success">Validé</span>
                                    {% elseif evaluation.status == 'rejected' %}
                                        <span class="badge bg-danger">Rejeté</span>
                                    {% else %}
                                        <span class="badge bg-secondary">{{ evaluation.status }}</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if evaluation.overallScore is not null %}
                                        <div class="progress" style="width: 80px;">
                                            <div class="progress-bar 
                                                {% if evaluation.overallScore >= 0.8 %}bg-success
                                                {% elseif evaluation.overallScore >= 0.6 %}bg-warning
                                                {% else %}bg-danger{% endif %}" 
                                                style="width: {{ (evaluation.overallScore * 100)|round }}%">
                                                {{ (evaluation.overallScore * 100)|round }}%
                                            </div>
                                        </div>
                                    {% else %}
                                        <span class="text-muted">-</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if evaluation.achievedObjectives is not null %}
                                        <span class="badge bg-info">
                                            {{ evaluation.achievedObjectives|length }}/{{ evaluation.totalObjectives }}
                                        </span>
                                    {% else %}
                                        <span class="text-muted">-</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a href="{{ path('admin_alternance_evaluation_progress_show', {id: evaluation.id}) }}" 
                                           class="btn btn-sm btn-outline-primary" title="Voir les détails">
                                            <i class="ti ti-eye"></i>
                                        </a>
                                        {% if evaluation.status == 'pending' %}
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle" 
                                                    data-bs-toggle="dropdown">
                                                <i class="ti ti-dots-vertical"></i>
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    <form method="POST" action="{{ path('admin_alternance_evaluation_progress_validate', {id: evaluation.id}) }}">
                                                        <button type="submit" name="action" value="approve" class="dropdown-item text-success">
                                                            <i class="ti ti-check"></i> Approuver
                                                        </button>
                                                    </form>
                                                </li>
                                                <li>
                                                    <form method="POST" action="{{ path('admin_alternance_evaluation_progress_validate', {id: evaluation.id}) }}">
                                                        <button type="submit" name="action" value="reject" class="dropdown-item text-danger">
                                                            <i class="ti ti-x"></i> Rejeter
                                                        </button>
                                                    </form>
                                                </li>
                                            </ul>
                                        </div>
                                        {% endif %}
                                    </div>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                {% if total_pages > 1 %}
                <nav aria-label="Pagination des évaluations" class="mt-4">
                    <ul class="pagination justify-content-center">
                        {% if current_page > 1 %}
                            <li class="page-item">
                                <a class="page-link" href="{{ path('admin_alternance_evaluation_progress', filters|merge({page: current_page - 1})) }}">
                                    Précédent
                                </a>
                            </li>
                        {% endif %}

                        {% for page in 1..total_pages %}
                            {% if page == current_page %}
                                <li class="page-item active">
                                    <span class="page-link">{{ page }}</span>
                                </li>
                            {% elseif page <= 3 or page > total_pages - 3 or (page >= current_page - 1 and page <= current_page + 1) %}
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('admin_alternance_evaluation_progress', filters|merge({page: page})) }}">
                                        {{ page }}
                                    </a>
                                </li>
                            {% elseif page == 4 or page == total_pages - 3 %}
                                <li class="page-item disabled">
                                    <span class="page-link">...</span>
                                </li>
                            {% endif %}
                        {% endfor %}

                        {% if current_page < total_pages %}
                            <li class="page-item">
                                <a class="page-link" href="{{ path('admin_alternance_evaluation_progress', filters|merge({page: current_page + 1})) }}">
                                    Suivant
                                </a>
                            </li>
                        {% endif %}
                    </ul>
                </nav>
                {% endif %}

                {% else %}
                <div class="text-center py-5">
                    <i class="ti ti-chart-line" style="font-size: 4rem; opacity: 0.3;"></i>
                    <h4 class="mt-3">Aucune évaluation de progression trouvée</h4>
                    <p class="text-muted">Aucune évaluation ne correspond aux critères de recherche.</p>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
