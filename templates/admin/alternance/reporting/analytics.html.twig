{% extends 'admin/base.html.twig' %}

{% block title %}Analytics Avancées - Alternance{% endblock %}

{% block page_header %}
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="h2 mb-1">Analytics Avancées</h1>
            <p class="text-muted mb-0">Analyses prédictives et insights approfondis sur les données d'alternance</p>
        </div>
        <div class="btn-toolbar" role="toolbar">
            <div class="btn-group me-2">
                <a href="{{ path('admin_alternance_reporting_index') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Retour
                </a>
            </div>
            <div class="btn-group">
                <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                    <i class="fas fa-download me-2"></i>Exporter
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#"><i class="fas fa-file-pdf me-2"></i>PDF</a></li>
                    <li><a class="dropdown-item" href="#"><i class="fas fa-file-excel me-2"></i>Excel</a></li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
<div data-controller="alternance-analytics" 
     data-alternance-analytics-analytics-data-value="{{ analytics_data|json_encode|e('html_attr') }}"
     data-alternance-analytics-selected-dimensions-value="{{ selected_dimensions|json_encode|e('html_attr') }}">
    <!-- Filters -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <form method="GET" class="row g-3">
                        <div class="col-md-3">
                            <label for="period" class="form-label">Période</label>
                            <select name="period" id="period" class="form-select">
                                <option value="semester" {{ period == 'semester' ? 'selected' : '' }}>Semestre</option>
                                <option value="current_year" {{ period == 'current_year' ? 'selected' : '' }}>Année actuelle</option>
                                <option value="last_year" {{ period == 'last_year' ? 'selected' : '' }}>Année dernière</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Dimensions d'Analyse</label>
                            <div class="form-check-group">
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="checkbox" name="dimensions[]" value="time" 
                                           {{ 'time' in selected_dimensions ? 'checked' : '' }}>
                                    <label class="form-check-label">Temporelle</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="checkbox" name="dimensions[]" value="formation" 
                                           {{ 'formation' in selected_dimensions ? 'checked' : '' }}>
                                    <label class="form-check-label">Formation</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="checkbox" name="dimensions[]" value="performance" 
                                           {{ 'performance' in selected_dimensions ? 'checked' : '' }}>
                                    <label class="form-check-label">Performance</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="checkbox" name="dimensions[]" value="predictive" 
                                           {{ 'predictive' in selected_dimensions ? 'checked' : '' }}>
                                    <label class="form-check-label">Prédictive</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fas fa-filter me-2"></i>Appliquer
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Trends Analysis -->
    {% if 'time' in selected_dimensions %}
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title"><i class="fas fa-chart-line me-2"></i>Analyse des Tendances</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-4">
                            <canvas id="enrollmentTrendChart" 
                                    data-alternance-analytics-target="enrollmentChart" 
                                    width="300" height="200"></canvas>
                            <div class="text-center mt-2">
                                <h6>Inscriptions</h6>
                                <div class="text-muted small">Évolution mensuelle</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <canvas id="completionTrendChart" 
                                    data-alternance-analytics-target="completionChart" 
                                    width="300" height="200"></canvas>
                            <div class="text-center mt-2">
                                <h6>Taux de Réussite</h6>
                                <div class="text-muted small">Évolution mensuelle</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <canvas id="satisfactionTrendChart" 
                                    data-alternance-analytics-target="satisfactionChart" 
                                    width="300" height="200"></canvas>
                            <div class="text-center mt-2">
                                <h6>Satisfaction</h6>
                                <div class="text-muted small">Évolution mensuelle</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endif %}

    <!-- Correlation Analysis -->
    {% if 'performance' in selected_dimensions %}
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title"><i class="fas fa-project-diagram me-2"></i>Analyse de Corrélations</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <div class="card border-success">
                                <div class="card-body text-center">
                                    <div class="display-4 text-success">{{ analytics_data.correlations.mentor_experience_vs_success }}</div>
                                    <h6>Expérience Mentor ↔ Réussite</h6>
                                    <p class="text-muted small mb-0">Corrélation forte positive</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card border-primary">
                                <div class="card-body text-center">
                                    <div class="display-4 text-primary">{{ analytics_data.correlations.attendance_vs_completion }}</div>
                                    <h6>Assiduité ↔ Réussite</h6>
                                    <p class="text-muted small mb-0">Corrélation modérée positive</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card border-warning">
                                <div class="card-body text-center">
                                    <div class="display-4 text-warning">{{ analytics_data.correlations.mission_complexity_vs_satisfaction }}</div>
                                    <h6>Complexité ↔ Satisfaction</h6>
                                    <p class="text-muted small mb-0">Corrélation faible négative</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="alert alert-info">
                        <h6><i class="fas fa-info-circle me-2"></i>Interprétation des Corrélations</h6>
                        <div class="row small">
                            <div class="col-md-4">
                                <strong>Forte (|r| > 0.7) :</strong> Relation significative
                            </div>
                            <div class="col-md-4">
                                <strong>Modérée (0.3 < |r| < 0.7) :</strong> Relation notable
                            </div>
                            <div class="col-md-4">
                                <strong>Faible (|r| < 0.3) :</strong> Relation limitée
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endif %}

    <!-- Predictive Insights -->
    {% if 'predictive' in selected_dimensions %}
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="card-title"><i class="fas fa-exclamation-triangle me-2"></i>Facteurs de Risque de Décrochage</h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        {% for factor in analytics_data.predictive_insights.dropout_risk_factors %}
                            <div class="list-group-item border-0 px-0 d-flex justify-content-between align-items-center">
                                <div>
                                    <i class="fas fa-exclamation-circle text-danger me-2"></i>
                                    {{ factor }}
                                </div>
                                <span class="badge badge-danger">Critique</span>
                            </div>
                        {% endfor %}
                    </div>
                    
                    <div class="alert alert-warning mt-3">
                        <h6><i class="fas fa-lightbulb me-2"></i>Recommandations Préventives</h6>
                        <ul class="mb-0 small">
                            <li>Mise en place d'alertes précoces</li>
                            <li>Accompagnement renforcé</li>
                            <li>Suivi personnalisé</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="card-title"><i class="fas fa-star me-2"></i>Indicateurs de Réussite</h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        {% for indicator in analytics_data.predictive_insights.success_indicators %}
                            <div class="list-group-item border-0 px-0 d-flex justify-content-between align-items-center">
                                <div>
                                    <i class="fas fa-check-circle text-success me-2"></i>
                                    {{ indicator }}
                                </div>
                                <span class="badge badge-success">Positif</span>
                            </div>
                        {% endfor %}
                    </div>
                    
                    <div class="alert alert-success mt-3">
                        <h6><i class="fas fa-target me-2"></i>Actions d'Optimisation</h6>
                        <ul class="mb-0 small">
                            <li>Renforcement des pratiques efficaces</li>
                            <li>Duplication des modèles de réussite</li>
                            <li>Formation basée sur les bonnes pratiques</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endif %}

    <!-- Benchmarking -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title"><i class="fas fa-balance-scale me-2"></i>Comparaison Sectorielle</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <h6>Taux de Réussite</h6>
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span>Moyenne Secteur</span>
                                <span class="fw-bold">{{ analytics_data.benchmarking.sector_average_completion }}%</span>
                            </div>
                            <div class="progress mb-2" style="height: 8px;">
                                <div class="progress-bar bg-secondary" style="width: {{ analytics_data.benchmarking.sector_average_completion }}%"></div>
                            </div>
                            
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span>Notre Performance</span>
                                <span class="fw-bold text-success">{{ analytics_data.benchmarking.our_completion_rate }}%</span>
                            </div>
                            <div class="progress" style="height: 8px;">
                                <div class="progress-bar bg-success" style="width: {{ analytics_data.benchmarking.our_completion_rate }}%"></div>
                            </div>
                            
                            <div class="text-center mt-2">
                                <span class="badge badge-success fs-6">
                                    +{{ (analytics_data.benchmarking.our_completion_rate - analytics_data.benchmarking.sector_average_completion) }} points
                                </span>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <h6>Satisfaction Globale</h6>
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span>Moyenne Secteur</span>
                                <span class="fw-bold">{{ analytics_data.benchmarking.sector_average_satisfaction }}/5</span>
                            </div>
                            <div class="progress mb-2" style="height: 8px;">
                                <div class="progress-bar bg-secondary" style="width: {{ (analytics_data.benchmarking.sector_average_satisfaction / 5 * 100) }}%"></div>
                            </div>
                            
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span>Notre Performance</span>
                                <span class="fw-bold text-success">{{ analytics_data.benchmarking.our_satisfaction_rate }}/5</span>
                            </div>
                            <div class="progress" style="height: 8px;">
                                <div class="progress-bar bg-success" style="width: {{ (analytics_data.benchmarking.our_satisfaction_rate / 5 * 100) }}%"></div>
                            </div>
                            
                            <div class="text-center mt-2">
                                <span class="badge badge-success fs-6">
                                    +{{ (analytics_data.benchmarking.our_satisfaction_rate - analytics_data.benchmarking.sector_average_satisfaction)|number_format(1) }} points
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Strategic Recommendations -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title"><i class="fas fa-chess me-2"></i>Recommandations Stratégiques</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="alert alert-primary">
                                <h6><i class="fas fa-rocket me-2"></i>Court Terme (3 mois)</h6>
                                <ul class="mb-0 small">
                                    <li>Optimiser l'accompagnement des alternants à risque</li>
                                    <li>Renforcer la formation des mentors novices</li>
                                    <li>Améliorer le suivi de l'assiduité</li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="alert alert-success">
                                <h6><i class="fas fa-chart-line me-2"></i>Moyen Terme (6 mois)</h6>
                                <ul class="mb-0 small">
                                    <li>Développer des outils prédictifs avancés</li>
                                    <li>Créer un programme de mentors experts</li>
                                    <li>Établir des partenariats entreprises renforcés</li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="alert alert-info">
                                <h6><i class="fas fa-flag me-2"></i>Long Terme (12 mois)</h6>
                                <ul class="mb-0 small">
                                    <li>Intelligence artificielle pour la personnalisation</li>
                                    <li>Expansion vers de nouveaux secteurs</li>
                                    <li>Certification d'excellence sectorielle</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
