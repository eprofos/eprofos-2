{% extends 'admin/base.html.twig' %}

{% block title %}Rapport Missions - Alternance{% endblock %}

{% block page_header %}
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="h2 mb-1">Rapport Missions</h1>
            <p class="text-muted mb-0">Suivi et analyse des missions en entreprise pour les alternants</p>
        </div>
        <div class="btn-toolbar" role="toolbar">
            <div class="btn-group me-2">
                <a href="{{ path('admin_alternance_reporting_index') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Retour
                </a>
            </div>
            <div class="btn-group">
                <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                    <i class="fas fa-download me-2"></i>Exporter
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#"><i class="fas fa-file-pdf me-2"></i>PDF</a></li>
                    <li><a class="dropdown-item" href="#"><i class="fas fa-file-excel me-2"></i>Excel</a></li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
    <!-- Filters -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <form method="GET" class="row g-3">
                        <div class="col-md-3">
                            <label for="period" class="form-label">Période</label>
                            <select name="period" id="period" class="form-select">
                                <option value="semester" {{ period == 'semester' ? 'selected' : '' }}>Semestre</option>
                                <option value="current_year" {{ period == 'current_year' ? 'selected' : '' }}>Année actuelle</option>
                                <option value="last_year" {{ period == 'last_year' ? 'selected' : '' }}>Année dernière</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="formation" class="form-label">Formation</label>
                            <select name="formation" id="formation" class="form-select">
                                <option value="">Toutes les formations</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="status" class="form-label">Statut</label>
                            <select name="status" id="status" class="form-select">
                                <option value="all" {{ status == 'all' ? 'selected' : '' }}>Tous</option>
                                <option value="active" {{ status == 'active' ? 'selected' : '' }}>Actives</option>
                                <option value="completed" {{ status == 'completed' ? 'selected' : '' }}>Terminées</option>
                                <option value="suspended" {{ status == 'suspended' ? 'selected' : '' }}>Suspendues</option>
                            </select>
                        </div>
                        <div class="col-md-3 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fas fa-filter me-2"></i>Appliquer
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Mission Statistics Overview -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h3 class="mb-1">{{ missions_data.mission_statistics.total_missions }}</h3>
                            <p class="text-muted mb-0">Total Missions</p>
                        </div>
                        <div class="text-primary">
                            <i class="fas fa-tasks fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h3 class="mb-1">{{ missions_data.mission_statistics.active_missions }}</h3>
                            <p class="text-muted mb-0">Missions Actives</p>
                        </div>
                        <div class="text-success">
                            <i class="fas fa-play-circle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h3 class="mb-1">{{ missions_data.mission_statistics.completed_missions }}</h3>
                            <p class="text-muted mb-0">Missions Terminées</p>
                        </div>
                        <div class="text-info">
                            <i class="fas fa-check-circle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h3 class="mb-1">{{ missions_data.mission_statistics.success_rate }}%</h3>
                            <p class="text-muted mb-0">Taux de Réussite</p>
                        </div>
                        <div class="text-warning">
                            <i class="fas fa-trophy fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Mission Types Distribution -->
    <div class="row mb-4">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title"><i class="fas fa-chart-pie me-2"></i>Types de Missions</h5>
                </div>
                <div class="card-body">
                    <canvas id="missionTypesChart" width="400" height="200"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title"><i class="fas fa-list-ol me-2"></i>Détail par Type</h5>
                </div>
                <div class="card-body">
                    {% for type, count in missions_data.mission_types %}
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span>{{ type }}</span>
                            <span class="badge badge-primary">{{ count }}</span>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

    <!-- Duration Analysis -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title"><i class="fas fa-clock me-2"></i>Analyse des Durées</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-3 text-center">
                            <div class="display-6 text-primary">{{ missions_data.duration_analysis.average_duration }}</div>
                            <div class="text-muted">Durée Moyenne (semaines)</div>
                        </div>
                        <div class="col-md-3 text-center">
                            <div class="display-6 text-success">{{ missions_data.duration_analysis.on_time_completion }}%</div>
                            <div class="text-muted">Terminées à Temps</div>
                        </div>
                        <div class="col-md-3 text-center">
                            <div class="display-6 text-warning">{{ missions_data.duration_analysis.delayed_missions }}%</div>
                            <div class="text-muted">En Retard</div>
                        </div>
                        <div class="col-md-3 text-center">
                            <div class="display-6 text-info">{{ missions_data.duration_analysis.early_completion }}%</div>
                            <div class="text-muted">Terminées en Avance</div>
                        </div>
                    </div>
                    
                    <!-- Duration Completion Progress Bar -->
                    <div class="progress progress-stacked" style="height: 20px;">
                        <div class="progress-bar bg-success" style="width: {{ missions_data.duration_analysis.on_time_completion }}%"
                             title="À temps: {{ missions_data.duration_analysis.on_time_completion }}%"></div>
                        <div class="progress-bar bg-warning" style="width: {{ missions_data.duration_analysis.delayed_missions }}%"
                             title="En retard: {{ missions_data.duration_analysis.delayed_missions }}%"></div>
                        <div class="progress-bar bg-info" style="width: {{ missions_data.duration_analysis.early_completion }}%"
                             title="En avance: {{ missions_data.duration_analysis.early_completion }}%"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Complexity & Satisfaction -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="card-title"><i class="fas fa-layer-group me-2"></i>Répartition par Complexité</h5>
                </div>
                <div class="card-body">
                    <canvas id="complexityChart" width="300" height="200"></canvas>
                    <div class="mt-3">
                        {% for level, count in missions_data.complexity_distribution %}
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span>{{ level }}</span>
                                <div class="d-flex align-items-center">
                                    <div class="progress me-2" style="width: 80px; height: 8px;">
                                        <div class="progress-bar" style="width: {{ (count / 100 * 100) }}%"></div>
                                    </div>
                                    <span class="badge badge-secondary">{{ count }}</span>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="card-title"><i class="fas fa-star me-2"></i>Métriques de Satisfaction</h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <div class="display-4 text-success">{{ missions_data.satisfaction_metrics.student_satisfaction }}/5</div>
                        <div class="text-muted">Satisfaction Globale</div>
                    </div>
                    
                    <div class="row">
                        <div class="col-12 mb-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <span>Étudiants</span>
                                <div class="d-flex align-items-center">
                                    <div class="progress me-2" style="width: 100px; height: 8px;">
                                        <div class="progress-bar bg-primary" style="width: {{ (missions_data.satisfaction_metrics.student_satisfaction / 5 * 100) }}%"></div>
                                    </div>
                                    <span class="text-primary fw-bold">{{ missions_data.satisfaction_metrics.student_satisfaction }}/5</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 mb-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <span>Mentors</span>
                                <div class="d-flex align-items-center">
                                    <div class="progress me-2" style="width: 100px; height: 8px;">
                                        <div class="progress-bar bg-success" style="width: {{ (missions_data.satisfaction_metrics.mentor_satisfaction / 5 * 100) }}%"></div>
                                    </div>
                                    <span class="text-success fw-bold">{{ missions_data.satisfaction_metrics.mentor_satisfaction }}/5</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 mb-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <span>Entreprises</span>
                                <div class="d-flex align-items-center">
                                    <div class="progress me-2" style="width: 100px; height: 8px;">
                                        <div class="progress-bar bg-warning" style="width: {{ (missions_data.satisfaction_metrics.company_satisfaction / 5 * 100) }}%"></div>
                                    </div>
                                    <span class="text-warning fw-bold">{{ missions_data.satisfaction_metrics.company_satisfaction }}/5</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recommendations -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title"><i class="fas fa-lightbulb me-2"></i>Recommandations et Optimisations</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="alert alert-info">
                                <h6><i class="fas fa-chart-line me-2"></i>Amélioration des Délais</h6>
                                <ul class="mb-0 small">
                                    <li>Définir des jalons intermédiaires</li>
                                    <li>Renforcer le suivi hebdomadaire</li>
                                    <li>Anticiper les difficultés</li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="alert alert-success">
                                <h6><i class="fas fa-balance-scale me-2"></i>Équilibrage de la Complexité</h6>
                                <ul class="mb-0 small">
                                    <li>Progression graduelle de la difficulté</li>
                                    <li>Adaptation au niveau de l'alternant</li>
                                    <li>Support renforcé pour missions complexes</li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="alert alert-warning">
                                <h6><i class="fas fa-handshake me-2"></i>Renforcement de l'Engagement</h6>
                                <ul class="mb-0 small">
                                    <li>Formation des mentors</li>
                                    <li>Clarification des objectifs</li>
                                    <li>Feedback régulier et constructif</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Auto-submit form on change
            const selects = document.querySelectorAll('form select');
            selects.forEach(select => {
                select.addEventListener('change', function() {
                    this.form.submit();
                });
            });

            // Mission Types Chart
            const missionTypesCtx = document.getElementById('missionTypesChart');
            if (missionTypesCtx) {
                new Chart(missionTypesCtx, {
                    type: 'bar',
                    data: {
                        labels: {{ missions_data.mission_types|keys|json_encode }},
                        datasets: [{
                            label: 'Nombre de Missions',
                            data: {{ missions_data.mission_types|json_encode }},
                            backgroundColor: [
                                'rgba(255, 99, 132, 0.8)',
                                'rgba(54, 162, 235, 0.8)',
                                'rgba(255, 205, 86, 0.8)',
                                'rgba(75, 192, 192, 0.8)',
                                'rgba(153, 102, 255, 0.8)',
                                'rgba(255, 159, 64, 0.8)'
                            ]
                        }]
                    },
                    options: {
                        responsive: true,
                        plugins: {
                            legend: {
                                display: false
                            }
                        },
                        scales: {
                            y: {
                                beginAtZero: true
                            }
                        }
                    }
                });
            }

            // Complexity Distribution Chart
            const complexityCtx = document.getElementById('complexityChart');
            if (complexityCtx) {
                new Chart(complexityCtx, {
                    type: 'doughnut',
                    data: {
                        labels: {{ missions_data.complexity_distribution|keys|json_encode }},
                        datasets: [{
                            data: {{ missions_data.complexity_distribution|json_encode }},
                            backgroundColor: [
                                'rgba(75, 192, 192, 0.8)',
                                'rgba(255, 205, 86, 0.8)',
                                'rgba(255, 99, 132, 0.8)',
                                'rgba(153, 102, 255, 0.8)'
                            ]
                        }]
                    },
                    options: {
                        responsive: true,
                        plugins: {
                            legend: {
                                position: 'bottom'
                            }
                        }
                    }
                });
            }
        });
    </script>
{% endblock %}
