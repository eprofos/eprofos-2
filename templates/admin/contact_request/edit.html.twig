{% extends 'admin/base.html.twig' %}

{% block title %}Modifier la demande #{{ contact_request.id }} - {{ page_title }} - EPROFOS Admin{% endblock %}

{% block page_header %}
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <!-- Page pre-title -->
                    <div class="page-pretitle">
                        Administration
                    </div>
                    <h2 class="page-title">
                        Modifier la demande #{{ contact_request.id }}
                    </h2>
                </div>
                <!-- Page title actions -->
                <div class="col-auto ms-auto d-print-none">
                    <div class="btn-list">
                        <a href="{{ path('admin_contact_request_show', {id: contact_request.id}) }}" class="btn btn-outline-secondary d-none d-sm-inline-block">
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                <path d="M9 11l3 3l8 -8"/>
                                <path d="M21 12c0 4.97 -4.03 9 -9 9s-9 -4.03 -9 -9s4.03 -9 9 -9c2.12 0 4.07 .74 5.61 1.97"/>
                            </svg>
                            Voir la demande
                        </a>
                        <a href="{{ path('admin_contact_request_show', {id: contact_request.id}) }}" class="btn btn-outline-secondary d-sm-none btn-icon" aria-label="Voir la demande">
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                <path d="M9 11l3 3l8 -8"/>
                                <path d="M21 12c0 4.97 -4.03 9 -9 9s-9 -4.03 -9 -9s4.03 -9 9 -9c2.12 0 4.07 .74 5.61 1.97"/>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="container-xl">
        <div class="row row-deck row-cards">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Modifier la demande</h3>
                        <div class="card-actions">
                            <span class="badge {{ contact_request.statusBadgeClass }} text-white">{{ contact_request.statusLabel }}</span>
                        </div>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                        
                        <div class="row">
                            <div class="col-12">
                                <div class="mb-3">
                                    {{ form_label(form.status) }}
                                    {{ form_widget(form.status) }}
                                    {{ form_help(form.status) }}
                                    {{ form_errors(form.status) }}
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.adminNotes) }}
                            {{ form_widget(form.adminNotes) }}
                            {{ form_help(form.adminNotes) }}
                            {{ form_errors(form.adminNotes) }}
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('admin_contact_request_show', {id: contact_request.id}) }}" class="btn btn-outline-secondary">
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon me-1" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                    <path d="M5 12l14 0"/>
                                    <path d="M5 12l6 6"/>
                                    <path d="M5 12l6 -6"/>
                                </svg>
                                Retour
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon me-1" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                    <path d="M5 12l5 5l10 -10"/>
                                </svg>
                                Enregistrer les modifications
                            </button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Informations de la demande</h3>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Contact</label>
                            <div class="form-control-plaintext">
                                <div class="d-flex align-items-center">
                                    <span class="avatar avatar-sm me-3" style="background-color: var(--tblr-primary); color: white;">
                                        {{ contact_request.firstName|first|upper }}{{ contact_request.lastName|first|upper }}
                                    </span>
                                    <div>
                                        <div class="fw-bold">{{ contact_request.fullName }}</div>
                                        <div class="text-muted small">{{ contact_request.email }}</div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Type de demande</label>
                            <div class="form-control-plaintext">
                                <span class="badge bg-blue text-white">{{ contact_request.typeLabel }}</span>
                            </div>
                        </div>

                        {% if contact_request.subject %}
                            <div class="mb-3">
                                <label class="form-label fw-bold">Sujet</label>
                                <div class="form-control-plaintext">{{ contact_request.subject }}</div>
                            </div>
                        {% endif %}

                        {% if contact_request.company %}
                            <div class="mb-3">
                                <label class="form-label fw-bold">Entreprise</label>
                                <div class="form-control-plaintext">{{ contact_request.company }}</div>
                            </div>
                        {% endif %}

                        {% if contact_request.formation or contact_request.service %}
                            <div class="mb-3">
                                <label class="form-label fw-bold">Formation/Service</label>
                                <div class="form-control-plaintext">
                                    {% if contact_request.formation %}
                                        <div class="d-flex align-items-center">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="icon text-success me-2" width="16" height="16" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                                <path d="M22 9l-10 -4l-10 4l10 4l10 -4v6"/>
                                                <path d="M6 10.6v9.4a6 3 0 0 0 12 0v-9.4"/>
                                            </svg>
                                            <span class="small">{{ contact_request.formation.title }}</span>
                                        </div>
                                    {% elseif contact_request.service %}
                                        <div class="d-flex align-items-center">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="icon text-info me-2" width="16" height="16" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                                <path d="M12 3c.132 0 .263 0 .393 0a7.5 7.5 0 0 0 7.92 12.446a9 9 0 1 1 -8.313 -12.454z"/>
                                                <path d="M17 4a2 2 0 0 0 2 2a2 2 0 0 0 -2 2a2 2 0 0 0 -2 -2a2 2 0 0 0 2 -2"/>
                                                <path d="M19 11h2m-1 -1v2"/>
                                            </svg>
                                            <span class="small">{{ contact_request.service.title }}</span>
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        {% endif %}

                        <div class="mb-3">
                            <label class="form-label fw-bold">Créée le</label>
                            <div class="form-control-plaintext">
                                {{ contact_request.createdAt|date('d/m/Y à H:i') }}
                            </div>
                        </div>

                        {% if contact_request.processedAt %}
                            <div class="mb-3">
                                <label class="form-label fw-bold">Traitée le</label>
                                <div class="form-control-plaintext">
                                    {{ contact_request.processedAt|date('d/m/Y à H:i') }}
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Message original</h3>
                    </div>
                    <div class="card-body">
                        <div class="form-control-plaintext">
                            <div class="card bg-light">
                                <div class="card-body">
                                    {{ contact_request.message|nl2br }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Actions rapides</h3>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a href="mailto:{{ contact_request.email }}" class="btn btn-outline-secondary">
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon me-1" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                    <path d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z"/>
                                    <path d="M3 7l9 6l9 -6"/>
                                </svg>
                                Envoyer un email
                            </a>

                            {% if contact_request.phone %}
                                <a href="tel:{{ contact_request.phone }}" class="btn btn-outline-secondary">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon me-1" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                        <path d="M5 4h4l2 5l-2.5 1.5a11 11 0 0 0 5 5l1.5 -2.5l5 2v4a2 2 0 0 1 -2 2a16 16 0 0 1 -15 -15a2 2 0 0 1 2 -2"/>
                                    </svg>
                                    Appeler
                                </a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}