{% extends 'admin/base.html.twig' %}

{% set page_title = 'Modèles UI de documents' %}
{% set breadcrumb = [
    {'label': 'Documents', 'url': path('admin_document_index')},
    {'label': 'Modèles UI'}
] %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-layer-group me-2"></i>
                        {{ page_title }}
                    </h4>
                    <div class="btn-group">
                        <a href="{{ path('admin_document_ui_template_new') }}" class="btn btn-primary">
                            <i class="fas fa-plus me-1"></i>
                            Nouveau modèle UI
                        </a>
                        <a href="{{ path('admin_document_ui_template_import') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-upload me-1"></i>
                            Importer
                        </a>
                    </div>
                </div>
                
                <div class="card-body">
                    {% if templates_with_stats is empty %}
                        <div class="text-center py-5">
                            <i class="fas fa-layer-group fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Aucun modèle UI configuré</h5>
                            <p class="text-muted">Créez votre premier modèle UI pour générer des documents avec une mise en page personnalisée.</p>
                            <a href="{{ path('admin_document_ui_template_new') }}" class="btn btn-primary">
                                <i class="fas fa-plus me-1"></i>
                                Créer un modèle UI
                            </a>
                        </div>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Modèle</th>
                                        <th>Type</th>
                                        <th>Format</th>
                                        <th>Composants</th>
                                        <th>Utilisation</th>
                                        <th>Statut</th>
                                        <th width="200">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for item in templates_with_stats %}
                                        {% set template = item.template %}
                                        {% set stats = item.stats %}
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    {% if template.icon %}
                                                        <i class="{{ template.icon }} text-{{ template.color ? 'primary' : 'muted' }} me-2"></i>
                                                    {% else %}
                                                        <i class="fas fa-layer-group text-muted me-2"></i>
                                                    {% endif %}
                                                    <div>
                                                        <strong>{{ template.name }}</strong>
                                                        {% if template.description %}
                                                            <br>
                                                            <small class="text-muted">{{ template.description|slice(0, 80) }}{% if template.description|length > 80 %}...{% endif %}</small>
                                                        {% endif %}
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                {% if template.isGlobal %}
                                                    <span class="badge bg-info">Global</span>
                                                {% else %}
                                                    <span class="badge bg-secondary">{{ stats.type_name }}</span>
                                                {% endif %}
                                                {% if stats.is_default %}
                                                    <span class="badge bg-success">Défaut</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <span class="badge bg-light text-dark">
                                                    {{ template.paperSize }} {{ template.orientation == 'landscape' ? 'Paysage' : 'Portrait' }}
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge bg-primary">{{ stats.component_count }}</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-warning text-dark">{{ stats.usage_count }}</span>
                                            </td>
                                            <td>
                                                {% if template.isActive %}
                                                    <span class="badge bg-success">Actif</span>
                                                {% else %}
                                                    <span class="badge bg-danger">Inactif</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a href="{{ path('admin_document_ui_template_show', {id: template.id}) }}" 
                                                       class="btn btn-outline-primary" title="Voir">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="{{ path('admin_document_ui_template_preview', {id: template.id}) }}" 
                                                       class="btn btn-outline-info" title="Aperçu">
                                                        <i class="fas fa-search"></i>
                                                    </a>
                                                    <a href="{{ path('admin_document_ui_component_index', {templateId: template.id}) }}" 
                                                       class="btn btn-outline-secondary" title="Composants">
                                                        <i class="fas fa-puzzle-piece"></i>
                                                    </a>
                                                </div>
                                                <div class="btn-group btn-group-sm ms-1">
                                                    <a href="{{ path('admin_document_ui_template_edit', {id: template.id}) }}" 
                                                       class="btn btn-outline-warning" title="Modifier">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a href="{{ path('admin_document_ui_template_export', {id: template.id}) }}" 
                                                       class="btn btn-outline-success" title="Exporter">
                                                        <i class="fas fa-download"></i>
                                                    </a>
                                                    
                                                    <!-- Dropdown for more actions -->
                                                    <div class="btn-group">
                                                        <button type="button" class="btn btn-outline-secondary dropdown-toggle dropdown-toggle-split" 
                                                                data-bs-toggle="dropdown" aria-expanded="false">
                                                            <span class="visually-hidden">Plus d'actions</span>
                                                        </button>
                                                        <ul class="dropdown-menu">
                                                            <li>
                                                                <form method="post" action="{{ path('admin_document_ui_template_toggle_status', {id: template.id}) }}" class="d-inline">
                                                                    <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ template.id) }}">
                                                                    <button type="submit" class="dropdown-item">
                                                                        <i class="fas fa-{{ template.isActive ? 'pause' : 'play' }} me-1"></i>
                                                                        {{ template.isActive ? 'Désactiver' : 'Activer' }}
                                                                    </button>
                                                                </form>
                                                            </li>
                                                            <li>
                                                                <form method="post" action="{{ path('admin_document_ui_template_duplicate', {id: template.id}) }}" class="d-inline">
                                                                    <input type="hidden" name="_token" value="{{ csrf_token('duplicate' ~ template.id) }}">
                                                                    <button type="submit" class="dropdown-item">
                                                                        <i class="fas fa-copy me-1"></i>
                                                                        Dupliquer
                                                                    </button>
                                                                </form>
                                                            </li>
                                                            <li><hr class="dropdown-divider"></li>
                                                            <li>
                                                                <form method="post" action="{{ path('admin_document_ui_template_delete', {id: template.id}) }}" 
                                                                      class="d-inline" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce modèle UI ?')">
                                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ template.id) }}">
                                                                    <button type="submit" class="dropdown-item text-danger">
                                                                        <i class="fas fa-trash me-1"></i>
                                                                        Supprimer
                                                                    </button>
                                                                </form>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Add any specific JavaScript for the UI templates index page
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
{% endblock %}
