{% extends 'admin/base.html.twig' %}

{% set page_title = 'Tous les composants UI' %}
{% set breadcrumb = [
    {'label': 'Documents', 'url': path('admin_document_index')},
    {'label': 'Modèles UI', 'url': path('admin_document_ui_template_index')},
    {'label': 'Composants UI'}
] %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-puzzle-piece me-2"></i>
                        {{ page_title }}
                        <span class="badge bg-blue ms-2">{{ total_components }} composant{{ total_components > 1 ? 's' : '' }}</span>
                    </h4>
                    <div class="btn-group">
                        <a href="{{ path('admin_document_ui_template_index') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-layer-group me-1"></i>
                            Modèles UI
                        </a>
                        <a href="{{ path('admin_document_ui_template_new') }}" class="btn btn-primary">
                            <i class="fas fa-plus me-1"></i>
                            Nouveau modèle
                        </a>
                    </div>
                </div>
                
                <div class="card-body">
                    {% if components_by_template is empty %}
                        <div class="text-center py-5">
                            <i class="fas fa-puzzle-piece fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Aucun composant UI configuré</h5>
                            <p class="text-muted">Les composants UI permettent de personnaliser la mise en page de vos documents.</p>
                            <a href="{{ path('admin_document_ui_template_new') }}" class="btn btn-primary">
                                <i class="fas fa-plus me-1"></i>
                                Créer un modèle UI
                            </a>
                        </div>
                    {% else %}
                        <!-- Summary Stats -->
                        <div class="row mb-4">
                            <div class="col-lg-3 col-md-6">
                                <div class="card bg-primary text-white">
                                    <div class="card-body">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-layer-group fa-2x me-3"></i>
                                            <div>
                                                <div class="h3 mb-0">{{ components_by_template|length }}</div>
                                                <div class="text-white-50">Modèle{{ components_by_template|length > 1 ? 's' : '' }}</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-6">
                                <div class="card bg-success text-white">
                                    <div class="card-body">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-puzzle-piece fa-2x me-3"></i>
                                            <div>
                                                <div class="h3 mb-0">{{ total_components }}</div>
                                                <div class="text-white-50">Composant{{ total_components > 1 ? 's' : '' }}</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-6">
                                <div class="card bg-info text-white">
                                    <div class="card-body">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-th-large fa-2x me-3"></i>
                                            <div>
                                                <div class="h3 mb-0">{{ zones|length }}</div>
                                                <div class="text-white-50">Zone{{ zones|length > 1 ? 's' : '' }}</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-6">
                                <div class="card bg-warning text-white">
                                    <div class="card-body">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-shapes fa-2x me-3"></i>
                                            <div>
                                                <div class="h3 mb-0">{{ component_types|length }}</div>
                                                <div class="text-white-50">Type{{ component_types|length > 1 ? 's' : '' }}</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Components by Template -->
                        {% for template_data in components_by_template %}
                            {% set template = template_data.template %}
                            {% set template_components = template_data.components %}
                            
                            <div class="card mb-4">
                                <div class="card-header">
                                    <div class="row align-items-center">
                                        <div class="col">
                                            <h5 class="card-title mb-0">
                                                <i class="fas fa-layer-group me-2"></i>
                                                {{ template.name }}
                                            </h5>
                                            <div class="text-muted small mt-1">
                                                {{ template.description|default('Aucune description') }}
                                            </div>
                                        </div>
                                        <div class="col-auto">
                                            <div class="btn-group btn-group-sm">
                                                <a href="{{ path('admin_document_ui_template_show', {id: template.id}) }}" 
                                                   class="btn btn-outline-primary">
                                                    <i class="fas fa-eye me-1"></i>
                                                    Voir modèle
                                                </a>
                                                <a href="{{ path('admin_document_ui_template_components', {id: template.id}) }}" 
                                                   class="btn btn-outline-secondary">
                                                    <i class="fas fa-cog me-1"></i>
                                                    Gérer composants
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="card-body">
                                    {% if template_components is empty %}
                                        <div class="text-center py-3">
                                            <i class="fas fa-puzzle-piece text-muted fa-2x mb-2"></i>
                                            <p class="text-muted mb-1">Aucun composant dans ce modèle</p>
                                            <a href="{{ path('admin_document_ui_component_new', {templateId: template.id}) }}" 
                                               class="btn btn-sm btn-primary">
                                                <i class="fas fa-plus me-1"></i>
                                                Ajouter un composant
                                            </a>
                                        </div>
                                    {% else %}
                                        <!-- Components grouped by zone -->
                                        {% for zone_key, zone_label in zones %}
                                            {% if template_components[zone_key] is defined %}
                                                <div class="mb-3">
                                                    <h6 class="text-muted mb-2">
                                                        <i class="fas fa-th-large me-1"></i>
                                                        {{ zone_label }}
                                                        <span class="badge bg-secondary ms-1">{{ template_components[zone_key]|length }}</span>
                                                    </h6>
                                                    
                                                    <div class="row">
                                                        {% for component in template_components[zone_key] %}
                                                            <div class="col-lg-4 col-md-6 mb-2">
                                                                <div class="card border component-card">
                                                                    <div class="card-body p-3">
                                                                        <div class="d-flex align-items-start">
                                                                            <div class="me-2">
                                                                                {% set type_icon = {
                                                                                    'text': 'fas fa-font',
                                                                                    'image': 'fas fa-image',
                                                                                    'logo': 'fas fa-certificate',
                                                                                    'table': 'fas fa-table',
                                                                                    'list': 'fas fa-list',
                                                                                    'signature': 'fas fa-signature',
                                                                                    'date': 'fas fa-calendar',
                                                                                    'page_number': 'fas fa-hashtag',
                                                                                    'barcode': 'fas fa-barcode',
                                                                                    'qr_code': 'fas fa-qrcode',
                                                                                    'divider': 'fas fa-minus',
                                                                                    'spacer': 'fas fa-arrows-alt-v',
                                                                                    'custom_html': 'fas fa-code'
                                                                                } %}
                                                                                <i class="{{ type_icon[component.type]|default('fas fa-puzzle-piece') }} text-muted"></i>
                                                                            </div>
                                                                            <div class="flex-fill">
                                                                                <div class="fw-bold small">{{ component.name }}</div>
                                                                                <div class="text-muted small">{{ component.typeLabel }}</div>
                                                                                {% if component.isRequired %}
                                                                                    <span class="badge bg-danger small">Requis</span>
                                                                                {% endif %}
                                                                                {% if not component.isActive %}
                                                                                    <span class="badge bg-secondary small">Inactif</span>
                                                                                {% endif %}
                                                                            </div>
                                                                            <div class="ms-2">
                                                                                <div class="btn-group btn-group-sm">
                                                                                    <a href="{{ path('admin_document_ui_component_show', {templateId: template.id, id: component.id}) }}" 
                                                                                       class="btn btn-sm btn-outline-primary">
                                                                                        <i class="fas fa-eye"></i>
                                                                                    </a>
                                                                                    <a href="{{ path('admin_document_ui_component_edit', {templateId: template.id, id: component.id}) }}" 
                                                                                       class="btn btn-sm btn-outline-secondary">
                                                                                        <i class="fas fa-edit"></i>
                                                                                    </a>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        {% endfor %}
                                                    </div>
                                                </div>
                                            {% endif %}
                                        {% endfor %}
                                    {% endif %}
                                </div>
                            </div>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.component-card {
    transition: all 0.2s ease;
}

.component-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
}

.component-card .card-body {
    font-size: 0.9rem;
}
</style>
{% endblock %}
