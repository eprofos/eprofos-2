{% extends 'admin/base.html.twig' %}

{% block page_actions %}
    <a href="{{ path('admin_document_type_new') }}" class="btn btn-primary">
        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
            <path d="M12 5l0 14"/>
            <path d="M5 12l14 0"/>
        </svg>
        Nouveau type de document
    </a>
{% endblock %}

{% block body %}
    <div class="row row-deck row-cards">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Types de documents</h3>
                    <div class="card-actions">
                        <div class="text-muted small">
                            {{ types_with_stats|length }} type{{ types_with_stats|length > 1 ? 's' : '' }}
                        </div>
                    </div>
                </div>
                
                {% if types_with_stats|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-vcenter card-table">
                            <thead>
                                <tr>
                                    <th>Type</th>
                                    <th>Code</th>
                                    <th>Configuration</th>
                                    <th>Documents</th>
                                    <th>Templates</th>
                                    <th>Statut</th>
                                    <th class="w-1">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for item in types_with_stats %}
                                    {% set type = item.type %}
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                {% if type.icon %}
                                                    <span class="me-2" {% if type.color %}style="color: {{ type.color }}"{% endif %}>
                                                        <i class="{{ type.icon }}"></i>
                                                    </span>
                                                {% endif %}
                                                <div>
                                                    <div class="fw-bold">{{ type.name }}</div>
                                                    {% if type.description %}
                                                        <div class="text-muted small text-truncate" style="max-width: 200px;" title="{{ type.description }}">
                                                            {{ type.description }}
                                                        </div>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <code class="small">{{ type.code }}</code>
                                        </td>
                                        <td>
                                            <div class="row g-1">
                                                {% if type.requiresApproval %}
                                                    <div class="col-auto">
                                                        <span class="badge bg-yellow" title="Nécessite une approbation">
                                                            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-sm" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                                                <path d="M9 12l2 2l4 -4"/>
                                                                <path d="M21 12c-1 0 -3 -1 -3 -3s2 -3 3 -3s3 1 3 3s-2 3 -3 3"/>
                                                                <path d="M3 12c1 0 3 -1 3 -3s-2 -3 -3 -3s-3 1 -3 3s2 3 3 3"/>
                                                                <path d="M12 21c0 -1 -1 -3 -3 -3s-3 2 -3 3s1 3 3 3s3 -2 3 -3"/>
                                                                <path d="M12 3c0 1 -1 3 -3 3s-3 -2 -3 -3s1 -3 3 -3s3 2 3 3"/>
                                                            </svg>
                                                            Approbation
                                                        </span>
                                                    </div>
                                                {% endif %}
                                                {% if not type.allowMultiplePublished %}
                                                    <div class="col-auto">
                                                        <span class="badge bg-blue" title="Un seul document publié à la fois">
                                                            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-sm" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                                                <path d="M12 3l0 6l4 -4m-4 4l-4 -4"/>
                                                                <path d="M12 21l0 -6l4 4m-4 -4l-4 4"/>
                                                            </svg>
                                                            Unique
                                                        </span>
                                                    </div>
                                                {% endif %}
                                                {% if type.hasExpiration %}
                                                    <div class="col-auto">
                                                        <span class="badge bg-orange" title="Documents avec expiration">
                                                            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-sm" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                                                <path d="M12 7v5l3 3"/>
                                                                <path d="M12 3a9 9 0 1 0 9 9"/>
                                                                <path d="M20 3v4h-4"/>
                                                            </svg>
                                                            Expiration
                                                        </span>
                                                    </div>
                                                {% endif %}
                                                {% if type.generatesPdf %}
                                                    <div class="col-auto">
                                                        <span class="badge bg-red" title="Génère des PDFs">
                                                            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-sm" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                                                <path d="M14 3v4a1 1 0 0 0 1 1h4"/>
                                                                <path d="M17 21h-10a2 2 0 0 1 -2 -2v-14a2 2 0 0 1 2 -2h7l5 5v11a2 2 0 0 1 -2 2z"/>
                                                                <path d="M9 14v-1h1m0 0v1h1m-1 -1h1m-1 0v-1"/>
                                                            </svg>
                                                            PDF
                                                        </span>
                                                    </div>
                                                {% endif %}
                                            </div>
                                        </td>
                                        <td>
                                            {% if item.document_count > 0 %}
                                                <div class="d-flex flex-column">
                                                    <span class="badge bg-blue">
                                                        {{ item.document_count }} document{{ item.document_count > 1 ? 's' : '' }}
                                                    </span>
                                                    {% if item.published_count > 0 %}
                                                        <span class="badge bg-green mt-1">
                                                            {{ item.published_count }} publié{{ item.published_count > 1 ? 's' : '' }}
                                                        </span>
                                                    {% endif %}
                                                </div>
                                            {% else %}
                                                <span class="text-muted">Aucun document</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if item.template_count > 0 %}
                                                <span class="badge bg-purple">
                                                    {{ item.template_count }} template{{ item.template_count > 1 ? 's' : '' }}
                                                </span>
                                            {% else %}
                                                <span class="text-muted">Aucun template</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <form method="post" action="{{ path('admin_document_type_toggle_status', {'id': type.id}) }}" class="d-inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ type.id) }}">
                                                <button type="submit" class="btn btn-sm {{ type.isActive ? 'btn-success' : 'btn-outline-secondary' }}" 
                                                        onclick="return confirm('Êtes-vous sûr de vouloir {{ type.isActive ? 'désactiver' : 'activer' }} ce type ?')">
                                                    {% if type.isActive %}
                                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-sm" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                                            <path d="M5 12l5 5l10 -10"/>
                                                        </svg>
                                                        Actif
                                                    {% else %}
                                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-sm" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                                            <path d="M18 6l-12 12"/>
                                                            <path d="M6 6l12 12"/>
                                                        </svg>
                                                        Inactif
                                                    {% endif %}
                                                </button>
                                            </form>
                                        </td>
                                        <td>
                                            <div class="btn-list flex-nowrap">
                                                <a href="{{ path('admin_document_type_show', {'id': type.id}) }}" class="btn btn-sm btn-outline-primary">
                                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                                        <path d="M10 12a2 2 0 1 0 4 0a2 2 0 0 0 -4 0"/>
                                                        <path d="M21 12c-2.4 4 -5.4 6 -9 6c-3.6 0 -6.6 -2 -9 -6c2.4 -4 5.4 -6 9 -6c3.6 0 6.6 2 9 6"/>
                                                    </svg>
                                                </a>
                                                <a href="{{ path('admin_document_type_edit', {'id': type.id}) }}" class="btn btn-sm btn-outline-secondary">
                                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                                        <path d="M7 7h-1a2 2 0 0 0 -2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2 -2v-1"/>
                                                        <path d="M20.385 6.585a2.1 2.1 0 0 0 -2.97 -2.97l-8.415 8.385v3h3l8.385 -8.415z"/>
                                                        <path d="M16 5l3 3"/>
                                                    </svg>
                                                </a>
                                                <form method="post" action="{{ path('admin_document_type_duplicate', {'id': type.id}) }}" class="d-inline">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('duplicate' ~ type.id) }}">
                                                    <button type="submit" class="btn btn-sm btn-outline-info" title="Dupliquer le type">
                                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                                            <path d="M8 8m0 2a2 2 0 0 1 2 -2h8a2 2 0 0 1 2 2v8a2 2 0 0 1 -2 2h-8a2 2 0 0 1 -2 -2z"/>
                                                            <path d="M16 8v-2a2 2 0 0 0 -2 -2h-8a2 2 0 0 0 -2 2v8a2 2 0 0 0 2 2h2"/>
                                                        </svg>
                                                    </button>
                                                </form>
                                                {% if item.document_count == 0 %}
                                                    <form method="post" action="{{ path('admin_document_type_delete', {'id': type.id}) }}" class="d-inline">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ type.id) }}">
                                                        <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                                onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce type de document ?')">
                                                            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                                                <path d="M4 7l16 0"/>
                                                                <path d="M10 11l0 6"/>
                                                                <path d="M14 11l0 6"/>
                                                                <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12"/>
                                                                <path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3"/>
                                                            </svg>
                                                        </button>
                                                    </form>
                                                {% else %}
                                                    <span class="btn btn-sm btn-outline-danger disabled" title="Impossible de supprimer : le type contient des documents">
                                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                                            <path d="M4 7l16 0"/>
                                                            <path d="M10 11l0 6"/>
                                                            <path d="M14 11l0 6"/>
                                                            <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12"/>
                                                            <path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3"/>
                                                        </svg>
                                                    </span>
                                                {% endif %}
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="card-body">
                        <div class="empty">
                            <div class="empty-img">
                                <img src="data:image/svg+xml;base64," height="128" alt="">
                            </div>
                            <p class="empty-title">Aucun type de document</p>
                            <p class="empty-subtitle text-muted">
                                Commencez par créer votre premier type de document pour organiser vos contenus.
                            </p>
                            <div class="empty-action">
                                <a href="{{ path('admin_document_type_new') }}" class="btn btn-primary">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                        <path d="M12 5l0 14"/>
                                        <path d="M5 12l14 0"/>
                                    </svg>
                                    Créer un type de document
                                </a>
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
