{% extends 'student/base.html.twig' %}

{% block title %}Résultats - {{ qcm.title }}{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start flex-wrap">
                        <div>
                            <h4 class="mb-1">{{ qcm.title }}</h4>
                            <div class="text-muted small">
                                <span class="me-3">
                                    <i class="fas fa-layer-group me-1"></i>
                                    {{ course.chapter.module.title }}
                                </span>
                                <span class="me-3">
                                    <i class="fas fa-book me-1"></i>
                                    {{ course.title }}
                                </span>
                                <span class="me-3">
                                    <i class="fas fa-calendar me-1"></i>
                                    {{ attempt.completedAt|date('d/m/Y à H:i') }}
                                </span>
                                <span>
                                    <i class="fas fa-redo me-1"></i>
                                    Tentative #{{ attempt.attemptNumber }}
                                </span>
                            </div>
                        </div>
                        <div class="text-end">
                            {% if (attempt.score / qcm.questions|length * 100) >= qcm.passingScore %}
                                <div class="badge bg-success fs-6 px-3 py-2">
                                    <i class="fas fa-check-circle me-2"></i>
                                    QCM Réussi
                                </div>
                            {% else %}
                                <div class="badge bg-danger fs-6 px-3 py-2">
                                    <i class="fas fa-times-circle me-2"></i>
                                    QCM Échoué
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Results Summary -->
        <div class="col-lg-4">
            <div class="sticky-top" style="top: 20px;">
                <!-- Score Card -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">
                            <i class="fas fa-chart-pie me-2"></i>
                            Résumé des résultats
                        </h5>
                    </div>
                    <div class="card-body text-center">
                        <div class="mb-4">
                            <div class="display-4 fw-bold mb-2">
                                {% set percentage = (attempt.score / qcm.questions|length * 100)|round %}
                                <span class="{% if percentage >= qcm.passingScore %}text-success{% else %}text-danger{% endif %}">
                                    {{ percentage }}%
                                </span>
                            </div>
                            <div class="fs-5">
                                {{ attempt.score }}/{{ qcm.questions|length }} points
                            </div>
                            <small class="text-muted">Score obtenu</small>
                        </div>

                        <div class="progress mb-3" style="height: 10px;">
                            <div class="progress-bar {% if percentage >= qcm.passingScore %}bg-success{% else %}bg-danger{% endif %}" 
                                 role="progressbar" 
                                 style="width: {{ percentage }}%">
                            </div>
                        </div>

                        <div class="d-flex justify-content-between text-sm mb-3">
                            <span>Score requis: {{ qcm.passingScore }}%</span>
                            <span>Obtenu: {{ percentage }}%</span>
                        </div>
                    </div>
                </div>

                <!-- Statistics Card -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-light">
                        <h6 class="mb-0">
                            <i class="fas fa-chart-bar me-2"></i>
                            Statistiques détaillées
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="row text-center g-3">
                            <div class="col-6">
                                <div class="border rounded p-3">
                                    <div class="h5 mb-1 text-success">{{ correct_answers }}</div>
                                    <small class="text-muted">Correctes</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="border rounded p-3">
                                    <div class="h5 mb-1 text-danger">{{ incorrect_answers }}</div>
                                    <small class="text-muted">Incorrectes</small>
                                </div>
                            </div>
                            {% if unanswered_count > 0 %}
                            <div class="col-6">
                                <div class="border rounded p-3">
                                    <div class="h5 mb-1 text-warning">{{ unanswered_count }}</div>
                                    <small class="text-muted">Non répondues</small>
                                </div>
                            </div>
                            {% endif %}
                            <div class="col-6">
                                <div class="border rounded p-3">
                                    <div class="h5 mb-1 text-info">
                                        {% if attempt.completedAt and attempt.startedAt %}
                                            {% set duration = (attempt.completedAt.timestamp - attempt.startedAt.timestamp) %}
                                            {% if duration < 60 %}
                                                {{ duration }}s
                                            {% else %}
                                                {{ (duration / 60)|round }}min
                                            {% endif %}
                                        {% else %}
                                            -
                                        {% endif %}
                                    </div>
                                    <small class="text-muted">Temps total</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Actions Card -->
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            {% if can_retry %}
                                <a href="{{ path('student_qcm_take', {id: qcm.id}) }}" 
                                   class="btn btn-warning">
                                    <i class="fas fa-redo me-2"></i>
                                    Nouvelle tentative
                                </a>
                            {% endif %}
                            <a href="{{ path('student_qcm_view', {id: qcm.id}) }}" 
                               class="btn btn-outline-primary">
                                <i class="fas fa-eye me-2"></i>
                                Voir le QCM
                            </a>
                            <a href="{{ path('student_course_view', {id: course.id}) }}" 
                               class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>
                                Retour au cours
                            </a>
                        </div>

                        {% if other_attempts is not empty %}
                            <hr class="my-3">
                            <h6 class="mb-2">Autres tentatives</h6>
                            <div class="list-group list-group-flush">
                                {% for other_attempt in other_attempts %}
                                <a href="{{ path('student_qcm_result', {id: qcm.id, attemptId: other_attempt.id}) }}" 
                                   class="list-group-item list-group-item-action p-2 {% if other_attempt.id == attempt.id %}active{% endif %}">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <small>Tentative #{{ other_attempt.attemptNumber }}</small>
                                            <div class="small text-muted">{{ other_attempt.completedAt|date('d/m/Y H:i') }}</div>
                                        </div>
                                        <div class="text-end">
                                            <div class="fw-bold">{{ (other_attempt.score / qcm.questions|length * 100)|round }}%</div>
                                            {% if (other_attempt.score / qcm.questions|length * 100) >= qcm.passingScore %}
                                                <small class="text-success">Réussi</small>
                                            {% else %}
                                                <small class="text-danger">Échoué</small>
                                            {% endif %}
                                        </div>
                                    </div>
                                </a>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <!-- Question Review -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-list-alt me-2"></i>
                        Révision des questions
                    </h5>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="show-explanations" checked>
                        <label class="form-check-label" for="show-explanations">
                            Afficher les explications
                        </label>
                    </div>
                </div>
                <div class="card-body">
                    {% for question in questions %}
                    <div class="question-review mb-4 {% if not loop.last %}border-bottom pb-4{% endif %}">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div>
                                <h6 class="mb-1">
                                    <span class="badge bg-secondary me-2">{{ loop.index }}</span>
                                    Question {{ loop.index }}
                                </h6>
                                <div class="question-text">{{ question.questionText|raw }}</div>
                            </div>
                            <div class="text-end">
                                {% if question.id in correct_question_ids %}
                                    <span class="badge bg-success">
                                        <i class="fas fa-check me-1"></i>
                                        Correct
                                    </span>
                                {% elseif question.id in answered_question_ids %}
                                    <span class="badge bg-danger">
                                        <i class="fas fa-times me-1"></i>
                                        Incorrect
                                    </span>
                                {% else %}
                                    <span class="badge bg-warning">
                                        <i class="fas fa-minus me-1"></i>
                                        Non répondu
                                    </span>
                                {% endif %}
                            </div>
                        </div>

                        {% if question.image %}
                            <div class="mb-3 text-center">
                                <img src="{{ asset('uploads/qcm/questions/' ~ question.image) }}" 
                                     alt="Image de la question" 
                                     class="img-fluid rounded border" 
                                     style="max-height: 200px;">
                            </div>
                        {% endif %}

                        <div class="options-review">
                            {% for option in question.questionOptions %}
                            <div class="form-check mb-2">
                                <div class="d-flex align-items-start">
                                    <div class="me-3 mt-1">
                                        {% if question.questionType == 'multiple_choice' or question.questionType == 'true_false' %}
                                            <i class="fas fa-circle 
                                                {% if option.isCorrect %}text-success
                                                {% elseif option.id in (student_answers[question.id] ?? []) %}text-danger
                                                {% else %}text-muted
                                                {% endif %}"></i>
                                        {% else %}
                                            <i class="fas fa-square 
                                                {% if option.isCorrect %}text-success
                                                {% elseif option.id in (student_answers[question.id] ?? []) %}text-danger
                                                {% else %}text-muted
                                                {% endif %}"></i>
                                        {% endif %}
                                    </div>
                                    <div class="flex-grow-1">
                                        <div class="option-content p-2 rounded
                                            {% if option.isCorrect %}border border-success bg-success bg-opacity-10
                                            {% elseif option.id in (student_answers[question.id] ?? []) %}border border-danger bg-danger bg-opacity-10
                                            {% else %}border border-light
                                            {% endif %}">
                                            
                                            {% if option.image %}
                                                <div class="mb-2">
                                                    <img src="{{ asset('uploads/qcm/options/' ~ option.image) }}" 
                                                         alt="Option image" 
                                                         class="img-fluid rounded" 
                                                         style="max-height: 80px;">
                                                </div>
                                            {% endif %}
                                            
                                            <div class="d-flex justify-content-between align-items-start">
                                                <div>{{ option.optionText|raw }}</div>
                                                <div class="ms-3">
                                                    {% if option.isCorrect %}
                                                        <span class="badge bg-success">
                                                            <i class="fas fa-check me-1"></i>
                                                            Bonne réponse
                                                        </span>
                                                    {% endif %}
                                                    {% if option.id in (student_answers[question.id] ?? []) %}
                                                        <span class="badge bg-primary">
                                                            <i class="fas fa-user me-1"></i>
                                                            Votre réponse
                                                        </span>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {% endfor %}
                        </div>

                        <!-- Explanation -->
                        {% if question.explanation %}
                            <div class="explanation mt-3" style="display: block;">
                                <div class="alert alert-info mb-0">
                                    <h6 class="alert-heading">
                                        <i class="fas fa-lightbulb me-2"></i>
                                        Explication
                                    </h6>
                                    <div>{{ question.explanation|raw }}</div>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Print/Export Actions -->
<div class="position-fixed bottom-0 end-0 p-3">
    <div class="d-flex flex-column gap-2">
        <button type="button" class="btn btn-outline-secondary btn-sm" onclick="window.print()">
            <i class="fas fa-print me-1"></i>
            Imprimer
        </button>
        <button type="button" class="btn btn-outline-primary btn-sm" id="share-results">
            <i class="fas fa-share me-1"></i>
            Partager
        </button>
    </div>
</div>

<!-- Share Modal -->
<div class="modal fade" id="share-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-share me-2"></i>
                    Partager les résultats
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="text-center mb-4">
                    <div class="display-6 fw-bold text-primary">{{ (attempt.score / qcm.questions|length * 100)|round }}%</div>
                    <div class="text-muted">{{ qcm.title }}</div>
                </div>
                
                <div class="form-group mb-3">
                    <label class="form-label">Lien de partage :</label>
                    <div class="input-group">
                        <input type="text" class="form-control" id="share-url" 
                               value="{{ url('student_qcm_result', {id: qcm.id, attemptId: attempt.id}) }}" readonly>
                        <button class="btn btn-outline-secondary" type="button" id="copy-url">
                            <i class="fas fa-copy"></i>
                        </button>
                    </div>
                </div>
                
                <div class="text-center">
                    <small class="text-muted">
                        <i class="fas fa-info-circle me-1"></i>
                        Ce lien permettra de consulter vos résultats
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Toggle explanations
    const showExplanationsCheckbox = document.getElementById('show-explanations');
    const explanations = document.querySelectorAll('.explanation');
    
    showExplanationsCheckbox.addEventListener('change', function() {
        explanations.forEach(explanation => {
            explanation.style.display = this.checked ? 'block' : 'none';
        });
    });
    
    // Share functionality
    const shareButton = document.getElementById('share-results');
    const shareModal = new bootstrap.Modal(document.getElementById('share-modal'));
    const copyButton = document.getElementById('copy-url');
    const shareUrl = document.getElementById('share-url');
    
    shareButton.addEventListener('click', function() {
        shareModal.show();
    });
    
    copyButton.addEventListener('click', function() {
        shareUrl.select();
        document.execCommand('copy');
        
        // Visual feedback
        const originalText = copyButton.innerHTML;
        copyButton.innerHTML = '<i class="fas fa-check"></i>';
        copyButton.classList.remove('btn-outline-secondary');
        copyButton.classList.add('btn-success');
        
        setTimeout(() => {
            copyButton.innerHTML = originalText;
            copyButton.classList.remove('btn-success');
            copyButton.classList.add('btn-outline-secondary');
        }, 2000);
    });
    
    // Auto-scroll to first incorrect answer on load
    const firstIncorrect = document.querySelector('.badge.bg-danger');
    if (firstIncorrect) {
        const questionReview = firstIncorrect.closest('.question-review');
        if (questionReview) {
            setTimeout(() => {
                questionReview.scrollIntoView({ behavior: 'smooth', block: 'center' });
            }, 1000);
        }
    }
});
</script>

<style>
@media print {
    .position-fixed, .btn, .modal, .sticky-top {
        display: none !important;
    }
    
    .card {
        border: 1px solid #dee2e6 !important;
        box-shadow: none !important;
    }
    
    .explanation {
        display: block !important;
    }
}
</style>
{% endblock %}
