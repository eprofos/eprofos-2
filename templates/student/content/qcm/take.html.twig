{% extends 'base.html.twig' %}

{% block title %}{{ page_title }} - {{ parent() }}{% endblock %}

{% block body %}
<div class="container-fluid" 
     data-controller="qcm-enhanced" 
     data-qcm-enhanced-time-limit-value="{{ qcm.timeLimitMinutes|default(0) }}"
     data-qcm-enhanced-total-questions-value="{{ qcm.questions|length }}"
     data-qcm-enhanced-auto-save-value="true"
     data-qcm-enhanced-auto-save-url-value="{{ path('student_qcm_take', {id: qcm.id}) }}"
     data-qcm-enhanced-qcm-id-value="{{ qcm.id }}">
    <div class="row">
        <div class="col-12">
            <!-- Header with Timer and Progress -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h3 mb-0">{{ qcm.title }}</h1>
                    <span class="text-muted">QCM en cours</span>
                </div>
                <div class="d-flex gap-3 align-items-center">
                    <!-- Progress -->
                    <div class="text-center">
                        <div class="small text-muted">Progression</div>
                        <div class="fw-bold">
                            <span id="current-question">1</span> / {{ qcm.questions|length }}
                        </div>
                    </div>
                    
                    <!-- Timer -->
                    {% if qcm.timeLimitMinutes %}
                        <div class="card border-warning">
                            <div class="card-body p-2">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-clock text-warning me-2"></i>
                                    <span class="fw-bold text-warning" data-qcm-enhanced-target="timer">{{ qcm.timeLimitMinutes }}:00</span>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>

            <div class="row">
                <div class="col-lg-8">
                    <!-- QCM Form -->
                    <form method="post" id="qcmForm" data-action="submit->qcm-enhanced#prepareSubmit">
                        <input type="hidden" name="_token" value="{{ csrf_token('qcm_submit') }}">
                        
                        {% for question in qcm.questions %}
                            <div class="card border-0 shadow-sm mb-4 question-card" 
                                 data-qcm-enhanced-target="question"
                                 id="question-{{ loop.index }}" 
                                 {% if loop.index > 1 %}style="display: none;"{% endif %}>
                                <div class="card-header bg-warning text-dark">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <h5 class="mb-0">
                                            Question {{ loop.index }} / {{ qcm.questions|length }}
                                        </h5>
                                        {% if question.points %}
                                            <span class="badge bg-primary">{{ question.points }} point{{ question.points > 1 ? 's' : '' }}</span>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="card-body">
                                    <!-- Question Text -->
                                    <div class="mb-4">
                                        <p class="fw-bold fs-5 mb-3">{{ question.text }}</p>
                                        {% if question.explanation %}
                                            <div class="alert alert-info">
                                                <i class="fas fa-info-circle me-2"></i>
                                                {{ question.explanation }}
                                            </div>
                                        {% endif %}
                                    </div>

                                    <!-- Question Image -->
                                    {% if question.image %}
                                        <div class="mb-4 text-center">
                                            <img src="{{ asset('uploads/questions/' ~ question.image) }}" 
                                                 alt="Question {{ loop.index }}"
                                                 class="img-fluid rounded shadow-sm"
                                                 style="max-height: 300px;">
                                        </div>
                                    {% endif %}

                                    <!-- Answer Options -->
                                    <div class="row">
                                        {% for option in question.options %}
                                            <div class="col-md-6 mb-3">
                                                <div class="form-check">
                                                    {% if question.type == 'multiple_choice' %}
                                                        <input class="form-check-input" 
                                                               type="checkbox" 
                                                               name="answers[{{ question.id }}][]" 
                                                               value="{{ option.id }}" 
                                                               id="option_{{ question.id }}_{{ option.id }}"
                                                               data-action="change->qcm-enhanced#answerChanged">
                                                    {% else %}
                                                        <input class="form-check-input" 
                                                               type="radio" 
                                                               name="answers[{{ question.id }}]" 
                                                               value="{{ option.id }}" 
                                                               id="option_{{ question.id }}_{{ option.id }}"
                                                               data-action="change->qcm-enhanced#answerChanged">
                                                    {% endif %}
                                                    <label class="form-check-label w-100" 
                                                           for="option_{{ question.id }}_{{ option.id }}">
                                                        <div class="border rounded p-3 h-100 d-flex align-items-center hover-bg-light">
                                                            {% if option.image %}
                                                                <img src="{{ asset('uploads/question-options/' ~ option.image) }}" 
                                                                     alt="Option {{ loop.index }}"
                                                                     class="me-3 rounded"
                                                                     style="width: 60px; height: 60px; object-fit: cover;">
                                                            {% endif %}
                                                            <div class="flex-grow-1">
                                                                <strong>{{ 'ABCD'[loop.index0] }})</strong> {{ option.text }}
                                                            </div>
                                                        </div>
                                                    </label>
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>

                                    <!-- Question Actions -->
                                    <div class="d-flex justify-content-between align-items-center mt-4">
                                        <div class="d-flex gap-2">
                                            <button type="button" 
                                                    class="btn btn-outline-warning btn-sm"
                                                    data-action="click->qcm-enhanced#markForReview">
                                                <i class="fas fa-flag me-1"></i>
                                                Marquer pour révision
                                            </button>
                                            <button type="button" 
                                                    class="btn btn-outline-danger btn-sm"
                                                    data-action="click->qcm-enhanced#clearAnswer">
                                                <i class="fas fa-eraser me-1"></i>
                                                Effacer la réponse
                                            </button>
                                        </div>
                                        
                                        <div class="d-flex gap-2">
                                            <button type="button" 
                                                    class="btn btn-outline-secondary prev-question" 
                                                    {% if loop.index == 1 %}disabled{% endif %}
                                                    data-action="click->qcm-enhanced#previousQuestion">
                                                <i class="fas fa-arrow-left me-1"></i>
                                                Question précédente
                                            </button>
                                            
                                            {% if loop.last %}
                                                <button type="button" 
                                                        class="btn btn-success"
                                                        data-qcm-enhanced-target="submitButton" 
                                                        data-action="click->qcm-enhanced#prepareSubmit">
                                                    <i class="fas fa-check me-1"></i>
                                                    Terminer le QCM
                                                </button>
                                            {% else %}
                                                <button type="button" 
                                                        class="btn btn-primary next-question"
                                                        data-action="click->qcm-enhanced#nextQuestion">
                                                    <i class="fas fa-arrow-right me-1"></i>
                                                    Question suivante
                                                </button>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </form>
                </div>

                <div class="col-lg-4">
                    <!-- Question Navigator -->
                    <div class="card border-0 shadow-sm mb-4 sticky-top" style="top: 1rem;">
                        <div class="card-header">
                            <h6 class="mb-0">Navigation des questions</h6>
                        </div>
                        <div class="card-body">
                            <div class="row g-2">
                                {% for question in qcm.questions %}
                                    <div class="col-3">
                                        <button type="button" 
                                                class="btn btn-outline-secondary btn-sm w-100" 
                                                data-qcm-enhanced-target="navigationButton"
                                                data-question="{{ loop.index }}"
                                                data-action="click->qcm-enhanced#goToQuestion"
                                                id="nav-btn-{{ loop.index }}">
                                            {{ loop.index }}
                                        </button>
                                    </div>
                                {% endfor %}
                            </div>
                            <div class="mt-3 small">
                                <div class="d-flex align-items-center mb-1">
                                    <div class="btn btn-primary btn-sm me-2" style="width: 20px; height: 20px;"></div>
                                    <span>Question actuelle</span>
                                </div>
                                <div class="d-flex align-items-center mb-1">
                                    <div class="btn btn-success btn-sm me-2" style="width: 20px; height: 20px;"></div>
                                    <span>Question répondue</span>
                                </div>
                                <div class="d-flex align-items-center mb-1">
                                    <div class="btn btn-warning btn-sm me-2" style="width: 20px; height: 20px;"></div>
                                    <span>Marqué pour révision</span>
                                </div>
                                <div class="d-flex align-items-center">
                                    <div class="btn btn-outline-secondary btn-sm me-2" style="width: 20px; height: 20px;"></div>
                                    <span>Question non répondue</span>
                                </div>
                            </div>
                            
                            <!-- Progress Bar -->
                            <div class="mt-3">
                                <div class="progress" style="height: 8px;">
                                    <div class="progress-bar bg-warning" 
                                         data-qcm-enhanced-target="progressBar"
                                         role="progressbar" 
                                         style="width: 10%" 
                                         aria-valuenow="1" 
                                         aria-valuemin="0" 
                                         aria-valuemax="{{ qcm.questions|length }}"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- QCM Info -->
                    <div class="card border-0 shadow-sm">
                        <div class="card-header">
                            <h6 class="mb-0">Informations</h6>
                        </div>
                        <div class="card-body small">
                            {% if qcm.timeLimitMinutes %}
                                <div class="mb-2">
                                    <strong>Temps limite:</strong> {{ qcm.timeLimitMinutes }} minutes
                                </div>
                            {% endif %}
                            {% if qcm.passingScore %}
                                <div class="mb-2">
                                    <strong>Score requis:</strong> {{ qcm.passingScore }}%
                                </div>
                            {% endif %}
                            <div class="mb-2">
                                <strong>Questions:</strong> {{ qcm.questions|length }}
                            </div>
                            {% if qcm.maxAttempts %}
                                <div class="mb-2">
                                    <strong>Tentatives restantes:</strong> {{ qcm.maxAttempts }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Submit Confirmation Modal -->
<div class="modal fade" id="submitModal" tabindex="-1" aria-labelledby="submitModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="submitModalLabel">Confirmer la soumission</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Êtes-vous sûr de vouloir soumettre votre QCM ?</p>
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Une fois soumis, vous ne pourrez plus modifier vos réponses.
                </div>
                <div id="unanswered-questions" class="alert alert-danger" style="display: none;">
                    <strong>Questions non répondues:</strong>
                    <span id="unanswered-list"></span>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <button type="button" class="btn btn-success" onclick="submitQCM()">
                    <i class="fas fa-paper-plane me-1"></i>
                    Soumettre définitivement
                </button>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <!-- QCM functionality is now handled by the qcm-enhanced Stimulus controller -->
{% endblock %}
