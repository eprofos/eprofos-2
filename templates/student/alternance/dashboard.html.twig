{% extends 'student/base.html.twig' %}

{% block body %}
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <h2 class="page-title">{{ page_title }}</h2>
                    <div class="page-subtitle">
                        Suivez vos missions et votre progression en alternance
                    </div>
                </div>
                <div class="col-auto ms-auto d-print-none">
                    <div class="btn-list">
                        <a href="{{ path('student_alternance_missions') }}" class="btn btn-primary">
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                <path d="M9 11l3 3l8 -8"/>
                                <path d="M20 12v6a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2v-12a2 2 0 0 1 2 -2h9"/>
                            </svg>
                            Voir mes missions
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container-xl">
        <!-- Statistics Cards -->
        <div class="row row-deck row-cards mb-4">
            <div class="col-sm-6 col-lg-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="subheader">Total missions</div>
                        </div>
                        <div class="h1 mb-3">{{ stats.total_assignments ?? 0 }}</div>
                        <div class="d-flex mb-2">
                            <div class="flex-fill">
                                <div class="progress progress-sm">
                                    <div class="progress-bar bg-primary" style="width: 100%"></div>
                                </div>
                            </div>
                        </div>
                        <div class="text-muted">Assignées</div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-lg-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="subheader">En cours</div>
                        </div>
                        <div class="h1 mb-3">{{ stats.active_assignments ?? 0 }}</div>
                        <div class="d-flex mb-2">
                            <div class="flex-fill">
                                <div class="progress progress-sm">
                                    <div class="progress-bar bg-warning" style="width: 75%"></div>
                                </div>
                            </div>
                        </div>
                        <div class="text-muted">À terminer</div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-lg-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="subheader">Terminées</div>
                        </div>
                        <div class="h1 mb-3">{{ stats.completed_assignments ?? 0 }}</div>
                        <div class="d-flex mb-2">
                            <div class="flex-fill">
                                <div class="progress progress-sm">
                                    <div class="progress-bar bg-success" style="width: 85%"></div>
                                </div>
                            </div>
                        </div>
                        <div class="text-muted">Réussies</div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-lg-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="subheader">Progression moyenne</div>
                        </div>
                        <div class="h1 mb-3">{{ stats.average_progress ?? 0 }}%</div>
                        <div class="d-flex mb-2">
                            <div class="flex-fill">
                                <div class="progress progress-sm">
                                    <div class="progress-bar bg-info" style="width: {{ stats.average_progress ?? 0 }}%"></div>
                                </div>
                            </div>
                        </div>
                        <div class="text-muted">Toutes missions</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row row-deck row-cards">
            <!-- Current Assignments -->
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Missions en cours</h3>
                        <div class="card-actions">
                            <a href="{{ path('student_alternance_missions') }}" class="btn btn-primary btn-sm">
                                Voir toutes
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        {% if assignments|length > 0 %}
                            {% for assignment in assignments|slice(0, 5) %}
                                <div class="card mb-3">
                                    <div class="card-body">
                                        <div class="row align-items-center">
                                            <div class="col">
                                                <h4 class="card-title">{{ assignment.mission.title }}</h4>
                                                <div class="text-muted">
                                                    <span class="badge bg-blue">{{ assignment.mission.termLabel }}</span>
                                                    {% set complexity_colors = {'debutant': 'green', 'intermediaire': 'yellow', 'avance': 'red'} %}
                                                    <span class="badge bg-{{ complexity_colors[assignment.mission.complexity] ?? 'secondary' }}">
                                                        {{ assignment.mission.complexityLabel }}
                                                    </span>
                                                </div>
                                                <div class="mt-2">
                                                    <small class="text-muted">
                                                        Assignée le {{ assignment.createdAt|date('d/m/Y') }}
                                                        {% if assignment.endDate %}
                                                            • Échéance : {{ assignment.endDate|date('d/m/Y') }}
                                                        {% endif %}
                                                    </small>
                                                </div>
                                            </div>
                                            <div class="col-auto">
                                                <div class="d-flex align-items-center">
                                                    <span class="me-2">{{ assignment.completionRate|round }}%</span>
                                                    <div class="progress" style="width: 100px;">
                                                        <div class="progress-bar 
                                                            {% if assignment.completionRate >= 100 %}bg-success
                                                            {% elseif assignment.completionRate >= 75 %}bg-info
                                                            {% elseif assignment.completionRate >= 50 %}bg-warning
                                                            {% else %}bg-danger{% endif %}" 
                                                            role="progressbar" 
                                                            style="width: {{ assignment.completionRate }}%">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-auto">
                                                {% if assignment.isCompleted %}
                                                    <span class="badge bg-success">Terminée</span>
                                                {% elseif assignment.isOverdue %}
                                                    <span class="badge bg-danger">En retard</span>
                                                {% else %}
                                                    <span class="badge bg-warning">En cours</span>
                                                {% endif %}
                                            </div>
                                            <div class="col-auto">
                                                <a href="{{ path('student_alternance_mission_show', {id: assignment.id}) }}" class="btn btn-primary btn-sm">
                                                    Voir
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        {% else %}
                            <div class="empty">
                                <div class="empty-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                        <path d="M9 12l2 2l4 -4"/>
                                        <path d="M21 12c0 .5 -.1 1 -.3 1.5"/>
                                    </svg>
                                </div>
                                <p class="empty-title">Aucune mission assignée</p>
                                <p class="empty-subtitle text-muted">
                                    Vos missions d'alternance apparaîtront ici une fois assignées par votre mentor.
                                </p>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>

            <!-- Quick Actions & Info -->
            <div class="col-md-4">
                <!-- Quick Actions -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Actions rapides</h3>
                    </div>
                    <div class="card-body">
                        <div class="list-group list-group-flush">
                            <a href="{{ path('student_alternance_missions') }}" class="list-group-item list-group-item-action">
                                <div class="row align-items-center">
                                    <div class="col-auto">
                                        <span class="bg-primary text-white avatar avatar-sm">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                                <path d="M9 11l3 3l8 -8"/>
                                                <path d="M20 12v6a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2v-12a2 2 0 0 1 2 -2h9"/>
                                            </svg>
                                        </span>
                                    </div>
                                    <div class="col text-truncate">
                                        <div class="text-reset d-block">Mes missions</div>
                                        <div class="d-block text-muted text-truncate mt-n1">
                                            Voir toutes mes missions d'alternance
                                        </div>
                                    </div>
                                </div>
                            </a>
                            
                            <a href="{{ path('student_alternance_assessments') }}" class="list-group-item list-group-item-action">
                                <div class="row align-items-center">
                                    <div class="col-auto">
                                        <span class="bg-success text-white avatar avatar-sm">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                                <path d="M12 2l3.09 6.26l6.91 1.01l-5 4.87l1.18 6.88l-6.18 -3.25l-6.18 3.25l1.18 -6.88l-5 -4.87l6.91 -1.01z"/>
                                            </svg>
                                        </span>
                                    </div>
                                    <div class="col text-truncate">
                                        <div class="text-reset d-block">Mes évaluations</div>
                                        <div class="d-block text-muted text-truncate mt-n1">
                                            Consulter mes évaluations de compétences
                                        </div>
                                    </div>
                                </div>
                            </a>

                            <a href="{{ path('student_alternance_meetings') }}" class="list-group-item list-group-item-action">
                                <div class="row align-items-center">
                                    <div class="col-auto">
                                        <span class="bg-info text-white avatar avatar-sm">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                                <path d="M8 7a4 4 0 1 0 8 0a4 4 0 0 0 -8 0"/>
                                                <path d="M6 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2"/>
                                            </svg>
                                        </span>
                                    </div>
                                    <div class="col text-truncate">
                                        <div class="text-reset d-block">Réunions</div>
                                        <div class="d-block text-muted text-truncate mt-n1">
                                            Voir les réunions de coordination
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Upcoming Meetings -->
                {% if upcoming_meetings|length > 0 %}
                    <div class="card mt-3">
                        <div class="card-header">
                            <h3 class="card-title">Prochaines réunions</h3>
                        </div>
                        <div class="card-body">
                            {% for meeting in upcoming_meetings %}
                                <div class="d-flex mb-3">
                                    <div class="me-3">
                                        <span class="bg-yellow text-white avatar avatar-sm">
                                            {{ meeting.date|date('d') }}
                                        </span>
                                    </div>
                                    <div class="flex-fill">
                                        <div class="font-weight-medium">{{ meeting.typeLabel }}</div>
                                        <div class="text-muted small">
                                            {{ meeting.date|date('d/m/Y à H:i') }}
                                        </div>
                                        {% if meeting.notes %}
                                            <div class="text-muted small">{{ meeting.notes|slice(0, 50) }}{% if meeting.notes|length > 50 %}...{% endif %}</div>
                                        {% endif %}
                                    </div>
                                    <div class="ms-auto">
                                        <a href="{{ path('student_alternance_meeting_show', {id: meeting.id}) }}" class="btn btn-sm btn-outline-primary">
                                            Voir
                                        </a>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}

                <!-- Recent Assessments -->
                {% if assessments|length > 0 %}
                    <div class="card mt-3">
                        <div class="card-header">
                            <h3 class="card-title">Dernières évaluations</h3>
                        </div>
                        <div class="card-body">
                            {% for assessment in assessments|slice(0, 3) %}
                                <div class="d-flex mb-3">
                                    <div class="me-3">
                                        <span class="bg-green text-white avatar avatar-sm">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="16" height="16" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                                <path d="M12 2l3.09 6.26l6.91 1.01l-5 4.87l1.18 6.88l-6.18 -3.25l-6.18 3.25l1.18 -6.88l-5 -4.87l6.91 -1.01z"/>
                                            </svg>
                                        </span>
                                    </div>
                                    <div class="flex-fill">
                                        <div class="font-weight-medium">{{ assessment.assessmentTypeLabel }}</div>
                                        <div class="text-muted small">
                                            {{ assessment.assessmentDate|date('d/m/Y') }}
                                        </div>
                                        {% if assessment.overallRating %}
                                            <div class="text-muted small">Note : {{ assessment.overallRatingLabel }}</div>
                                        {% endif %}
                                    </div>
                                    <div class="ms-auto">
                                        <a href="{{ path('student_alternance_assessment_show', {id: assessment.id}) }}" class="btn btn-sm btn-outline-primary">
                                            Voir
                                        </a>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
