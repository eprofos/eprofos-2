<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ page_title }} - EPROFOS Formateur</title>
    
    <!-- Meta tags -->
    <meta name="description" content="Connexion à la plateforme EPROFOS pour formateurs">
    
    <!-- Favicon -->
    <link rel="icon" href="{{ asset('images/favicon.ico') }}">
    
    {{ importmap('private') }}
</head>
<body class="d-flex flex-column">    
    <div class="page page-center">
        <div class="container container-tight py-4">
            <div class="text-center mb-4">
                <a href="{{ path('app_home') }}" class="navbar-brand navbar-brand-autodark">
                    <img src="{{ asset('images/logo.svg') }}" height="36" alt="EPROFOS" onerror="this.style.display='none'; this.nextElementSibling.style.display='block';">
                    <span style="display: none; font-size: 1.5rem; font-weight: bold;">EPROFOS</span>
                </a>
            </div>
            
            <div class="card card-md">
                <div class="card-body">
                    <h2 class="h2 text-center mb-4">Connexion formateur</h2>
                    
                    {% if error %}
                        <div class="alert alert-danger" role="alert">
                            <div class="d-flex">
                                <div>
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon alert-icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                        <path stroke="none" d="m0 0h24v24H0z" fill="none"/>
                                        <circle cx="12" cy="12" r="9"/>
                                        <line x1="12" y1="8" x2="12" y2="12"/>
                                        <line x1="12" y1="16" x2="12.01" y2="16"/>
                                    </svg>
                                </div>
                                <div>
                                    {{ error.messageKey|trans(error.messageData, 'security') }}
                                </div>
                            </div>
                        </div>
                    {% endif %}

                    <form method="post" autocomplete="off">
                        {% if app.request.get('_route') == 'teacher_login' %}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        {% endif %}
                        
                        <div class="mb-3">
                            <label class="form-label">Adresse email</label>
                            <input type="email" 
                                   class="form-control" 
                                   name="_username" 
                                   value="{{ last_username }}" 
                                   placeholder="votre@email.com"
                                   autocomplete="username"
                                   required>
                        </div>
                        
                        <div class="mb-2">
                            <label class="form-label">
                                Mot de passe
                                <span class="form-label-description">
                                    <a href="{{ path('teacher_forgot_password') }}">Mot de passe oublié ?</a>
                                </span>
                            </label>
                            <div class="input-group input-group-flat">
                                <input type="password" 
                                       class="form-control" 
                                       name="_password" 
                                       placeholder="Votre mot de passe"
                                       autocomplete="current-password"
                                       required>
                                <span class="input-group-text">
                                    <a href="#" class="link-secondary" title="Afficher le mot de passe" data-bs-toggle="tooltip">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                            <circle cx="12" cy="12" r="2"/>
                                            <path d="m22 12c-2.667 4.667 -6 7 -10 7s-7.333 -2.333 -10 -7c2.667 -4.667 6 -7 10 -7s7.333 2.333 10 7"/>
                                        </svg>
                                    </a>
                                </span>
                            </div>
                        </div>
                        
                        <div class="mb-2">
                            <label class="form-check">
                                <input type="checkbox" class="form-check-input" name="_remember_me">
                                <span class="form-check-label">Se souvenir de moi sur cet appareil</span>
                            </label>
                        </div>
                        
                        <div class="form-footer">
                            <button type="submit" class="btn btn-primary w-100">
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon me-2" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                    <path d="M15 8l4 4l-4 4"/>
                                    <path d="M19 12h-12"/>
                                    <path d="M7 4v16"/>
                                </svg>
                                Se connecter
                            </button>
                        </div>
                    </form>
                </div>
                
                <div class="hr-text">ou</div>
                
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <a href="{{ path('teacher_register') }}" class="btn w-100">
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon me-2" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                    <path d="M12 5l0 14"/>
                                    <path d="M5 12l14 0"/>
                                </svg>
                                Créer un compte formateur
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="text-center text-muted mt-3">
                <a href="{{ path('app_home') }}" class="text-muted">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon me-1" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                        <path d="M5 12l14 0"/>
                        <path d="M5 12l6 6"/>
                        <path d="M5 12l6 -6"/>
                    </svg>
                    Retour à l'accueil
                </a>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer footer-transparent d-print-none">
        <div class="container-xl">
            <div class="row text-center align-items-center flex-row-reverse">
                <div class="col-lg-auto ms-lg-auto">
                    <ul class="list-inline list-inline-dots mb-0">
                        <li class="list-inline-item">
                            <a href="#" class="link-secondary">Support formateurs</a>
                        </li>
                        <li class="list-inline-item">
                            <a href="#" class="link-secondary">Documentation</a>
                        </li>
                    </ul>
                </div>
                <div class="col-12 col-lg-auto mt-3 mt-lg-0">
                    <ul class="list-inline list-inline-dots mb-0">
                        <li class="list-inline-item">
                            © {{ 'now'|date('Y') }} 
                            <a href="{{ path('app_home') }}" class="link-secondary">EPROFOS</a>
                            Tous droits réservés.
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>
